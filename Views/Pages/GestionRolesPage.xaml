<Page x:Class="BacklogManager.Views.Pages.GestionRolesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:BacklogManager.Services"
      Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Actions -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock x:Name="TxtConfigurationTitle" Text="Configuration des permissions par rÃ´le" FontSize="14" 
                       FontWeight="Bold" VerticalAlignment="Center" Foreground="#1A1919"/>
            <Button x:Name="BtnActualiser" Content="ðŸ”„ Actualiser" Click="BtnActualiser_Click" Margin="20,0,0,0"
                    Background="#E0E0E0" Foreground="#1A1919" Padding="15,8" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
            <Button x:Name="BtnResetAdmin" Content="âš¡ RÃ©initialiser permissions Admin" Click="BtnResetAdmin_Click" Margin="10,0,0,0"
                    Background="#FF6B00" Foreground="White" Padding="15,8" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold"
                    ToolTip="Active TOUTES les permissions pour le rÃ´le Administrateur"/>
        </StackPanel>

        <!-- Liste des rÃ´les -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="LstRoles">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="6" Padding="20" Margin="0,0,0,15"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <!-- Nom du rÃ´le -->
                                <TextBlock Text="{Binding Nom}" FontSize="16" FontWeight="Bold" 
                                           Foreground="#00915A" Margin="0,0,0,15"/>

                                <!-- Permissions en 2 colonnes -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Colonne 1 -->
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_CreateRequests], StringFormat='ðŸ“ {0}', Mode=OneWay}" IsChecked="{Binding PeutCreerDemandes}" Margin="0,5"/>
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_Estimate], StringFormat='ðŸ’° {0}', Mode=OneWay}" IsChecked="{Binding PeutChiffrer}" Margin="0,5"/>
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_Prioritize], StringFormat='ðŸŽ¯ {0}', Mode=OneWay}" IsChecked="{Binding PeutPrioriser}" Margin="0,5"/>
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_ModifyTasks], StringFormat='âœï¸ {0}', Mode=OneWay}" IsChecked="{Binding PeutModifierTaches}" Margin="0,5"/>
                                    </StackPanel>

                                    <!-- Colonne 2 -->
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_DeleteTasks], StringFormat='ðŸ—‘ï¸ {0}', Mode=OneWay}" IsChecked="{Binding PeutSupprimerTaches}" Margin="0,5"/>
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_ManageUsers], StringFormat='ðŸ‘¥ {0}', Mode=OneWay}" IsChecked="{Binding PeutGererUtilisateurs}" Margin="0,5"/>
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_ManageReferences], StringFormat='ðŸ“š {0}', Mode=OneWay}" IsChecked="{Binding PeutGererReferentiels}" Margin="0,5"/>
                                        <CheckBox Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_ViewKPI], StringFormat='ðŸ“Š {0}', Mode=OneWay}" IsChecked="{Binding PeutVoirKPI}" Margin="0,5"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Bouton Enregistrer -->
                                <Button Content="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Roles_SaveChanges], StringFormat='ðŸ’¾ {0}', Mode=OneWay}" Click="BtnEnregistrerRole_Click"
                                        Tag="{Binding}" Margin="0,15,0,0"
                                        Background="#00915A" Foreground="White" Padding="15,10" 
                                        BorderThickness="0" Cursor="Hand" FontWeight="Bold" HorizontalAlignment="Right">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#00915A"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#007A4D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
