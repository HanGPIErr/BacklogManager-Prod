<Page x:Class="BacklogManager.Views.Pages.GestionProjetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Actions -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="âž• Nouveau projet" Click="BtnNouveauProjet_Click"
                    Background="#00915A" Foreground="White" Padding="15,8" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
            <Button Content="âœï¸ Modifier" Click="BtnModifierProjet_Click" Margin="10,0,0,0"
                    Background="#6D6D6D" Foreground="White" Padding="15,8" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
            <Button Content="ðŸ”„ Actualiser" Click="BtnActualiser_Click" Margin="10,0,0,0"
                    Background="#E0E0E0" Foreground="#1A1919" Padding="15,8" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
        </StackPanel>

        <!-- Liste projets -->
        <DataGrid x:Name="LstProjets" Grid.Row="1" AutoGenerateColumns="False" 
                  IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single"
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                  BorderThickness="1" BorderBrush="#E0E0E0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                <DataGridTextColumn Header="Date dÃ©but" Binding="{Binding DateDebut, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Date fin" Binding="{Binding DateFin, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Charge (j)" Binding="{Binding ChargeJours}" Width="100"/>
                <DataGridCheckBoxColumn Header="Actif" Binding="{Binding Actif}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
