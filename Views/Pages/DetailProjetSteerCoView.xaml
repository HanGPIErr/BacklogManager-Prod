<UserControl x:Class="BacklogManager.Views.Pages.DetailProjetSteerCoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Views.Pages"
             xmlns:services="clr-namespace:BacklogManager.Services"
             Background="#F5F7FA"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.Resources>
        <local:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="40,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Boutons Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Bouton Retour -->
                <Button Grid.Column="0" HorizontalAlignment="Left"
                        Height="40" Padding="18,0" Background="#666666" Foreground="White"
                        BorderThickness="0" Cursor="Hand" Click="BtnRetour_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â† " FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[DetailProjet_BtnBack], Mode=OneWay}" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#555555"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Bouton Timeline Projet -->
                <Button Grid.Column="2" HorizontalAlignment="Right"
                        Height="40" Padding="20,0" Background="#2196F3" Foreground="White"
                        BorderThickness="0" Cursor="Hand" Click="BtnTimeline_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“… " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[DetailProjet_Timeline], Mode=OneWay}" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Bouton Analyse IA -->
                <Button Grid.Column="4" HorizontalAlignment="Right"
                        Height="40" Padding="20,0" Background="#9C27B0" Foreground="White"
                        BorderThickness="0" Cursor="Hand" Click="BtnAnalyseIA_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ¤– " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[DetailProjet_AnalyzeAI], Mode=OneWay}" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7B1FA2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Header projet avec badge RAG - FULL WIDTH -->
            <Border Grid.Row="1" CornerRadius="12" Padding="35,25" Margin="0,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00915A" Offset="0"/>
                        <GradientStop Color="#00A566" Offset="0.5"/>
                        <GradientStop Color="#00B96E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.25" Color="#00915A"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="18"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="32" FontWeight="Bold" Foreground="White">
                        <Run Text="ðŸ“Š "/>
                        <Run x:Name="TxtNomProjet"/>
                    </TextBlock>
                    
                    <Border Grid.Row="0" Grid.Column="1" x:Name="BadgeStatutRAG"
                            CornerRadius="20" Padding="20,8" Background="#4CAF50" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtStatutRAG" FontSize="14" FontWeight="Bold" 
                                   Foreground="White" Text="GREEN"/>
                    </Border>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="14" Foreground="White" Opacity="0.9">
                        <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_ProjectPrefix], Mode=OneWay}"/>
                        <Run x:Name="TxtProjetId"/>
                        <Run Text=" â€¢ "/>
                        <Run x:Name="TxtProgramme"/>
                        <Run Text=" â€¢ "/>
                        <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_PriorityLabel], Mode=OneWay}"/>
                        <Run x:Name="TxtPriorite" FontWeight="Bold"/>
                    </TextBlock>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TxtDescription" FontSize="14" 
                               Foreground="White" Opacity="0.85" TextWrapping="Wrap" LineHeight="22"/>
                </Grid>
            </Border>

            <!-- KPIs en cards - FULL WIDTH GRID -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Avancement -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="25,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Avancement], Mode=OneWay}" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                        <TextBlock FontSize="36" FontWeight="Bold" Foreground="#2196F3" Margin="0,10,0,8">
                            <Run x:Name="TxtAvancement" Text="0"/>
                            <Run Text="%" FontSize="22"/>
                        </TextBlock>
                        <ProgressBar x:Name="BarAvancement" Height="8" Minimum="0" Maximum="100" 
                                     Value="0" Background="#E0E0E0" Foreground="#2196F3" BorderThickness="0"/>
                    </StackPanel>
                </Border>
                
                <!-- TÃ¢ches -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="25,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Tasks], Mode=OneWay}" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                        <TextBlock FontSize="36" FontWeight="Bold" Foreground="#9C27B0" Margin="0,10,0,0">
                            <Run x:Name="TxtTachesCompletes" Text="0"/>
                            <Run Text="/" FontSize="24" Foreground="#999"/>
                            <Run x:Name="TxtTachesTotal" Text="0" FontSize="24" Foreground="#999"/>
                        </TextBlock>
                        <TextBlock x:Name="TxtTachesRestantes" FontSize="11" Foreground="#666" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Ã‰quipes -->
                <Border Grid.Column="4" Background="White" CornerRadius="12" Padding="25,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Teams], Mode=OneWay}" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                        <TextBlock FontSize="36" FontWeight="Bold" Foreground="#FF9800" Margin="0,10,0,0">
                            <Run x:Name="TxtNbEquipes" Text="0"/>
                        </TextBlock>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_TeamsAssignedSuffix], Mode=OneWay}" FontSize="11" Foreground="#666" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Livraison -->
                <Border Grid.Column="6" Background="White" CornerRadius="12" Padding="25,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Delivery], Mode=OneWay}" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtTargetDelivery" FontSize="20" FontWeight="Bold" 
                                   Foreground="#F44336" Margin="0,10,0,0" Text="Q2 2026"/>
                        <TextBlock x:Name="TxtDeadlineInfo" FontSize="11" Foreground="#666" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Grid 2 colonnes Ã‰GALES - Timeline + Gains -->
            <Grid Grid.Row="3" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Timeline visuelle -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="25,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_TimelineAndDeadlines], Mode=OneWay}" FontSize="14" FontWeight="Bold" 
                                   Foreground="#333" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_DateStart], Mode=OneWay}" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                                <TextBlock x:Name="TxtDateDebut" FontSize="16" FontWeight="Bold" 
                                           Foreground="#666" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_DateEnd], Mode=OneWay}" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                                <TextBlock x:Name="TxtDateFin" FontSize="16" FontWeight="Bold" 
                                           Foreground="#666" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Margin="0,15,0,10">
                            <Border Height="10" Background="#E8EAF0" CornerRadius="5"/>
                            <Border x:Name="ProgressTemporel" Height="10" Background="#2196F3" 
                                    CornerRadius="5" HorizontalAlignment="Left" Width="0"/>
                        </Grid>
                        
                        <TextBlock x:Name="TxtProgressionTemps" FontSize="12" Foreground="#666" 
                                   TextAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Gains Temps -->
                <Border Grid.Column="2" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="2" 
                        CornerRadius="12" Padding="25,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#2196F3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_GainsTime], Mode=OneWay}" FontSize="14" Foreground="#1976D2" FontWeight="Bold" Margin="0,0,0,15"/>
                        <TextBlock x:Name="TxtGainsTemps" FontSize="26" FontWeight="Bold" 
                                   Foreground="#1565C0" TextWrapping="Wrap" TextAlignment="Center" 
                                   VerticalAlignment="Center" Margin="0,20,0,20"/>
                    </StackPanel>
                </Border>
                
                <!-- Gains Financiers -->
                <Border Grid.Column="4" Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" 
                        CornerRadius="12" Padding="25,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#4CAF50"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_GainsFinancial], Mode=OneWay}" FontSize="14" Foreground="#2E7D32" FontWeight="Bold" Margin="0,0,0,15"/>
                        <TextBlock x:Name="TxtGainsFinanciers" FontSize="26" FontWeight="Bold" 
                                   Foreground="#1B5E20" TextWrapping="Wrap" TextAlignment="Center"
                                   VerticalAlignment="Center" Margin="0,20,0,20"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Section Contributions des Ressources -->
            <Border Grid.Row="4" Background="White" CornerRadius="12" Padding="30,25" Margin="0,20,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_ContributionsResources], Mode=OneWay}" FontSize="16" FontWeight="Bold" 
                               Foreground="#333" Margin="0,0,0,20"/>
                    
                    <DataGrid x:Name="ListeContributions" AutoGenerateColumns="False" 
                              IsReadOnly="True" HeadersVisibility="Column"
                              GridLinesVisibility="None" Background="Transparent"
                              BorderThickness="0" RowHeight="50">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#666"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Padding" Value="15,10"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F9F9F9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="15,10"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Members], Mode=OneWay}" Binding="{Binding NomDeveloppeur}" 
                                                Width="*" FontSize="13" FontWeight="SemiBold"/>
                            
                            <DataGridTextColumn Header="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_TasksCompleted], Mode=OneWay}" Width="150" FontSize="13">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} / {1}">
                                        <Binding Path="TachesCompletes"/>
                                        <Binding Path="TachesTotal"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_CompletionRate], Mode=OneWay}" Binding="{Binding TauxCompletion}" 
                                                Width="140" FontSize="13" FontWeight="Bold">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_DaysEstimated], Mode=OneWay}" Binding="{Binding JoursEstimes}" 
                                                Width="150" FontSize="13" FontWeight="SemiBold"/>
                            
                            <DataGridTemplateColumn Header="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Contribution], Mode=OneWay}" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0" Height="20" Background="#E0E0E0" 
                                                    CornerRadius="10" Margin="0,0,10,0">
                                                <Border Height="20" Background="#FF9800" CornerRadius="10" 
                                                        HorizontalAlignment="Left">
                                                    <Border.Width>
                                                        <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                                            <Binding Path="PourcentageContribution"/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Border}" Path="ActualWidth"/>
                                                        </MultiBinding>
                                                    </Border.Width>
                                                </Border>
                                            </Border>
                                            
                                            <TextBlock Grid.Column="1" FontSize="13" FontWeight="Bold" 
                                                       Foreground="#FF9800" VerticalAlignment="Center">
                                                <Run Text="{Binding PourcentageContribution, StringFormat={}{0:0.0}}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
