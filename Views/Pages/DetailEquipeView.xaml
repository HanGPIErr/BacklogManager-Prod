<UserControl x:Class="BacklogManager.Views.Pages.DetailEquipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F0F2F5">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="35,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Bouton Retour -->
            <Button Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,20"
                    Height="40" Padding="16,0" Background="#666666" Foreground="White"
                    BorderThickness="0" Cursor="Hand" Click="BtnRetour_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â† " FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Retour" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Header Ã©quipe -->
            <Border Grid.Row="1" CornerRadius="10" Padding="30,25" Margin="0,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#00915A" Offset="0"/>
                        <GradientStop Color="#00A566" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.2" Color="#00915A"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" FontSize="28" FontWeight="Bold" Foreground="White">
                        <Run Text="ðŸ¢ "/>
                        <Run x:Name="TxtNomEquipe"/>
                    </TextBlock>
                    
                    <TextBlock Grid.Row="2" x:Name="TxtCodeEquipe" FontSize="14" 
                               Foreground="White" Opacity="0.9"/>
                    
                    <TextBlock Grid.Row="4" x:Name="TxtDescriptionEquipe" FontSize="14" 
                               Foreground="White" Opacity="0.85" TextWrapping="Wrap"/>
                </Grid>
            </Border>

            <!-- Section Informations gÃ©nÃ©rales -->
            <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.15" Color="#D0D0D0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="INFORMATIONS GÃ‰NÃ‰RALES" FontSize="18" FontWeight="Bold" 
                               Foreground="#00915A" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Manager -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="MANAGER" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtManager" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <!-- Contact -->
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="CONTACT" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtContact" FontSize="14" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <!-- Nombre de membres -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="MEMBRES" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="#00915A" Margin="0,5,0,0">
                                <Run x:Name="TxtNbMembres"/>
                                <Run Text=" personne(s)"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- Nombre de projets -->
                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="PROJETS ACTIFS" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="#2196F3" Margin="0,5,0,0">
                                <Run x:Name="TxtNbProjets"/>
                                <Run Text=" projet(s)"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- PÃ©rimÃ¨tre fonctionnel -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                            <TextBlock Text="PÃ‰RIMÃˆTRE FONCTIONNEL" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtPerimetre" FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Section Membres de l'Ã©quipe -->
            <Border Grid.Row="3" Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.15" Color="#D0D0D0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="MEMBRES DE L'Ã‰QUIPE" FontSize="18" FontWeight="Bold" 
                               Foreground="#00915A" Margin="0,0,0,20"/>
                    
                    <DataGrid x:Name="GridMembres" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              Background="Transparent" BorderThickness="0" RowHeight="55"
                              AlternatingRowBackground="#F9F9F9">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="ðŸ‘¤ MEMBRE" Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical" Margin="8,4">
                                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="#1A1919">
                                                <Run Text="{Binding Prenom}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding Nom}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Email}" FontSize="12" Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTemplateColumn Header="ðŸŽ¯ RÃ”LE" Width="1.2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6" Padding="10,6" Margin="4" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="Administrateur">
                                                            <Setter Property="Background" Value="#FFE0B2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="Chef de projet">
                                                            <Setter Property="Background" Value="#F3E5F5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="Business Analyst">
                                                            <Setter Property="Background" Value="#E1F5FE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="DÃ©veloppeur">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Role}" FontSize="13" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#1976D2"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="Administrateur">
                                                                <Setter Property="Foreground" Value="#E65100"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="Chef de projet">
                                                                <Setter Property="Foreground" Value="#7B1FA2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="Business Analyst">
                                                                <Setter Property="Foreground" Value="#0277BD"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="DÃ©veloppeur">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTemplateColumn Header="ðŸ“Š STATUT" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6" Padding="10,6" Margin="4" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Statut}" Value="Inactif">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Statut}" FontSize="12" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Statut}" Value="Inactif">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Foreground" Value="#495057"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="12,12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="#00915A"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F9F4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                    
                    <TextBlock x:Name="TxtAucunMembre" Text="Aucun membre assignÃ© Ã  cette Ã©quipe" 
                               FontSize="14" Foreground="#999" Margin="0,10,0,0" 
                               HorizontalAlignment="Center" Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Section Projets associÃ©s -->
            <Border Grid.Row="4" Background="White" CornerRadius="12" Padding="25"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.15" Color="#D0D0D0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="PROJETS ASSOCIÃ‰S" FontSize="18" FontWeight="Bold" 
                               Foreground="#00915A" Margin="0,0,0,20"/>
                    
                    <ItemsControl x:Name="ListeProjets">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                                        CornerRadius="8" Padding="18,15" Margin="0,0,0,12"
                                        Background="#FAFAFA" Cursor="Hand" MouseLeftButtonUp="Projet_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <Setter Property="BorderBrush" Value="#00915A"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Nom}" FontSize="15" 
                                                       FontWeight="Bold" Foreground="#1A1919"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                       Foreground="#666" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <Border CornerRadius="6" Padding="10,5" Background="#E8F5E9">
                                                <TextBlock Text="â†’ Voir" FontSize="11" 
                                                           FontWeight="Bold" Foreground="#00915A"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <TextBlock x:Name="TxtAucunProjet" Text="Aucun projet associÃ© Ã  cette Ã©quipe" 
                               FontSize="14" Foreground="#999" Margin="0,10,0,0" 
                               HorizontalAlignment="Center" Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
