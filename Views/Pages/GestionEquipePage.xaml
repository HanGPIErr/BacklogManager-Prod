<Page x:Class="BacklogManager.Views.Pages.GestionEquipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Actions -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="âš™ï¸ GÃ©rer l'Ã©quipe" Click="BtnGererEquipe_Click"
                    Background="#00915A" Foreground="White" Padding="15,8" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
            <Button Content="ðŸ”„ Actualiser" Click="BtnActualiser_Click" Margin="10,0,0,0"
                    Background="#E0E0E0" Foreground="#1A1919" Padding="15,8" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
        </StackPanel>

        <!-- Barre de recherche / filtre -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="12" Margin="0,0,0,15"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <TextBox x:Name="TxtRecherche" Grid.Column="1" 
                         TextChanged="TxtRecherche_TextChanged"
                         VerticalAlignment="Center"
                         BorderThickness="0"
                         Background="Transparent"
                         FontSize="14">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Text" Value=""/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Rechercher par nom ou rÃ´le..." 
                                                               Foreground="#999999" 
                                                               FontSize="14"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="2" Content="âœ•" Click="BtnEffacerRecherche_Click"
                        Background="Transparent" Foreground="#999999" 
                        BorderThickness="0" Cursor="Hand" 
                        FontSize="16" FontWeight="Bold"
                        Padding="8,0" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Liste Ã©quipe groupÃ©e par rÃ´le -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="LstEquipeGroupee">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,15" 
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <!-- Header du groupe -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="{Binding CouleurRole}" 
                                            CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                                        <TextBlock Text="{Binding Icone}" FontSize="16" Foreground="White"/>
                                    </Border>
                                    
                                    <TextBlock Grid.Column="1" Text="{Binding NomRole}" 
                                               FontSize="16" FontWeight="Bold" Foreground="#1A1919" 
                                               VerticalAlignment="Center"/>
                                    
                                    <Border Grid.Column="2" Background="#F0F0F0" CornerRadius="12" Padding="10,4">
                                        <TextBlock FontSize="12" FontWeight="Bold" Foreground="#00915A">
                                            <Run Text="{Binding NombreMembres, Mode=OneWay}"/>
                                            <Run Text=" membre(s)"/>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                                
                                <!-- Liste des membres -->
                                <ItemsControl ItemsSource="{Binding Membres}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FAFAFA" CornerRadius="4" Padding="10" Margin="0,0,0,5"
                                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Initiales -->
                                                    <Border Grid.Column="0" Background="#00915A" Width="40" Height="40" 
                                                            CornerRadius="20" HorizontalAlignment="Left">
                                                        <TextBlock Text="{Binding Initiales}" FontSize="14" FontWeight="Bold" 
                                                                   Foreground="White" HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Nom -->
                                                    <TextBlock Grid.Column="1" Text="{Binding Nom}" FontSize="14" 
                                                               FontWeight="SemiBold" VerticalAlignment="Center" 
                                                               Margin="10,0,0,0"/>
                                                    
                                                    <!-- Statut actif -->
                                                    <Border Grid.Column="2" CornerRadius="3" Padding="8,3" HorizontalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Actif}" Value="False">
                                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="11" FontWeight="Bold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="âœ… Actif"/>
                                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Actif}" Value="False">
                                                                            <Setter Property="Text" Value="âŒ Inactif"/>
                                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
