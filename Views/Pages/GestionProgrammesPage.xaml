<Page x:Class="BacklogManager.Views.Pages.GestionProgrammesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:BacklogManager.Services"
      Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Actions -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button x:Name="BtnNouveauProgramme" Content="âž• Nouveau programme" Click="BtnNouveauProgramme_Click"
                    Background="#00915A" Foreground="White" Padding="18,10" 
                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold" FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007A4D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="BtnActualiser" Content="ðŸ”„ Actualiser" Click="BtnActualiser_Click" Margin="10,0,0,0"
                    Background="#6C757D" Foreground="White" Padding="18,10" 
                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold" FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Liste des programmes -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="LstProgrammes">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,20,20" 
                                Width="350" BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand"
                                MouseLeftButtonDown="Programme_Click">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
                            </Border.Effect>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00915A"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Nom du programme -->
                                <TextBlock Grid.Row="0" Text="{Binding Nom}" 
                                           FontSize="18" FontWeight="Bold" Foreground="#333333"/>

                                <!-- Code du programme (badge) -->
                                <Border Grid.Row="1" Background="#F0F0F0" CornerRadius="4" 
                                        Padding="8,4" HorizontalAlignment="Left" Margin="0,8,0,0">
                                    <TextBlock Text="{Binding Code}" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#666666"/>
                                </Border>

                                <!-- Description -->
                                <TextBlock Grid.Row="2" Text="{Binding Description}" 
                                           FontSize="13" Foreground="#666666" TextWrapping="Wrap" 
                                           Margin="0,12,0,0" MaxHeight="60" TextTrimming="CharacterEllipsis"/>

                                <!-- SÃ©parateur -->
                                <Border Grid.Row="3" Height="1" Background="#E0E0E0" Margin="0,15,0,15"/>

                                <!-- Responsable -->
                                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="ðŸ‘¤ " FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ResponsableNom}" FontSize="13" 
                                               Foreground="#888888" FontStyle="Italic" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Statistiques -->
                                <Grid Grid.Row="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Nombre de projets -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“Š " FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock FontSize="14" VerticalAlignment="Center">
                                            <Run Text="{Binding NombreProjets}" FontWeight="Bold" Foreground="#00915A"/>
                                            <Run Text=" " Foreground="#888888"/>
                                            <Run Text="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Programs_Projects], Mode=OneWay}" Foreground="#888888"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Statut global -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="ðŸš¦ " FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding StatutGlobal}" FontSize="14" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Foreground="#00915A"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
