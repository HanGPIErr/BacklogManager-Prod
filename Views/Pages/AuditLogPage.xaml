<Page x:Class="BacklogManager.Views.Pages.AuditLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Background="#F5F5F5">
    <Page.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtres -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,15" 
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" BlurRadius="8" ShadowDepth="1" Opacity="0.3" Direction="270"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="ðŸ” Filtres" FontSize="16" FontWeight="Bold" 
                           Foreground="#1A1919" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="ðŸ‘¤ Utilisateur" FontWeight="SemiBold" 
                                   Foreground="#666666" Margin="0,0,0,5"/>
                        <ComboBox x:Name="CmbUtilisateur" DisplayMemberPath="Username" 
                                  SelectionChanged="FiltreChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0">
                        <TextBlock Text="ðŸ“… Date dÃ©but" FontWeight="SemiBold" 
                                   Foreground="#666666" Margin="0,0,0,5"/>
                        <DatePicker x:Name="DpDateDebut" SelectedDateChanged="FiltreChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5,0">
                        <TextBlock Text="ðŸ“… Date fin" FontWeight="SemiBold" 
                                   Foreground="#666666" Margin="0,0,0,5"/>
                        <DatePicker x:Name="DpDateFin" SelectedDateChanged="FiltreChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                        <TextBlock Text="âš¡ Action" FontWeight="SemiBold" 
                                   Foreground="#666666" Margin="0,0,0,5"/>
                        <ComboBox x:Name="CmbAction" SelectionChanged="FiltreChanged">
                            <ComboBoxItem Content="Toutes" IsSelected="True"/>
                            <ComboBoxItem Content="CREATE"/>
                            <ComboBoxItem Content="UPDATE"/>
                            <ComboBoxItem Content="DELETE"/>
                            <ComboBoxItem Content="LOGIN"/>
                            <ComboBoxItem Content="LOGOUT"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" BlurRadius="8" ShadowDepth="1" Opacity="0.3" Direction="270"/>
            </Border.Effect>
            <DataGrid x:Name="DgAuditLogs" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#FAFAFA"
                      RowBackground="White"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      BorderThickness="0"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="15">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ðŸ“… Date" 
                                        Binding="{Binding DateAction, StringFormat='dd/MM/yyyy HH:mm:ss'}" 
                                        Width="140" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="ðŸ‘¤ Utilisateur" Binding="{Binding Username}" Width="110"/>
                    <DataGridTextColumn Header="âš¡ Action" Binding="{Binding Action}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Action}" Value="CREATE">
                                        <Setter Property="Foreground" Value="#00915A"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Action}" Value="UPDATE">
                                        <Setter Property="Foreground" Value="#FF9800"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Action}" Value="DELETE">
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Action}" Value="LOGIN">
                                        <Setter Property="Foreground" Value="#2196F3"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Action}" Value="LOGOUT">
                                        <Setter Property="Foreground" Value="#95A5A6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="ðŸ“¦ Type" Binding="{Binding EntityType}" Width="120"/>
                    <DataGridTextColumn Header="ðŸ”‘ ID" Binding="{Binding EntityId}" Width="70"/>
                    <DataGridTextColumn Header="ðŸ“ DÃ©tails" Binding="{Binding Details}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Boutons -->
        <Border Grid.Row="2" Background="White" Padding="15" Margin="0,15,0,0" 
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" BlurRadius="8" ShadowDepth="1" Opacity="0.3" Direction="270"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnExporterCSV" Content="ðŸ’¾ Exporter CSV" 
                        Background="#00915A" Foreground="White"
                        FontSize="14" FontWeight="SemiBold" Padding="20,10" Margin="0,0,10,0"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnExporterCSV_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="BtnActualiser" Content="ðŸ”„ Actualiser" 
                        Background="#2196F3" Foreground="White"
                        FontSize="14" FontWeight="SemiBold" Padding="20,10"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnActualiser_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
