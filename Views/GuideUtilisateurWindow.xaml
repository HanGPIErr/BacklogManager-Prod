<Window x:Class="BacklogManager.Views.GuideUtilisateurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BacklogManager.Services"
        Title="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Guide_Title], StringFormat='{}{0} üéØ'}"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">
    
    <Grid>
        <!-- Header -->
        <Border Background="#00915A" Height="80" VerticalAlignment="Top">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Bouton Retour -->
                <Button Grid.Column="0" Content="‚Üê Retour" Padding="12,8" Margin="0,0,20,0"
                        Background="#1A1919" Foreground="White" FontSize="13" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand" Click="BtnRetour_Click" VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2A2A2A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtGuideTitle" Text="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Guide_Title]}" FontSize="24" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="TxtRole" FontSize="14" Foreground="#E8F5E9" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content avec Caramel et Flopy -->
        <Grid Margin="0,80,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Caramel et Flopy + Questions √† gauche -->
            <Border Grid.Column="0" Background="White" Padding="15" Margin="20,20,10,20" 
                    CornerRadius="12" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="#00915A"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Caramel & Flopy -->
                    <Image x:Name="ImgGuide"
                           Source="pack://application:,,,/Images/agent-project-and-change.png" 
                           Width="120" Height="120" 
                           Stretch="Uniform"
                           Margin="0,0,0,10"/>
                    <TextBlock x:Name="TxtAgentName" Text="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Guide_AgentName], StringFormat='üéØ {0}'}"
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#00915A"
                               TextAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtGuideSubtitle" Text="{Binding Source={x:Static local:LocalizationService.Instance}, Path=[Guide_Subtitle]}" 
                               FontSize="10" 
                               Foreground="#666"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>

                    <!-- Questions pr√©d√©finies -->
                    <TextBlock Text="‚ùì Questions rapides" 
                               FontSize="12" 
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,0,0,10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="380">
                        <StackPanel x:Name="QuestionsPanel">
                            <!-- Les questions seront g√©n√©r√©es dynamiquement -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Zone de conversation √† droite -->
            <Border Grid.Column="1" Background="White" Padding="20" Margin="10,20,20,20" 
                    CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Message de bienvenue -->
                    <Border Grid.Row="0" Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#00915A">
                                    <Run Text="üéØ Agent Project &amp; Change - Votre assistant de pilotage"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#666" Margin="0,8,0,0" TextWrapping="Wrap">
                                    S√©lectionnez une question √† gauche pour obtenir des r√©ponses structur√©es et des recommandations adapt√©es √† votre r√¥le. Nous vous accompagnons dans le pilotage efficace de vos projets.
                                </TextBlock>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Content="üí¨ Discuter avec l'Agent" Padding="12,8" FontSize="12" 
                                    Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand"
                                    VerticalAlignment="Center" Margin="10,0,0,0"
                                    Click="OpenAgentChat_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Zone de r√©ponse scrollable -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ConversationPanel" Margin="0,0,10,0">
                            <!-- Les r√©ponses de Caramel et Flopy appara√Ætront ici -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
