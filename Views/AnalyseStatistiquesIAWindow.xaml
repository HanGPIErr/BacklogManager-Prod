<Window x:Class="BacklogManager.Views.AnalyseStatistiquesIAWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Analyse IA - Statistiques" Height="750" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="25" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="/Images/agent-project-and-change.png" 
                       Width="50" Height="50" Margin="0,0,15,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtAgentTitle" Text="Agent Project &amp; Change" 
                               FontSize="20" FontWeight="Bold" Foreground="#252423"/>
                    <TextBlock x:Name="TxtAgentSubtitle" Text="Analyse des statistiques et tendances" 
                               FontSize="13" Foreground="#666666" Margin="0,3,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25">
            <StackPanel>
                <!-- PÃ©riode analysÃ©e -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TxtTitlePeriode" Text="ðŸ“… PÃ©riode AnalysÃ©e" FontSize="15" FontWeight="Bold" Foreground="#00915A" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtPeriode" FontSize="13" Foreground="#666666" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Score global -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" x:Name="BorderScore" Background="#4CAF50" 
                                Width="80" Height="80" CornerRadius="40" Margin="0,0,20,0">
                            <TextBlock x:Name="TxtScore" FontSize="32" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtTitlePerformanceScore" Text="Score de Performance" FontSize="16" FontWeight="Bold" Foreground="#252423"/>
                            <TextBlock x:Name="TxtScoreDescription" FontSize="13" Foreground="#666666" 
                                       TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Vue d'ensemble -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TxtTitleOverview" Text="ðŸ“Š Vue d'Ensemble" FontSize="15" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtVueEnsemble" FontSize="13" Foreground="#444444" 
                                   TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Performance par dÃ©veloppeur -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TxtTitleDevPerformance" Text="ðŸ‘¥ Performance par DÃ©veloppeur" FontSize="15" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtPerformanceDev" FontSize="13" Foreground="#444444" 
                                   TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Tendances et patterns -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TxtTitleTrends" Text="ðŸ“ˆ Tendances et Patterns" FontSize="15" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtTendances" FontSize="13" Foreground="#444444" 
                                   TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Recommandations -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TxtTitleRecommendations" Text="ðŸ’¡ Recommandations" FontSize="15" FontWeight="Bold" 
                                   Foreground="#667eea" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtRecommandations" FontSize="13" Foreground="#444444" 
                                   TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Actions prioritaires -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TxtTitlePriorityActions" Text="ðŸŽ¯ Actions Prioritaires" FontSize="15" FontWeight="Bold" 
                                   Foreground="#FF6F00" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtActions" FontSize="13" Foreground="#444444" 
                                   TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Overlay de chargement -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="2" Background="#CC000000" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ¤–" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotation" CenterX="24" CenterY="24"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360" Duration="0:0:2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock x:Name="TxtLoadingAnalyzing" Text="Agent analyse les statistiques..." 
                          FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TxtLoadingWait" Text="Cela peut prendre quelques instants..." 
                          FontSize="12" Foreground="#CCCCCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
