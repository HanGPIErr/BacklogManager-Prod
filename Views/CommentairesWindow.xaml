<Window x:Class="BacklogManager.Views.CommentairesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commentaires" Height="600" Width="600" 
        WindowStartupLocation="CenterOwner" Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tÃªte -->
        <Border Grid.Row="0" Background="#00A651" Padding="20">
            <StackPanel>
                <TextBlock Text="COMMENTAIRES" FontSize="20" 
                          FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="TxtNbCommentaires" Text="0 commentaire(s)" 
                          FontSize="12" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Liste des commentaires -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,15">
            <ItemsControl x:Name="ListeCommentaires">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                               CornerRadius="5" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding Auteur}" 
                                              FontWeight="Bold" FontSize="13" Foreground="#00A651"/>
                                    <TextBlock Grid.Column="1" Text="{Binding DateCreation}" 
                                              FontSize="11" Foreground="#999999"/>
                                </Grid>
                                
                                <TextBlock Text="{Binding Texte}" TextWrapping="Wrap" 
                                          FontSize="13" Foreground="#333333"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Nouveau commentaire -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
               Padding="20,15">
            <StackPanel>
                <TextBlock Text="AJOUTER UN COMMENTAIRE" FontWeight="Bold" 
                          FontSize="12" Margin="0,0,0,8"/>
                <TextBox x:Name="TxtNouveauCommentaire" Height="80" 
                        TextWrapping="Wrap" AcceptsReturn="True" 
                        VerticalScrollBarVisibility="Auto" Padding="8" FontSize="13"/>
            </StackPanel>
        </Border>
        
        <!-- Boutons -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
               Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Fermer" Width="100" Height="35" Margin="0,0,10,0"
                       Background="#E0E0E0" Foreground="#333333" BorderThickness="0" 
                       FontSize="13" FontWeight="Bold" Cursor="Hand" Click="OnFermer"/>
                <Button x:Name="BtnAjouter" Content="Ajouter" Width="100" Height="35" 
                       Background="#00A651" Foreground="White" BorderThickness="0" 
                       FontSize="13" FontWeight="Bold" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
