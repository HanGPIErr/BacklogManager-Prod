<Window x:Class="BacklogManager.Views.GestionEquipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion de l'Ã‰quipe" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="BNPButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00915A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007A4D"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource BNPButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BNPButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Border Height="70" VerticalAlignment="Top" Background="#00915A">
            <StackPanel VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="ðŸ§‘â€ðŸ’¼ GESTION DE L'Ã‰QUIPE" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Ajouter, modifier ou supprimer des dÃ©veloppeurs" 
                           FontSize="12" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20,90,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Add/Edit Section -->
            <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="6" 
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom du dÃ©veloppeur" 
                               FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtNomDev" Grid.Row="1" Grid.Column="0"
                             FontSize="14" Padding="10" Height="36"
                             BorderBrush="#DDDDDD" BorderThickness="1"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Initiales" 
                               FontSize="12" Foreground="#666" Margin="10,0,0,5"/>
                    <TextBox x:Name="TxtInitiales" Grid.Row="1" Grid.Column="1"
                             FontSize="14" Padding="10" Height="36" Margin="10,0,0,0"
                             BorderBrush="#DDDDDD" BorderThickness="1" MaxLength="3"/>

                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="BtnAjouter" Content="âž• Ajouter" 
                                Style="{StaticResource BNPButtonStyle}" 
                                Click="BtnAjouter_Click" Width="100"/>
                        <Button x:Name="BtnModifier" Content="âœï¸ Modifier" 
                                Style="{StaticResource BNPButtonStyle}" 
                                Click="BtnModifier_Click" Width="100" Margin="8,0,0,0"
                                Visibility="Collapsed"/>
                        <Button x:Name="BtnAnnuler" Content="âœ–ï¸ Annuler" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Click="BtnAnnuler_Click" Width="100" Margin="8,0,0,0"
                                Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Liste des dÃ©veloppeurs -->
            <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="15,10" 
                            BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="DÃ‰VELOPPEURS" FontWeight="Bold" 
                                       FontSize="12" Foreground="#666"/>
                            <TextBlock Grid.Column="1" x:Name="TxtCountDevs" Text="0 dev(s)" 
                                       FontSize="12" Foreground="#666"/>
                        </Grid>
                    </Border>

                    <!-- Liste -->
                    <ListBox x:Name="LstDevs" Grid.Row="1" 
                             BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="LstDevs_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15,10" BorderBrush="#EEEEEE" 
                                        BorderThickness="0,0,0,1" Background="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Nom}" FontSize="14" 
                                                       FontWeight="Medium" Foreground="#1A1919"/>
                                            <TextBlock FontSize="11" Foreground="#999" Margin="0,2,0,0">
                                                <Run Text="ID:"/>
                                                <Run Text="{Binding Id}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="âœï¸" ToolTip="Modifier"
                                                    Style="{StaticResource BNPButtonStyle}"
                                                    Width="36" Height="36" Padding="0"
                                                    Click="BtnEdit_Click" Tag="{Binding}"/>
                                            <Button Content="ðŸ—‘ï¸" ToolTip="Supprimer"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Width="36" Height="36" Padding="0" Margin="8,0,0,0"
                                                    Click="BtnDelete_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Fermer" Style="{StaticResource SecondaryButtonStyle}" 
                        Click="BtnFermer_Click" Width="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
