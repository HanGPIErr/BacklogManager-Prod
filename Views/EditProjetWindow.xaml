<Window x:Class="BacklogManager.Views.EditProjetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Projet" 
        Width="650" Height="580" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="550"
        Background="#F5F5F5">
    <Border Background="White" Margin="15" CornerRadius="8" 
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <Border Grid.Row="0" Background="#00915A" CornerRadius="6" Padding="15,10" Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtTitre" Text="Informations Projet" 
                               FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Formulaire -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="5">
                <StackPanel>
                    <!-- Nom du projet -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Nom du projet *" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <TextBox x:Name="TxtNomProjet" Padding="12,10" FontSize="14" 
                                     BorderBrush="#CCCCCC" BorderThickness="1" Height="42"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Description -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ“„ Description" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <TextBox x:Name="TxtDescription" Padding="12,10" FontSize="14" 
                                     BorderBrush="#CCCCCC" BorderThickness="1" 
                                     Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>
                            <TextBlock Text="DÃ©crivez briÃ¨vement l'objectif et le pÃ©rimÃ¨tre du projet" 
                                       FontSize="11" Foreground="#999999" Margin="0,5,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- Dates du projet -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Date dÃ©but -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ“… Date dÃ©but" FontWeight="Bold" FontSize="13" 
                                           Foreground="#333333" Margin="0,0,0,8"/>
                                <DatePicker x:Name="DpDateDebut" Padding="10" FontSize="14" 
                                            BorderBrush="#CCCCCC" BorderThickness="1" Height="42"
                                            VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Date fin -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ðŸ Date fin prÃ©vue" FontWeight="Bold" FontSize="13" 
                                           Foreground="#333333" Margin="0,0,0,8"/>
                                <DatePicker x:Name="DpDateFinPrevue" Padding="10" FontSize="14" 
                                            BorderBrush="#CCCCCC" BorderThickness="1" Height="42"
                                            VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Statut actif -->
                    <Border Background="#E8F5E9" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <CheckBox x:Name="ChkActif" Content="âœ… Projet actif" 
                                      IsChecked="True" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#2E7D32" VerticalAlignment="Center"/>
                            <TextBlock Text="âš ï¸ DÃ©cochez pour archiver le projet" 
                                       FontSize="11" Foreground="#E65100" 
                                       FontStyle="Italic" Margin="25,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Message d'erreur -->
                    <Border x:Name="BrdErreur" Background="#FFEBEE" CornerRadius="4" Padding="12" 
                            Margin="0,5,0,0" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="16" VerticalAlignment="Top" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtErreur" Text="" Foreground="#C62828" 
                                       FontSize="13" TextWrapping="Wrap" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Boutons -->
            <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="6" Padding="15" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Enregistrer" Click="BtnEnregistrer_Click"
                            Background="#00915A" Foreground="White" Padding="25,12" 
                            BorderThickness="0" Cursor="Hand" FontWeight="Bold" 
                            FontSize="14" Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007A4A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="âŒ Annuler" Click="BtnAnnuler_Click"
                            Background="#E0E0E0" Foreground="#1A1919" Padding="25,12" 
                            BorderThickness="0" Cursor="Hand" FontWeight="Bold" FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
