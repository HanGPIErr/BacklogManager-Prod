<UserControl x:Class="BacklogManager.Views.BacklogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Domain"
             Background="#F5F5F5">
    <Grid Margin="20">
        <!-- Main Content Area - Full Width -->
        <Border Background="White" CornerRadius="8" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="Gray"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Tab-like Navigation -->
                <Border Grid.Row="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Navigation Tabs -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="BtnVueTaches" Content="ðŸ“‹ TÃ¢ches" 
                                    Background="#00915A" Foreground="White" 
                                    FontSize="14" FontWeight="SemiBold" Padding="20,10"
                                    Margin="0,0,8,0" BorderThickness="0" Cursor="Hand"
                                    Click="BtnVueTaches_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007A4A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnVueProjets" Content="ðŸ“ Projets" 
                                    Background="#E0E0E0" Foreground="#6D6D6D" 
                                    FontSize="14" FontWeight="Normal" Padding="20,10"
                                    BorderThickness="0" Cursor="Hand"
                                    Click="BtnVueProjets_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D0D0D0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:Name="BtnNouveauProjet" Content="âž• Nouveau Projet" 
                                    Visibility="{Binding PeutCreerProjetsVisibility}"
                                    Command="{Binding NewProjetCommand}"
                                    Height="40" Margin="0,0,8,0" Background="#00915A" Foreground="White" BorderThickness="0"
                                    FontSize="13" FontWeight="SemiBold" Cursor="Hand" Padding="15,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007A4A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnNouvelleTache" Content="âž• Nouvelle TÃ¢che" 
                                    Visibility="{Binding PeutCreerTachesVisibility}"
                                    Command="{Binding NewCommand}"
                                    Height="40" Background="#00915A" Foreground="White" BorderThickness="0"
                                    FontSize="13" FontWeight="SemiBold" Cursor="Hand" Padding="15,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007A4A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Content Area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: Search and Filters -->
                    <Border Grid.Column="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="20">
                    <!-- Left Panel: Search and Filters -->
                    <Border Grid.Column="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Search Bar -->
                            <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="12,10" Margin="0,0,0,15"
                                    BorderBrush="#DDD" BorderThickness="1">
                                <Grid>
                                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                             FontSize="13" BorderThickness="0" Background="Transparent"
                                             VerticalContentAlignment="Center" Padding="25,0,0,0"/>
                                    <TextBlock Text="ðŸ”  Rechercher..." IsHitTestVisible="False" 
                                               Foreground="#999" FontSize="13" VerticalAlignment="Center" Margin="2,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Filters Section -->
                            <Expander Grid.Row="1" Header="ðŸ”§ Filtres avancÃ©s" IsExpanded="False" Margin="0,0,0,15">
                                <Expander.Style>
                                    <Style TargetType="Expander">
                                        <Setter Property="HeaderTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="13" Foreground="#666"/>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Expander.Style>
                                <StackPanel Margin="0,10,0,0">
                                    <!-- Type Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ“ Type" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding Source={x:Type local:TypeDemande}, Converter={StaticResource EnumToCollectionConverter}}"
                                                  SelectedItem="{Binding SelectedType}" 
                                                  Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                  Background="White"/>
                                    </StackPanel>
                                    
                                    <!-- PrioritÃ© Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="âš¡ PrioritÃ©" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding Source={x:Type local:Priorite}, Converter={StaticResource EnumToCollectionConverter}}"
                                                  SelectedItem="{Binding SelectedPriorite}" 
                                                  Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                  Background="White"/>
                                    </StackPanel>
                                    
                                    <!-- Statut Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ“Š Statut" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding Source={x:Type local:Statut}, Converter={StaticResource EnumToCollectionConverter}}"
                                                  SelectedItem="{Binding SelectedStatut}" 
                                                  Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                  Background="White"/>
                                    </StackPanel>
                                    
                                    <!-- DÃ©veloppeur Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ‘¤ DÃ©veloppeur" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding Devs}" DisplayMemberPath="Nom"
                                                  SelectedValue="{Binding SelectedDevId}" SelectedValuePath="Id" 
                                                  Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                  Background="White"/>
                                    </StackPanel>

                                    <!-- Projet Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ“ Projet" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding Projets}" DisplayMemberPath="Nom"
                                                  SelectedValue="{Binding SelectedProjetId}" SelectedValuePath="Id" 
                                                  Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                  Background="White"/>
                                    </StackPanel>

                                    <!-- Clear Filters Button -->
                                    <Button Content="ðŸ”„ Effacer les filtres" Command="{Binding ClearFiltersCommand}"
                                            Height="36" Margin="0,5,0,0" Background="White" BorderBrush="#DDD" BorderThickness="1"
                                            FontSize="12" Cursor="Hand" Foreground="#666">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Expander>

                            <!-- Count Stats -->
                            <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="12" 
                                    BorderBrush="#DDD" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock FontSize="11" Foreground="#666">
                                        <Run Text="ðŸ“Š"/>
                                        <Run FontWeight="Bold" Text="{Binding BacklogItems.Count, Mode=OneWay}"/>
                                        <Run Text="tÃ¢che(s) affichÃ©e(s)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Right Panel: List View -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="13" BorderThickness="0" Background="Transparent"
                                 VerticalContentAlignment="Center" Padding="22,0,0,0"/>
                        <TextBlock Text="ðŸ”  Rechercher..." IsHitTestVisible="False" 
                                   Foreground="#999" FontSize="13" VerticalAlignment="Center" Margin="2,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Filters Expander -->
                <Expander Grid.Row="2" Header="ðŸ”§ Filtres" IsExpanded="False" Margin="0,0,0,12">
                    <Expander.Style>
                        <Style TargetType="Expander">
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="12" Foreground="#666"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Expander.Style>
                    <StackPanel Margin="0,8,0,0">
                        <Grid Margin="0,0,0,8">
                            <ComboBox ItemsSource="{Binding Source={x:Type local:TypeDemande}, Converter={StaticResource EnumToCollectionConverter}}"
                                      SelectedItem="{Binding SelectedType}" 
                                      Height="34" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="8,0">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="White"/>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                            <TextBlock Text="ðŸ“ Type" IsHitTestVisible="False" 
                                       Foreground="#999" FontSize="11" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedType}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                            <ComboBox ItemsSource="{Binding Source={x:Type local:Priorite}, Converter={StaticResource EnumToCollectionConverter}}"
                                      SelectedItem="{Binding SelectedPriorite}" 
                                      Height="34" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="8,0"/>
                            <TextBlock Text="âš¡ PrioritÃ©" IsHitTestVisible="False" 
                                       Foreground="#999" FontSize="11" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPriorite}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                            <ComboBox ItemsSource="{Binding Source={x:Type local:Statut}, Converter={StaticResource EnumToCollectionConverter}}"
                                      SelectedItem="{Binding SelectedStatut}" 
                                      Height="34" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="8,0"/>
                            <TextBlock Text="ðŸ“Š Statut" IsHitTestVisible="False" 
                                       Foreground="#999" FontSize="11" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedStatut}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                            <ComboBox ItemsSource="{Binding Devs}" DisplayMemberPath="Nom"
                                      SelectedValue="{Binding SelectedDevId}" SelectedValuePath="Id" 
                                      Height="34" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="8,0"/>
                            <TextBlock Text="ðŸ‘¤ DÃ©veloppeur" IsHitTestVisible="False" 
                                       Foreground="#999" FontSize="11" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDevId}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <ComboBox ItemsSource="{Binding Projets}" DisplayMemberPath="Nom"
                                      SelectedValue="{Binding SelectedProjetId}" SelectedValuePath="Id" 
                                      Height="34" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="8,0"/>
                            <TextBlock Text="ðŸ“ Projet" IsHitTestVisible="False" 
                                       Foreground="#999" FontSize="11" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProjetId}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Button Content="ðŸ”„ Effacer" Command="{Binding ClearFiltersCommand}"
                                Height="32" Margin="0,4,0,0" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="1"
                                FontSize="11" Cursor="Hand" Foreground="#666">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EEEEEE"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Expander>

                    <!-- Right Panel: List View -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="20">
                        <ItemsControl ItemsSource="{Binding BacklogItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                            CornerRadius="8" Padding="20" Margin="0,0,0,12" Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="#00915A"/>
                                                        <Setter Property="Background" Value="#FAFAFA"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                          Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Left: Task Info -->
                                            <StackPanel Grid.Column="0">
                                                <!-- Title -->
                                                <TextBlock Text="{Binding Item.Titre}" 
                                                           FontWeight="SemiBold" FontSize="15" TextWrapping="Wrap"
                                                           Foreground="#1A1919" Margin="0,0,0,8"/>
                                                
                                                <!-- Badges Row -->
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                    <!-- Type Badge -->
                                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                                        <TextBlock FontSize="10" FontWeight="SemiBold" Foreground="#1976D2">
                                                            <Run Text="ðŸ“"/>
                                                            <Run Text="{Binding Item.TypeDemande}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    
                                                    <!-- Priority Badge -->
                                                    <Border CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Item.Priorite}" Value="Urgent">
                                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Priorite}" Value="Haute">
                                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Priorite}" Value="Normale">
                                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Priorite}" Value="Basse">
                                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="10" FontWeight="SemiBold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="#F57C00"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Item.Priorite}" Value="Urgent">
                                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Item.Priorite}" Value="Haute">
                                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Item.Priorite}" Value="Normale">
                                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Item.Priorite}" Value="Basse">
                                                                            <Setter Property="Foreground" Value="#757575"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                            <Run Text="âš¡"/>
                                                            <Run Text="{Binding Item.Priorite}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    
                                                    <!-- Status Badge -->
                                                    <Border CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Item.Statut}" Value="AFaire">
                                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Statut}" Value="EnCours">
                                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Statut}" Value="EnTest">
                                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Statut}" Value="Termine">
                                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="10" FontWeight="SemiBold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="#757575"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Item.Statut}" Value="AFaire">
                                                                            <Setter Property="Foreground" Value="#757575"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Item.Statut}" Value="EnCours">
                                                                            <Setter Property="Foreground" Value="#1976D2"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Item.Statut}" Value="EnTest">
                                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Item.Statut}" Value="Termine">
                                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                            <Run Text="ðŸ“Š"/>
                                                            <Run Text="{Binding Item.Statut}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                                
                                                <!-- Meta Info -->
