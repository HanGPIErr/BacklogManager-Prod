<Window x:Class="BacklogManager.Views.ChatHistoriqueAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="ChatHistoryWindow"
        Title="Historique des Conversations - Agent IA" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner" Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Liste des conversations -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E1E1E1" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#00915A" Padding="20,15">
                    <StackPanel>
                        <TextBlock x:Name="TxtUsers" Text="ðŸ‘¥ Utilisateurs" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding NbUtilisateurs, StringFormat='{}{0} utilisateur(s)'}" 
                                   FontSize="12" Foreground="#E0E0E0" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Liste des utilisateurs -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Utilisateurs}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#E1E1E1" BorderThickness="1" 
                                        CornerRadius="8" Margin="0,0,0,10" Padding="15" Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F9F9F9"/>
                                                    <Setter Property="BorderBrush" Value="#00915A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.SelectUtilisateurCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding Username}" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                                        <TextBlock Text="{Binding NbConversations}" 
                                                   FontSize="11" Foreground="#00915A" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding DateDernierMessage}" 
                                                   FontSize="11" Foreground="#666" Margin="0,3,0,0"/>
                                        <TextBlock Text="{Binding NbMessages}" 
                                                   FontSize="11" Foreground="#666" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- DÃ©tail de la conversation -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header de la conversation -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E1E1E1" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <StackPanel Visibility="{Binding ConversationSelectionneeVisibility}">
                        <TextBlock Text="{Binding UtilisateurSelectionne.Username}" FontSize="20" FontWeight="Bold" Foreground="#333"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="ðŸ’¬" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding UtilisateurSelectionne.NbConversations}" 
                                       FontSize="13" Foreground="#666"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtFullHistory" Text="Historique complet de toutes les conversations" 
                                       FontSize="13" Foreground="#666"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock x:Name="TxtSelectUser" Text="ðŸ‘ˆ SÃ©lectionnez un utilisateur pour voir son historique complet" 
                               FontSize="14" Foreground="#999" TextAlignment="Center"
                               Visibility="{Binding AucuneConversationVisibility}"/>
                </Grid>
            </Border>

            <!-- Messages de la conversation -->
            <Border Grid.Row="1" Background="White" BorderBrush="#E1E1E1" BorderThickness="1" CornerRadius="8">
                <ScrollViewer Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto" Padding="20">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,15" HorizontalAlignment="{Binding Alignment}" MaxWidth="600">
                                    <Border Background="{Binding BackgroundColor}" 
                                            BorderBrush="{Binding BorderColor}" 
                                            BorderThickness="1" 
                                            CornerRadius="12" 
                                            Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Username}" FontWeight="Bold" FontSize="12" 
                                                       Foreground="{Binding HeaderColor}" Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="13" Foreground="#333"/>
                                            <TextBlock Text="{Binding DateMessage, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                                       FontSize="10" Foreground="#999" Margin="0,8,0,0" HorizontalAlignment="Right"/>
                                            <Border Background="{Binding ReactionBackground}" CornerRadius="12" Padding="8,4" 
                                                    HorizontalAlignment="Left" Margin="0,8,0,0"
                                                    Visibility="{Binding HasReaction}">
                                                <TextBlock Text="{Binding Reaction}" FontSize="16" FontFamily="Segoe UI Emoji"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
