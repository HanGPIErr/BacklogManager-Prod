<Window x:Class="BacklogManager.Views.EditUtilisateurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Utilisateur" 
        Width="650" Height="550" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="500"
        Background="#F5F5F5">
    <Border Background="White" Margin="15" CornerRadius="8" 
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <Border Grid.Row="0" Background="#00915A" CornerRadius="6" Padding="15,10" Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ‘¤" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Informations Utilisateur" 
                               FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Formulaire avec ScrollViewer -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="5">
                <StackPanel>
                    <!-- Nom -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Nom *" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <TextBox x:Name="TxtNom" Padding="12,10" FontSize="14" 
                                     BorderBrush="#CCCCCC" BorderThickness="1" Height="42"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- PrÃ©nom -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="PrÃ©nom" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <TextBox x:Name="TxtPrenom" Padding="12,10" FontSize="14" 
                                     BorderBrush="#CCCCCC" BorderThickness="1" Height="42"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Email -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ“§ Email" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <TextBox x:Name="TxtEmail" Padding="12,10" FontSize="14" 
                                     BorderBrush="#CCCCCC" BorderThickness="1" Height="42"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Username Windows -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ”‘ Username Windows (Matricule) *" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <TextBox x:Name="TxtUsernameWindows" Padding="12,10" FontSize="14" 
                                     BorderBrush="#CCCCCC" BorderThickness="1" Height="42"
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Text="UtilisÃ© pour l'authentification Windows" 
                                       FontSize="11" Foreground="#999999" Margin="0,5,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- RÃ´le -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥ RÃ´le *" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <ComboBox x:Name="CboRole" DisplayMemberPath="Nom" SelectedValuePath="Id"
                                      Padding="12,8" FontSize="14" BorderBrush="#CCCCCC" 
                                      BorderThickness="1" Height="42"
                                      VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Ã‰quipe -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ¢ Ã‰quipe" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <ComboBox x:Name="CboEquipe" SelectedValuePath="Id"
                                      Padding="12,8" FontSize="14" BorderBrush="#CCCCCC" 
                                      BorderThickness="1" Height="42"
                                      VerticalContentAlignment="Center">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="14">
                                            <Run Text="ðŸ¢ " Foreground="#00915A"/>
                                            <Run Text="{Binding Nom, Mode=OneWay}" FontWeight="SemiBold"/>
                                            <Run Text=" (" Foreground="#666666"/>
                                            <Run Text="{Binding Code, Mode=OneWay}" Foreground="#666666"/>
                                            <Run Text=")" Foreground="#666666"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Text="Laissez vide si aucune Ã©quipe assignÃ©e" 
                                       FontSize="11" Foreground="#999999" Margin="0,5,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- Statut -->
                    <Border Background="#FAFAFA" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Statut *" FontWeight="Bold" FontSize="13" 
                                       Foreground="#333333" Margin="0,0,0,8"/>
                            <ComboBox x:Name="CboStatut"
                                      Padding="12,8" FontSize="14" BorderBrush="#CCCCCC" 
                                      BorderThickness="1" Height="42"
                                      VerticalContentAlignment="Center">
                                <ComboBoxItem Content="ðŸ’¼ BAU" Tag="BAU"/>
                                <ComboBoxItem Content="ðŸŽ¯ PROJECTS" Tag="PROJECTS"/>
                                <ComboBoxItem Content="â±ï¸ Temporary" Tag="Temporary"/>
                                <ComboBoxItem Content="ðŸ” Hiring ongoing" Tag="Hiring ongoing"/>
                            </ComboBox>
                            <TextBlock Text="CatÃ©gorie d'affectation de l'utilisateur" 
                                       FontSize="11" Foreground="#999999" Margin="0,5,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- Statut actif -->
                    <Border Background="#E8F5E9" CornerRadius="4" Padding="15" Margin="0,0,0,12">
                        <CheckBox x:Name="ChkActif" Content="âœ… Utilisateur actif" 
                                  IsChecked="True" FontSize="14" FontWeight="SemiBold" 
                                  Foreground="#2E7D32" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Message d'erreur -->
                    <Border x:Name="BrdErreur" Background="#FFEBEE" CornerRadius="4" Padding="12" 
                            Margin="0,5,0,0" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="16" VerticalAlignment="Top" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtErreur" Text="" Foreground="#C62828" 
                                       FontSize="13" TextWrapping="Wrap" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Boutons -->
            <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="6" Padding="15" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Enregistrer" Click="BtnEnregistrer_Click"
                            Background="#00915A" Foreground="White" Padding="25,12" 
                            BorderThickness="0" Cursor="Hand" FontWeight="Bold" 
                            FontSize="14" Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007A4A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="âŒ Annuler" Click="BtnAnnuler_Click"
                            Background="#E0E0E0" Foreground="#1A1919" Padding="25,12" 
                            BorderThickness="0" Cursor="Hand" FontWeight="Bold" FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
