<UserControl x:Class="BacklogManager.Views.NotificationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Shared"
             Background="#F5F5F5">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header avec branding BNP Paribas -->
            <Border Grid.Row="0" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#00915A" Offset="0"/>
                        <GradientStop Color="#00A566" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.2" Color="#00915A"/>
                </Border.Effect>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                        <TextBlock Text="ðŸ””" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock x:Name="TxtTitle" Text="CENTRE DE NOTIFICATIONS" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="BNP Paribas" FontSize="14" Foreground="White" FontWeight="Medium" Opacity="0.9"/>
                                <Rectangle Width="2" Height="16" Fill="White" Margin="10,0" Opacity="0.6"/>
                                <TextBlock x:Name="TxtCountNotifications" Text="0 notification(s) non lue(s)" 
                                         FontSize="13" Foreground="White" FontWeight="SemiBold" Opacity="0.9"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnMarquerToutesLues" Content="âœ“ Tout marquer comme lu" 
                                Click="BtnMarquerToutesLues_Click"
                                Padding="12,8" Margin="0,0,10,0" Background="White" Foreground="#00915A" 
                                BorderThickness="2" BorderBrush="White" FontSize="12" FontWeight="SemiBold" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="White"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="BtnSupprimerLues" Content="ðŸ—‘ï¸ Supprimer lues" 
                                Click="BtnSupprimerLues_Click"
                                Padding="12,8" Background="White" Foreground="#666" 
                                BorderThickness="2" BorderBrush="White" FontSize="12" FontWeight="SemiBold" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="White"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </WrapPanel>
                </WrapPanel>
            </Border>

            <!-- Filtres -->
            <Border Grid.Row="1" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#FAFAFA" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                </Border.Effect>
                <WrapPanel Orientation="Horizontal">
                    <TextBlock x:Name="TxtFilter" Text="ðŸ” Filtrer:" FontWeight="Bold" FontSize="13" 
                               VerticalAlignment="Center" Margin="0,0,15,10" Foreground="#555"/>
                    
                    <RadioButton x:Name="RadioTous" Content="Toutes" IsChecked="True" 
                                 Checked="Filtre_Changed" GroupName="TypeFiltre"
                                 FontSize="12" Margin="0,0,15,10" VerticalAlignment="Center"/>
                    <RadioButton x:Name="RadioNonLues" Content="Non lues uniquement" 
                                 Checked="Filtre_Changed" GroupName="TypeFiltre"
                                 FontSize="12" Margin="0,0,15,10" VerticalAlignment="Center"/>
                    
                    <Rectangle Width="2" Height="20" Fill="#E0E0E0" Margin="10,0,15,10"/>
                    
                    <CheckBox x:Name="ChkUrgent" Content="ðŸ”´ Urgent" Checked="Filtre_Changed" Unchecked="Filtre_Changed"
                              FontSize="12" Margin="0,0,15,10" VerticalAlignment="Center"/>
                    <CheckBox x:Name="ChkAttention" Content="ðŸŸ  Attention" Checked="Filtre_Changed" Unchecked="Filtre_Changed"
                              FontSize="12" Margin="0,0,15,10" VerticalAlignment="Center"/>
                    <CheckBox x:Name="ChkInfo" Content="ðŸ”µ Info" Checked="Filtre_Changed" Unchecked="Filtre_Changed"
                              FontSize="12" Margin="0,0,15,10" VerticalAlignment="Center"/>
                    <CheckBox x:Name="ChkSuccess" Content="âœ… SuccÃ¨s" Checked="Filtre_Changed" Unchecked="Filtre_Changed"
                              FontSize="12" Margin="0,0,0,10" VerticalAlignment="Center"/>
                </WrapPanel>
            </Border>

            <!-- Liste des notifications -->
            <ItemsControl x:Name="ListeNotifications" Grid.Row="2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding CouleurFond}" CornerRadius="10" Padding="15" Margin="0,0,0,12"
                                BorderThickness="1" BorderBrush="{Binding CouleurTexte}" Cursor="Hand"
                                MouseLeftButtonUp="Notification_Click">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.18" Color="#D0D0D0"/>
                            </Border.Effect>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EstLue}" Value="True">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.25" Color="#00915A"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- IcÃ´ne Caramel et Flopy -->
                                <Border Grid.Column="0" Grid.Row="0" Background="#F5F5F5" 
                                        Width="48" Height="48" CornerRadius="24" 
                                        Margin="0,0,15,0" VerticalAlignment="Top">
                                    <Image Source="{Binding ImageCaramelFlopy}" 
                                           Width="46" Height="46" Stretch="Uniform"/>
                                </Border>

                                <!-- Contenu -->
                                <StackPanel Grid.Column="1" Grid.Row="0">
                                    <TextBlock Text="{Binding TitreAffiche, Mode=OneWay}" FontWeight="Bold" FontSize="14" 
                                               Foreground="{Binding CouleurTexte}" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding MessageAffiche, Mode=OneWay}" FontSize="12" 
                                               Foreground="#333" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                    <TextBlock FontSize="11" Foreground="#666" FontStyle="Italic">
                                        <Run Text="ðŸ“…"/>
                                        <Run Text="{Binding DateCreation, StringFormat='dd/MM/yyyy Ã  HH:mm'}"/>
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-- Bouton Email -->
                                <Button Grid.Column="1" Grid.Row="1" 
                                        Content="ðŸ“§ Envoyer par email au dÃ©veloppeur"
                                        Click="BtnEnvoyerEmail_Click" 
                                        Tag="{Binding}"
                                        Background="#0078D4" Foreground="White"
                                        BorderThickness="0" 
                                        Padding="10,6" 
                                        Margin="0,10,0,0"
                                        FontSize="12" 
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        HorizontalAlignment="Left"
                                        ToolTip="Ouvre Outlook avec un email prÃ©-rempli"
                                        Visibility="{Binding TacheId, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="5" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#005A9E"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <!-- Bouton Annuler Demande (seulement pour les demandes d'Ã©change envoyÃ©es) -->
                                <Button Grid.Column="1" Grid.Row="1" 
                                        Content="âŒ Annuler la demande"
                                        Click="BtnAnnulerDemande_Click" 
                                        Tag="{Binding}"
                                        Background="#D32F2F" Foreground="White"
                                        BorderThickness="0" 
                                        Padding="10,6" 
                                        Margin="0,10,0,0"
                                        FontSize="12" 
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        HorizontalAlignment="Left"
                                        ToolTip="Annuler cette demande d'Ã©change"
                                        Visibility="{Binding DemandeEchangeVMId, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="5" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#B71C1C"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Badge Non Lu -->
                                <Border Grid.Column="2" Background="#00915A" CornerRadius="12" 
                                        Padding="8,4" VerticalAlignment="Top" Margin="10,0,0,0"
                                        Visibility="{Binding EstLue, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding BadgeNouveau, Mode=OneWay}" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                </Border>

                                <!-- Bouton Supprimer -->
                                <Button Grid.Column="2" Content="âœ•" 
                                        Click="BtnSupprimerNotification_Click" Tag="{Binding Id}"
                                        Background="Transparent" BorderThickness="0" 
                                        Foreground="{Binding CouleurTexte}" FontSize="18" FontWeight="Bold"
                                        Cursor="Hand" VerticalAlignment="Center" Margin="10,0,0,0"
                                        ToolTip="Supprimer cette notification">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <ContentPresenter/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                                    <Setter Property="FontSize" Value="20"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Message vide -->
            <Border Grid.Row="2" x:Name="MessageVide" Visibility="Collapsed"
                    Background="White" CornerRadius="8" Padding="40">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/agent-project-and-change.png" 
                           Width="120" Height="120" 
                           Stretch="Uniform"
                           Margin="0,0,0,20"/>
                    <TextBlock x:Name="TxtNoNotifications" Text="Aucune notification" FontSize="20" FontWeight="Bold" 
                               Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="TxtUpToDate" Text="Vous Ãªtes Ã  jour !" FontSize="14" Foreground="#999" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
