<Window x:Class="BacklogManager.Views.GestionProjetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Projets" Height="550" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="BNPButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00915A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007A4D"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource BNPButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BNPButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Border Height="70" VerticalAlignment="Top" Background="#00915A">
            <StackPanel VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="ðŸ“ GESTION DES PROJETS" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Liste de tous les projets" 
                           FontSize="12" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20,90,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Bouton Ajouter -->
            <Border Grid.Row="0" Margin="0,0,0,15">
                <Button x:Name="BtnAjouter" Content="âž• Nouveau Projet" 
                        Style="{StaticResource BNPButtonStyle}" 
                        Click="BtnAjouter_Click" Padding="20,12" FontSize="14"/>
            </Border>

            <!-- Liste des projets -->
            <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="15,10" 
                            BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="PROJETS" FontWeight="Bold" 
                                       FontSize="12" Foreground="#666"/>
                            <TextBlock Grid.Column="1" x:Name="TxtCountProjets" Text="0 projet(s)" 
                                       FontSize="12" Foreground="#666"/>
                        </Grid>
                    </Border>

                    <!-- Liste -->
                    <ListBox x:Name="LstProjets" Grid.Row="1" 
                             BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="20,15" BorderBrush="#EEEEEE" 
                                        BorderThickness="0,0,0,1" Background="Transparent"
                                        Margin="0,0,0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Nom}" FontSize="16" 
                                                       FontWeight="SemiBold" Foreground="#1A1919" 
                                                       Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding Description}" FontSize="13" 
                                                       Foreground="#666" Margin="0,0,0,6" TextWrapping="Wrap"
                                                       MaxWidth="500" HorizontalAlignment="Left"/>
                                            <TextBlock FontSize="11" Foreground="#999">
                                                <Run Text="ðŸ“Œ ID:"/>
                                                <Run Text="{Binding Id}"/>
                                                <Run Text="  â€¢  "/>
                                                <Run Text="ðŸ“… CrÃ©Ã© le"/>
                                                <Run Text="{Binding DateCreation, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                            <Border Background="#00915A" CornerRadius="12" 
                                                    Padding="8,3" Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding Actif, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="âœ… ACTIF" FontSize="9" FontWeight="Bold" 
                                                           Foreground="White"/>
                                            </Border>
                                            <Border Background="#FF9800" CornerRadius="12" 
                                                    Padding="8,3" Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding Actif, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                <TextBlock Text="ðŸ“¦ ARCHIVÃ‰" FontSize="9" FontWeight="Bold" 
                                                           Foreground="White"/>
                                            </Border>
                                            <Button Content="âœï¸" ToolTip="Modifier le projet"
                                                    Style="{StaticResource BNPButtonStyle}"
                                                    Width="40" Height="40" Padding="0"
                                                    FontSize="16"
                                                    Click="BtnEdit_Click" Tag="{Binding}"/>
                                            <Button Content="ðŸ—‘ï¸" ToolTip="Supprimer le projet"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Width="40" Height="40" Padding="0" Margin="10,0,0,0"
                                                    FontSize="16"
                                                    Click="BtnDelete_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Fermer" Style="{StaticResource SecondaryButtonStyle}" 
                        Click="BtnFermer_Click" Width="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
