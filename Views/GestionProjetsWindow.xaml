<Window x:Class="BacklogManager.Views.GestionProjetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Projets" Height="550" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="BNPButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00915A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007A4D"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource BNPButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BNPButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Border Height="70" VerticalAlignment="Top" Background="#00915A">
            <StackPanel VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="ðŸ“ GESTION DES PROJETS" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Ajouter, modifier ou supprimer des projets" 
                           FontSize="12" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20,90,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Add/Edit Section -->
            <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="6" 
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nom -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Nom du projet *" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtNomProjet" FontSize="14" Padding="10" Height="36"
                                 BorderBrush="#DDDDDD" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Statut Actif -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Statut" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <CheckBox x:Name="ChkActif" Content="Projet actif" IsChecked="True"
                                  FontSize="14" VerticalAlignment="Center" Height="36"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,12,0,0">
                        <TextBlock Text="Description" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtDescriptionProjet" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 FontSize="14" Padding="10" Height="60"
                                 VerticalScrollBarVisibility="Auto"
                                 BorderBrush="#DDDDDD" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Boutons -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button x:Name="BtnAjouter" Content="âž• Ajouter" 
                                Style="{StaticResource BNPButtonStyle}" 
                                Click="BtnAjouter_Click" Width="100"/>
                        <Button x:Name="BtnModifier" Content="âœï¸ Modifier" 
                                Style="{StaticResource BNPButtonStyle}" 
                                Click="BtnModifier_Click" Width="100" Margin="8,0,0,0"
                                Visibility="Collapsed"/>
                        <Button x:Name="BtnAnnuler" Content="âœ–ï¸ Annuler" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Click="BtnAnnuler_Click" Width="100" Margin="8,0,0,0"
                                Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Liste des projets -->
            <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="15,10" 
                            BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="PROJETS" FontWeight="Bold" 
                                       FontSize="12" Foreground="#666"/>
                            <TextBlock Grid.Column="1" x:Name="TxtCountProjets" Text="0 projet(s)" 
                                       FontSize="12" Foreground="#666"/>
                        </Grid>
                    </Border>

                    <!-- Liste -->
                    <ListBox x:Name="LstProjets" Grid.Row="1" 
                             BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15,12" BorderBrush="#EEEEEE" 
                                        BorderThickness="0,0,0,1" Background="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Nom}" FontSize="15" 
                                                           FontWeight="SemiBold" Foreground="#1A1919"/>
                                                <Border Background="#00915A" CornerRadius="3" 
                                                        Padding="6,2" Margin="10,0,0,0"
                                                        Visibility="{Binding Actif, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="ACTIF" FontSize="9" FontWeight="Bold" 
                                                               Foreground="White"/>
                                                </Border>
                                                <Border Background="#999999" CornerRadius="3" 
                                                        Padding="6,2" Margin="10,0,0,0"
                                                        Visibility="{Binding Actif, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                    <TextBlock Text="INACTIF" FontSize="9" FontWeight="Bold" 
                                                               Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                       Foreground="#666" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                            <TextBlock FontSize="10" Foreground="#999" Margin="0,4,0,0">
                                                <Run Text="ID:"/>
                                                <Run Text="{Binding Id}"/>
                                                <Run Text=" â€¢ CrÃ©Ã© le"/>
                                                <Run Text="{Binding DateCreation, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                            <Button Content="âœï¸" ToolTip="Modifier"
                                                    Style="{StaticResource BNPButtonStyle}"
                                                    Width="36" Height="36" Padding="0"
                                                    Click="BtnEdit_Click" Tag="{Binding}"/>
                                            <Button Content="ðŸ—‘ï¸" ToolTip="Supprimer"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Width="36" Height="36" Padding="0" Margin="8,0,0,0"
                                                    Click="BtnDelete_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Fermer" Style="{StaticResource SecondaryButtonStyle}" 
                        Click="BtnFermer_Click" Width="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
