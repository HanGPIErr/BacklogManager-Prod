<UserControl x:Class="BacklogManager.Views.DemandesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Views">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StatutToColorConverter x:Key="StatutColorConverter"/>
        <local:CriticiteToColorConverter x:Key="CriticiteColorConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Barre d'outils -->
        <Border Grid.Row="0" Background="#00915A" Padding="15">
            <StackPanel>
                <TextBlock Text="GESTION DES DEMANDES" FontSize="18" FontWeight="Bold" 
                          Foreground="White" Margin="0,0,0,10"/>
                
                <Grid Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button x:Name="BtnNouvelleDemande" Content="âž• Nouvelle demande" 
                               Width="150" Height="35" Margin="0,0,10,0"
                               Background="White" Foreground="#00915A" FontWeight="Bold"
                               BorderThickness="0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="3" Padding="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E0E0E0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="BtnRefresh" Content="ðŸ”„" Width="40" Height="35" Margin="0,0,10,0"
                               Background="White" Foreground="#00915A" FontWeight="Bold"
                               BorderThickness="0" Cursor="Hand" ToolTip="Actualiser"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="ðŸ” Filtres:" VerticalAlignment="Center" Foreground="White" 
                                  FontWeight="Bold" Margin="0,0,10,0" FontSize="13"/>
                        
                        <TextBlock Text="Statut:" VerticalAlignment="Center" Foreground="White" 
                                  Margin="0,0,5,0" FontSize="11"/>
                        <ComboBox x:Name="CmbFiltreStatut" Width="180" Height="30" Margin="0,0,15,0"
                                 SelectedIndex="0"/>
                        
                        <TextBlock Text="CriticitÃ©:" VerticalAlignment="Center" Foreground="White" 
                                  Margin="0,0,5,0" FontSize="11"/>
                        <ComboBox x:Name="CmbFiltreCriticite" Width="130" Height="30" Margin="0,0,15,0"
                                 SelectedIndex="0"/>
                        
                        <TextBlock Text="ðŸ“… Date de:" VerticalAlignment="Center" Foreground="White" 
                                  Margin="0,0,5,0" FontSize="11"/>
                        <DatePicker x:Name="DpDateDebut" Width="120" Height="30" Margin="0,0,10,0"/>
                        
                        <TextBlock Text="Date Ã :" VerticalAlignment="Center" Foreground="White" 
                                  Margin="0,0,5,0" FontSize="11"/>
                        <DatePicker x:Name="DpDateFin" Width="120" Height="30" Margin="0,0,15,0"/>
                        
                        <Button x:Name="BtnEffacerFiltres" Content="âœ• RÃ©initialiser" Width="110" Height="30" 
                               Background="#666666" Foreground="White" FontWeight="SemiBold"
                               BorderThickness="0" Cursor="Hand" FontSize="11" ToolTip="Effacer tous les filtres"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Liste des demandes -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ListeDemandes" Margin="15">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                               CornerRadius="5" Margin="0,0,0,10" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- En-tÃªte -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Titre}" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#333333"/>
                                        <TextBlock Text="{Binding Type}" FontSize="11" Foreground="#666666" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Border Background="{Binding Criticite, Converter={StaticResource CriticiteColorConverter}}" 
                                               CornerRadius="3" Padding="8,3" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding Criticite}" FontSize="11" 
                                                      Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                        <Border Background="{Binding Statut, Converter={StaticResource StatutColorConverter}}" 
                                               CornerRadius="3" Padding="8,3">
                                            <TextBlock Text="{Binding Statut}" FontSize="11" 
                                                      Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Description -->
                                <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                          TextWrapping="Wrap" Foreground="#666666" 
                                          Margin="0,0,0,10"/>
                                
                                <!-- Informations -->
                                <Grid Grid.Row="2" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="DEMANDEUR" FontSize="10" Foreground="#999999"/>
                                        <TextBlock Text="{Binding Demandeur}" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="BUSINESS ANALYST" FontSize="10" Foreground="#999999"/>
                                        <TextBlock Text="{Binding BusinessAnalyst}" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="PROJET" FontSize="10" Foreground="#999999"/>
                                        <TextBlock Text="{Binding ProjetNom}" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="3" Margin="20,0,0,0">
                                        <TextBlock Text="ðŸ“… DATE CRÃ‰ATION" FontSize="10" Foreground="#999999"/>
                                        <TextBlock Text="{Binding DateCreation, StringFormat=dd/MM/yyyy}" 
                                                  FontSize="12" FontWeight="Bold" Foreground="#00915A"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Actions -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal">
                                    <Button Content="ðŸŽ¯ CrÃ©er tÃ¢che" Width="100" Height="28" Margin="0,0,5,0"
                                           Background="#FF6F00" Foreground="White" BorderThickness="0"
                                           FontSize="11" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnCreerTacheClick"
                                           Visibility="{Binding EstAcceptee, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <Button Content="ðŸ“ DÃ©tails" Width="90" Height="28" Margin="0,0,5,0"
                                           Background="#00915A" Foreground="White" BorderThickness="0"
                                           FontSize="11" Cursor="Hand" Tag="{Binding Id}"
                                           Click="BtnDetailsClick"/>
                                    <Button Content="âœï¸ Modifier" Width="90" Height="28" Margin="0,0,5,0"
                                           Background="#0078D7" Foreground="White" BorderThickness="0"
                                           FontSize="11" Cursor="Hand" Tag="{Binding Id}"
                                           Click="BtnModifierClick"/>
                                    <Button Content="ðŸ’¬ Commentaires" Width="110" Height="28" Margin="0,0,5,0"
                                           Background="#666666" Foreground="White" BorderThickness="0"
                                           FontSize="11" Cursor="Hand" Tag="{Binding Id}"
                                           Click="BtnCommentairesClick"/>
                                    <Button Content="ðŸ—‘ï¸ Supprimer" Width="90" Height="28" Margin="0,0,5,0"
                                           Background="#D32F2F" Foreground="White" BorderThickness="0"
                                           FontSize="11" Cursor="Hand" Tag="{Binding Id}"
                                           Click="BtnSupprimerClick"
                                           Visibility="{Binding DataContext.PeutSupprimerDemandes, 
                                                       RelativeSource={RelativeSource AncestorType=UserControl},
                                                       Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
