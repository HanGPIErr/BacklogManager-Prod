<UserControl x:Class="BacklogManager.Views.DemandesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Views"
             Background="#F0F2F5">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StatutToColorConverter x:Key="StatutColorConverter"/>
        <local:CriticiteToColorConverter x:Key="CriticiteColorConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="35,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="30,25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="2" Opacity="0.3" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Row="0" Grid.Column="0" Background="#00915A" Width="5" CornerRadius="2" 
                            Margin="0,0,20,0" VerticalAlignment="Stretch"/>
                    
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="#1A1919">
                            <Run Text="ðŸ“ "/>
                            <Run Text="DEMANDES" Foreground="#00915A"/>
                        </TextBlock>
                        <TextBlock Text="Gestion des demandes utilisateurs et suivi des traitements" 
                                   FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <Button x:Name="BtnNouvelleDemande" Grid.Row="0" Grid.Column="2"
                            Content="âž• Nouvelle demande" 
                            Height="42" Padding="22,0" Margin="0"
                            Background="#00915A" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand" FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#00915A"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007843"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Onglets de navigation -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,20,0,0" 
                            Background="#F5F5F5" CornerRadius="25" Padding="4">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnOngletActives" Content="ðŸ“‹ Demandes actives" 
                                    Background="#00915A" Foreground="White" 
                                    FontSize="13" FontWeight="Bold" Padding="18,8"
                                    Margin="0,0,4,0" BorderThickness="0" Cursor="Hand"
                                    Click="BtnOngletActives_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007843"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnOngletArchives" Content="ðŸ“¦ Archives" 
                                    Background="Transparent" Foreground="#666" 
                                    FontSize="13" FontWeight="SemiBold" Padding="18,8"
                                    BorderThickness="0" Cursor="Hand"
                                    Click="BtnOngletArchives_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E0E0E0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Filtres Section -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20,18" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="12" ShadowDepth="1" Opacity="0.25" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Ligne 1 -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ“Š Statut" FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <ComboBox x:Name="CmbFiltreStatut" Height="38" FontSize="13" 
                                     BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                     Background="White" SelectedIndex="0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="âš ï¸ CriticitÃ©" FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <ComboBox x:Name="CmbFiltreCriticite" Height="38" FontSize="13"
                                     BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                     Background="White" SelectedIndex="0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ“… Date de" FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <DatePicker x:Name="DpDateDebut" Height="38" FontSize="13"
                                       BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                       Background="White"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="ðŸ“… Date Ã " FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <DatePicker x:Name="DpDateFin" Height="38" FontSize="13"
                                       BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                       Background="White" Width="180"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Ligne 2 - Boutons Action -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button x:Name="BtnRefresh" Content="ðŸ”„ Actualiser" 
                               Height="36" Padding="18,0" Margin="0,0,10,0"
                               Background="#00915A" Foreground="White" FontWeight="SemiBold"
                               BorderThickness="0" Cursor="Hand" FontSize="13">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#007843"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="BtnEffacerFiltres" Content="âœ• RÃ©initialiser" 
                               Height="36" Padding="18,0"
                               Background="#E0E0E0" Foreground="#666" FontWeight="SemiBold"
                               BorderThickness="0" Cursor="Hand" FontSize="13">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Liste des demandes -->
            <ItemsControl x:Name="ListeDemandes" Grid.Row="2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="2" 
                               CornerRadius="10" Margin="0,0,0,15" Padding="22,18" Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.1" Color="Gray"/>
                            </Border.Effect>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00915A"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" Color="#00915A"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- En-tÃªte -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Titre}" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#1A1919" TextWrapping="Wrap" LineHeight="22"/>
                                        <TextBlock Text="{Binding Type}" FontSize="12" Foreground="#666" 
                                                  Margin="0,4,0,0" FontWeight="Medium"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Border CornerRadius="6" Padding="10,5" Margin="0,0,8,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Criticite}" Value="Haute">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Criticite}" Value="Moyenne">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Criticite}" Value="Basse">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Criticite}" Value="Haute">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Criticite}" Value="Moyenne">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Criticite}" Value="Basse">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="âš ï¸ "/>
                                                <Run Text="{Binding Criticite}"/>
                                            </TextBlock>
                                        </Border>
                                        <Border CornerRadius="6" Padding="10,5">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Statut}" Value="En attente">
                                                            <Setter Property="Background" Value="#F5F5F5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Statut}" Value="En cours">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Statut}" Value="AcceptÃ©e">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Statut}" Value="RejetÃ©e">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#757575"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Statut}" Value="En attente">
                                                                <Setter Property="Foreground" Value="#757575"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Statut}" Value="En cours">
                                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Statut}" Value="AcceptÃ©e">
                                                                <Setter Property="Foreground" Value="#00915A"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Statut}" Value="RejetÃ©e">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="ðŸ“Š "/>
                                                <Run Text="{Binding Statut}"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Description -->
                                <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                          TextWrapping="Wrap" Foreground="#666" FontSize="13"
                                          Margin="0,0,0,15" LineHeight="20"/>
                                
                                <!-- Informations -->
                                <Grid Grid.Row="2" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="DEMANDEUR" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Demandeur}" FontSize="13" FontWeight="Bold" 
                                                  Foreground="#1A1919" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="BUSINESS ANALYST" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding BusinessAnalyst}" FontSize="13" FontWeight="Bold" 
                                                  Foreground="#1A1919" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="PROJET" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ProjetNom}" FontSize="13" FontWeight="Bold" 
                                                  Foreground="#1A1919" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="3" Margin="20,0,0,0">
                                        <TextBlock Text="ðŸ“… DATE CRÃ‰ATION" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DateCreation, StringFormat=dd/MM/yyyy}" 
                                                  FontSize="13" FontWeight="Bold" Foreground="#00915A" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Actions -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal">
                                    <Button Content="ðŸŽ¯ CrÃ©er tÃ¢che" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#FF6F00" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnCreerTacheClick"
                                           Visibility="{Binding EstAcceptee, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E56400"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ“ DÃ©tails" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#00915A" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnDetailsClick">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#007843"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="âœï¸ Modifier" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#0078D7" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnModifierClick">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#005A9E"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ’¬ Commentaires" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#666666" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnCommentairesClick">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#4D4D4D"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ“¦ Archiver" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#9C27B0" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnArchiverClick"
                                           Visibility="{Binding DataContext.PeutArchiverDemandes, 
                                                       RelativeSource={RelativeSource AncestorType=UserControl},
                                                       Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#7B1FA2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ—‘ï¸ Supprimer" Height="34" Padding="14,0" Margin="0,0,0,0"
                                           Background="#D32F2F" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnSupprimerClick"
                                           Visibility="{Binding DataContext.PeutSupprimerDemandes, 
                                                       RelativeSource={RelativeSource AncestorType=UserControl},
                                                       Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#B71C1C"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>
