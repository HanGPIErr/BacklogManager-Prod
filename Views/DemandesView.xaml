                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnOngletArchives" Content="ðŸ“¦ Archives" 
                                    Background="#33FFFFFF" Foreground="White" 
                                    FontSize="13" FontWeight="SemiBold" Padding="18,8"
                                    BorderThickness="1" BorderBrush="#55FFFFFF" Cursor="Hand"
                                    Click="BtnOngletArchives_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#55FFFFFF"/>
                                                <Setter Property="BorderBrush" Value="#88FFFFFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </WrapPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Filtres Section -->
            <Border Grid.Row="1" CornerRadius="10" Padding="20,18" Margin="0,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#FAFAFA" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Filtres -->
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <StackPanel Margin="0,0,15,10" MinWidth="180">
                            <TextBlock Text="ðŸ“Š Statut" FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <ComboBox x:Name="CmbFiltreStatut" Height="38" FontSize="13" 
                                     BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                     Background="White" SelectedIndex="0"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,15,10" MinWidth="180">
                            <TextBlock Text="âš ï¸ CriticitÃ©" FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <ComboBox x:Name="CmbFiltreCriticite" Height="38" FontSize="13"
                                     BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                     Background="White" SelectedIndex="0"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,15,10" MinWidth="180">
                            <TextBlock Text="ðŸ“… Date de" FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <DatePicker x:Name="DpDateDebut" Height="38" FontSize="13"
                                       BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                       Background="White"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,10" MinWidth="180">
                            <TextBlock Text="ðŸ“… Date Ã " FontSize="12" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                            <DatePicker x:Name="DpDateFin" Height="38" FontSize="13"
                                       BorderBrush="#DDD" BorderThickness="1" Padding="12,0"
                                       Background="White"/>
                        </StackPanel>
                    </WrapPanel>
                    
                    <!-- Boutons Action -->
                    <WrapPanel Orientation="Horizontal">
                        <Button x:Name="BtnRefresh" Content="ðŸ”„ Actualiser" 
                               Height="36" Padding="18,0" Margin="0,0,10,0"
                               Background="#00915A" Foreground="White" FontWeight="SemiBold"
                               BorderThickness="0" Cursor="Hand" FontSize="13">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#007843"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="BtnEffacerFiltres" Content="âœ• RÃ©initialiser" 
                               Height="36" Padding="18,0"
                               Background="#E0E0E0" Foreground="#666" FontWeight="SemiBold"
                               BorderThickness="0" Cursor="Hand" FontSize="13">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>
            
            <!-- Liste des demandes -->
            <ItemsControl x:Name="ListeDemandes" Grid.Row="2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                               CornerRadius="10" Margin="0,0,0,15" Padding="22,18" Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#FAFAFA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.15" Color="#D0D0D0"/>
                            </Border.Effect>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00915A"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.25" Color="#00915A"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- En-tÃªte -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Titre}" FontSize="16" FontWeight="Bold" 
                                                  Foreground="#1A1919" TextWrapping="Wrap" LineHeight="22"/>
                                        <TextBlock Text="{Binding Type}" FontSize="12" Foreground="#666" 
                                                  Margin="0,4,0,0" FontWeight="Medium"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Border CornerRadius="6" Padding="10,5" Margin="0,0,8,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Criticite}" Value="Haute">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Criticite}" Value="Moyenne">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Criticite}" Value="Basse">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Criticite}" Value="Haute">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Criticite}" Value="Moyenne">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Criticite}" Value="Basse">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="âš ï¸ "/>
                                                <Run Text="{Binding Criticite}"/>
                                            </TextBlock>
                                        </Border>
                                        <Border CornerRadius="6" Padding="10,5">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Statut}" Value="En attente">
                                                            <Setter Property="Background" Value="#F5F5F5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Statut}" Value="En cours">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Statut}" Value="AcceptÃ©e">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Statut}" Value="RejetÃ©e">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#757575"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Statut}" Value="En attente">
                                                                <Setter Property="Foreground" Value="#757575"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Statut}" Value="En cours">
                                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Statut}" Value="AcceptÃ©e">
                                                                <Setter Property="Foreground" Value="#00915A"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Statut}" Value="RejetÃ©e">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="ðŸ“Š "/>
                                                <Run Text="{Binding Statut}"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Description -->
                                <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                          TextWrapping="Wrap" Foreground="#666" FontSize="13"
                                          Margin="0,0,0,15" LineHeight="20"/>
                                
                                <!-- Informations -->
                                <Grid Grid.Row="2" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="DEMANDEUR" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Demandeur}" FontSize="13" FontWeight="Bold" 
                                                  Foreground="#1A1919" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="BUSINESS ANALYST" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding BusinessAnalyst}" FontSize="13" FontWeight="Bold" 
                                                  Foreground="#1A1919" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="PROJET" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ProjetNom}" FontSize="13" FontWeight="Bold" 
                                                  Foreground="#1A1919" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="3" Margin="20,0,0,0">
                                        <TextBlock Text="ðŸ“… DATE CRÃ‰ATION" FontSize="10" Foreground="#999" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DateCreation, StringFormat=dd/MM/yyyy}" 
                                                  FontSize="13" FontWeight="Bold" Foreground="#00915A" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Actions -->
                                <WrapPanel Grid.Row="3" Orientation="Horizontal">
                                    <Button Content="ðŸ“ CrÃ©er projet" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#9C27B0" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnCreerProjetClick"
                                           Visibility="{Binding EstAccepteeSansProjet, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#7B1FA2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸŽ¯ CrÃ©er tÃ¢che" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#FF6F00" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnCreerTacheClick"
                                           Visibility="{Binding EstAccepteeAvecProjet, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E56400"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ“ DÃ©tails" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#00915A" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnDetailsClick">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#007843"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="âœï¸ Modifier" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#0078D7" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnModifierClick">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#005A9E"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ’¬ Commentaires" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#666666" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnCommentairesClick">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#4D4D4D"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ“¦ Archiver" Height="34" Padding="14,0" Margin="0,0,8,0"
                                           Background="#9C27B0" Foreground="White" BorderThickness="0"
                                           FontSize="12" Cursor="Hand" Tag="{Binding Id}" FontWeight="SemiBold"
                                           Click="BtnArchiverClick"
                                           Visibility="{Binding DataContext.PeutArchiverDemandes, 
                                                       RelativeSource={RelativeSource AncestorType=UserControl},
                                                       Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
