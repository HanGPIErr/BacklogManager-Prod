<UserControl x:Class="BacklogManager.Views.PokerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸŽ¯ PLANNING POKER" FontSize="22" FontWeight="Bold" Foreground="#1A1919"/>
                <TextBlock Text="BNP Paribas" FontSize="16" Foreground="#00915A" 
                           VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Medium"/>
            </StackPanel>
        </Border>

        <!-- Team Info Banner -->
        <Border Grid.Row="1" Background="#00915A" CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ‘¥ Ã‰quipe: " FontSize="14" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="Gianni" FontSize="14" Foreground="White" Margin="5,0"/>
                <TextBlock Text="â€¢" FontSize="14" Foreground="White" Margin="5,0"/>
                <TextBlock Text="Mouloud" FontSize="14" Foreground="White" Margin="5,0"/>
                <TextBlock Text="â€¢" FontSize="14" Foreground="White" Margin="5,0"/>
                <TextBlock Text="Pierre-Romain (Scrum Master)" FontSize="14" Foreground="White" 
                           Margin="5,0" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Backlog Item Selection -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="15" Margin="0,60,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="SÃ©lectionner une tÃ¢che du backlog" FontWeight="Bold" FontSize="15" 
                           Margin="0,0,0,10" Foreground="#1A1919"/>
                <ComboBox ItemsSource="{Binding BacklogItems}" 
                          DisplayMemberPath="Titre"
                          SelectedItem="{Binding SelectedBacklogItem}"
                          Padding="10" FontSize="14" Margin="0,0,0,12"
                          BorderBrush="#00915A" BorderThickness="2"/>
                
                <Button Content="ðŸŽ² DÃ©marrer le vote" Command="{Binding StartVoteCommand}"
                        Padding="15,10" Background="#00915A" Foreground="White" 
                        BorderThickness="0" FontSize="15" FontWeight="SemiBold" Cursor="Hand"
                        HorizontalAlignment="Left">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#00915A"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#007A4D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Voting Area -->
        <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Votes des dÃ©veloppeurs" FontWeight="Bold" FontSize="16" 
                               Margin="0,0,0,15" Foreground="#1A1919"/>
                    
                    <ItemsControl ItemsSource="{Binding DevVotes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                        CornerRadius="4" Padding="12" Margin="0,0,0,10">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2" Color="Gray"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Dev.Nom}" 
                                                   FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                        
                                        <ComboBox Grid.Column="1" ItemsSource="{Binding DataContext.VoteValues, 
                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  SelectedItem="{Binding VoteValue}"
                                                  Padding="8" FontSize="13" HorizontalAlignment="Left" Width="100"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="ðŸ“Š Soumettre les votes" Command="{Binding SubmitVotesCommand}"
                            Padding="15,10" Margin="0,15,0,0" Background="#00915A" Foreground="White" 
                            BorderThickness="0" FontSize="15" FontWeight="SemiBold" Cursor="Hand"
                            HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#00915A"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007A4D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Status Message -->
        <Border Grid.Row="3" Background="#FFF9E6" CornerRadius="6" Padding="15" Margin="0,15,0,0"
                BorderBrush="#00915A" BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
            </Border.Effect>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StatusMessage}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusMessage}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding StatusMessage}" FontSize="14" FontWeight="SemiBold" 
                       Foreground="#1A1919" TextWrapping="Wrap"/>
        </Border>

        <!-- Results -->
        <Border Grid.Row="4" Background="#00915A" CornerRadius="6" Padding="15" Margin="0,10,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#00915A"/>
            </Border.Effect>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Consensus}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel>
                <TextBlock Text="âœ… RÃ‰SULTATS" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="ComplexitÃ© consensus: " FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                    <TextBlock Text="{Binding Consensus}" FontSize="14" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Jours planifiÃ©s: " FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                    <TextBlock Text="{Binding JoursPlanifies, StringFormat=F2}" FontSize="14" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
