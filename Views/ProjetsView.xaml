<UserControl x:Class="BacklogManager.Views.ProjetsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:BacklogManager.Services"
             Background="White">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Liste des Projets -->
        <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="15" Margin="0,0,15,0" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock FontSize="18" FontWeight="Bold" Foreground="#1A1919">
                            <Run Text="ðŸ“Š "/>
                            <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Title], Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Text="{Binding ProjetsFiltres.Count}" FontSize="16" Foreground="#00915A" 
                                   Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- LÃ©gende -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Border Background="#9E9E9E" CornerRadius="2" Padding="4,2" Margin="0,0,8,0">
                            <TextBlock FontSize="9" Foreground="White" FontWeight="Bold">
                                <Run Text="ðŸ“‹ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Todo], Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                        <Border Background="#2196F3" CornerRadius="2" Padding="4,2" Margin="0,0,8,0">
                            <TextBlock FontSize="9" Foreground="White" FontWeight="Bold">
                                <Run Text="âš¡ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_InProgress], Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                        <Border Background="#FF9800" CornerRadius="2" Padding="4,2" Margin="0,0,8,0">
                            <TextBlock FontSize="9" Foreground="White" FontWeight="Bold">
                                <Run Text="ðŸ” "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_InTest], Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                        <Border Background="#4CAF50" CornerRadius="2" Padding="4,2">
                            <TextBlock FontSize="9" Foreground="White" FontWeight="Bold">
                                <Run Text="âœ“ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Completed], Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Recherche -->
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" FontSize="13" Margin="0,10,0,0"
                             BorderBrush="#00915A" BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Margin="10,-28,0,0" IsHitTestVisible="False" 
                               Foreground="#999" FontSize="13">
                        <Run Text="ðŸ” "/>
                        <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_SearchPlaceholder], Mode=OneWay}"/>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Filtres -->
                    <StackPanel Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding FilterActifsOnly}" 
                                  Content="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_ActiveOnly], Mode=OneWay}"
                                  FontSize="12" Foreground="#333" Margin="0,0,0,8"/>
                        
                        <!-- Filtre PrioritÃ© -->
                        <TextBlock FontSize="11" Foreground="#666" FontWeight="SemiBold" Margin="0,5,0,4">
                            <Run Text="âš¡ "/>
                            <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Priority], Mode=OneWay}"/>
                        </TextBlock>
                        <Grid Margin="0,0,0,8">
                            <ComboBox x:Name="CbPriorite" ItemsSource="{Binding PrioritesDisponibles}" 
                                      SelectedItem="{Binding PrioriteSelectionnee}" 
                                      FontSize="12" Padding="8,6" BorderBrush="#CCCCCC" BorderThickness="1"/>
                        </Grid>
                        
                        <!-- Filtre Statut RAG -->
                        <TextBlock FontSize="11" Foreground="#666" FontWeight="SemiBold" Margin="0,0,0,4">
                            <Run Text="ðŸš¦ "/>
                            <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_StatusRAG], Mode=OneWay}"/>
                        </TextBlock>
                        <Grid Margin="0,0,0,8">
                            <ComboBox x:Name="CbStatutRAG" ItemsSource="{Binding StatutsRAGDisponibles}" 
                                      SelectedItem="{Binding StatutRAGSelectionne}" 
                                      FontSize="12" Padding="8,6" BorderBrush="#CCCCCC" BorderThickness="1"/>
                        </Grid>
                        
                        <!-- Filtre Ã‰quipe -->
                        <TextBlock FontSize="11" Foreground="#666" FontWeight="SemiBold" Margin="0,0,0,4">
                            <Run Text="ðŸ¢ "/>
                            <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Team], Mode=OneWay}"/>
                        </TextBlock>
                        <Grid Margin="0,0,0,8">
                            <ComboBox x:Name="CbEquipe" ItemsSource="{Binding EquipesDisponibles}" 
                                      SelectedItem="{Binding EquipeSelectionnee}" 
                                      FontSize="12" Padding="8,6" BorderBrush="#CCCCCC" BorderThickness="1"/>
                        </Grid>
                        
                        <TextBlock FontSize="11" Foreground="#666" Margin="0,0,0,5"
                                   Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_SortBy], Mode=OneWay}"/>
                        <Grid>
                            <ComboBox x:Name="CbTri" ItemsSource="{Binding OptionsTriDisponibles}" 
                                      SelectedItem="{Binding TriSelection}" 
                                      FontSize="12" Padding="8,6" BorderBrush="#CCCCCC" BorderThickness="1"/>
                            <TextBlock FontSize="12" Foreground="#999" 
                                       Padding="10,7" IsHitTestVisible="False"
                                       Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_SelectSort], Mode=OneWay}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=CbTri, Path=SelectedItem}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15" Orientation="Horizontal">
                        <Button Command="{Binding RefreshCommand}"
                                Padding="8,6" Background="#E0E0E0" Foreground="#333" BorderThickness="0"
                                FontSize="12" Cursor="Hand" Margin="0,0,5,0">
                            <TextBlock>
                                <Run Text="ðŸ”„ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Refresh], Mode=OneWay}"/>
                            </TextBlock>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D0D0D0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Command="{Binding ClearFiltersCommand}"
                                Padding="8,6" Background="#E0E0E0" Foreground="#333" BorderThickness="0"
                                FontSize="12" Cursor="Hand">
                            <TextBlock>
                                <Run Text="âœ– "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Reset], Mode=OneWay}"/>
                            </TextBlock>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D0D0D0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                <!-- Liste des Projets -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ProjetsFiltres}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                        CornerRadius="6" Padding="12" Margin="0,0,0,10" Cursor="Hand"
                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        MouseLeftButtonUp="Border_MouseLeftButtonUp">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F0F9F6"/>
                                                    <Setter Property="BorderBrush" Value="#00915A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Nom du Projet -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Projet.Nom}" FontWeight="Bold" 
                                                   FontSize="14" Foreground="#1A1919" TextWrapping="Wrap"/>
                                        
                                        <!-- Boutons d'action admin -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Orientation="Horizontal" 
                                                    VerticalAlignment="Top" Margin="10,0,0,0"
                                                    Visibility="{Binding DataContext.PeutCreerProjetsVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <Button Content="âœï¸" ToolTip="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_ModifyProject], Mode=OneWay}" 
                                                    Click="BtnModifierProjet_Click" Tag="{Binding Projet}"
                                                    Width="28" Height="28" Background="#E3F2FD" Foreground="#1976D2"
                                                    BorderThickness="0" FontSize="12" Cursor="Hand" Margin="0,0,4,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#BBDEFB"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <Button Content="â„¹ DÃ©tails" ToolTip="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_ViewDetails], Mode=OneWay}" 
                                                    Click="BtnDetailsProjet_Click" Tag="{Binding Projet}"
                                                    Height="28" Background="#E3F2FD" Foreground="#1976D2"
                                                    BorderThickness="0" FontSize="11" Cursor="Hand" Padding="8,4" Margin="0,0,5,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#BBDEFB"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <Button Content="ðŸ—‘ï¸" ToolTip="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_DeleteProject], Mode=OneWay}" 
                                                    Click="BtnSupprimerProjet_Click" Tag="{Binding Projet}"
                                                    Width="28" Height="28" Background="#FFEBEE" Foreground="#C62828"
                                                    BorderThickness="0" FontSize="12" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFCDD2"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>

                                        <!-- Informations enrichies : Date, Total tÃ¢ches, Progression%, RAG -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,3,0,8">
                                            <!-- Date de crÃ©ation -->
                                            <TextBlock Text="{Binding DateCreationFormatee, Mode=OneWay}" FontSize="11" Foreground="#999" Margin="0,0,8,0"/>
                                            
                                            <!-- Total tÃ¢ches -->
                                            <TextBlock Text="â€¢" FontSize="11" Foreground="#999" Margin="0,0,8,0"/>
                                            <TextBlock FontSize="11" Foreground="#666" Margin="0,0,8,0">
                                                <Run Text="{Binding TotalTaches, Mode=OneWay}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Tasks], Mode=OneWay}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                            
                                            <!-- Progression % -->
                                            <TextBlock Text="â€¢" FontSize="11" Foreground="#999" Margin="0,0,8,0"/>
                                            <TextBlock FontSize="11" FontWeight="Bold" Foreground="#00915A">
                                                <Run Text="{Binding ProgressionPourcent, Mode=OneWay}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                            
                                            <!-- Badge RAG -->
                                            <Border Background="{Binding CouleurRAG, Mode=OneWay}" CornerRadius="3" Padding="6,2" Margin="8,0,0,0">
                                                <TextBlock Text="{Binding StatutRAGDisplay, Mode=OneWay}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Stats dÃ©taillÃ©es par statut -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                                            <Border Background="#9E9E9E" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“‹ " FontSize="10"/>
                                                    <TextBlock Text="{Binding NbAfaire}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#2196F3" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âš¡ " FontSize="10"/>
                                                    <TextBlock Text="{Binding NbEnCours}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#FF9800" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ” " FontSize="10"/>
                                                    <TextBlock Text="{Binding NbEnTest}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#4CAF50" CornerRadius="3" Padding="5,2">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âœ“ " FontSize="10"/>
                                                    <TextBlock Text="{Binding NbTermine}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Right Panel: TÃ¢ches du Projet SÃ©lectionnÃ© -->
        <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="#1A1919" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text">
                                    <Setter.Value>
                                        <MultiBinding StringFormat="ðŸ“ {0}">
                                            <Binding Source="{x:Static services:LocalizationService.Instance}" Path="[Projects_TasksTitle]" Mode="OneWay"/>
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedProjet}" Value="{x:Null}">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="ðŸ“ {0}">
                                                    <Binding Source="{x:Static services:LocalizationService.Instance}" Path="[Projects_SelectProject]" Mode="OneWay"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding SelectedProjet.Projet.Nom}" FontSize="16" 
                               Foreground="#00915A" Margin="10,0,0,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    
                    <!-- Bouton tri -->
                    <Button Click="BtnInverserTri_Click"
                            Background="#F5F5F5" Foreground="#666" FontSize="11" FontWeight="SemiBold"
                            Padding="10,5" Margin="15,0,0,0" BorderThickness="1" BorderBrush="#E0E0E0"
                            Cursor="Hand" VerticalAlignment="Center">
                        <Button.Content>
                            <TextBlock>
                                <Run Text="ðŸ”„ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_ReverseSort], Mode=OneWay}"/>
                            </TextBlock>
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding SelectedProjet}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>



                <!-- Liste des TÃ¢ches -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding TachesProjetSelectionne}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                        CornerRadius="6" Padding="12" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Titre}" FontWeight="SemiBold" FontSize="13" 
                                                       TextWrapping="Wrap" Margin="0,0,0,5"/>

                                            <!-- Dates et DÃ©veloppeur -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="ðŸ“… " FontSize="11" Foreground="#666" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding DateCreation, StringFormat='CrÃ©Ã© le {0:dd/MM/yyyy}'}" 
                                                           FontSize="11" Foreground="#666" VerticalAlignment="Center"/>
                                                
                                                <TextBlock FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="5,0,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding DateDebut, StringFormat=' â€¢ DÃ©but: {0:dd/MM/yyyy}'}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DateDebut}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                
                                                <TextBlock FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="5,0,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding DateFinPrevue, StringFormat=' â€¢ Ã‰chÃ©ance: {0:dd/MM/yyyy}'}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DateFinPrevue}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                
                                                <!-- DÃ©veloppeur assignÃ© en Ã©tiquette -->
                                                <Border CornerRadius="3" Padding="5,2" Margin="8,0,0,0" Background="#E8F5E9">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DevAssigneNom}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DevAssigneNom}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ðŸ‘¤ " FontSize="10" Foreground="#2E7D32" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding DevAssigneNom}" FontSize="10" Foreground="#2E7D32" 
                                                                   FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- Avancement % et RAG -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <!-- Barre de progression -->
                                                <StackPanel Width="120" Margin="0,0,10,0">
                                                    <TextBlock Text="{Binding AvancementInfo, Mode=OneWay}" FontSize="10" FontWeight="Bold" 
                                                               Foreground="#00915A" Margin="0,0,0,2"/>
                                                    <ProgressBar Value="{Binding Avancement, Mode=OneWay}" Height="6" 
                                                                 Foreground="#00915A" Background="#E0E0E0" BorderThickness="0"/>
                                                </StackPanel>
                                                
                                                <!-- Badge RAG -->
