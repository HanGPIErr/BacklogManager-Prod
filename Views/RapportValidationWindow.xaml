<Window x:Class="BacklogManager.Views.RapportValidationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rapport de validation CRA" 
        Height="650" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Border Background="#4CAF50" CornerRadius="30" Width="60" Height="60" 
                    HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="âœ“" FontSize="32" Foreground="White" 
                          HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            </Border>
            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="TxtNombreValidations" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                <TextBlock Text="CRA validÃ©s avec succÃ¨s" FontSize="13" Foreground="#666"/>
            </StackPanel>
        </StackPanel>

        <!-- Titre du rapport -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="ðŸ“Š RAPPORT DE RESPECT DES DATES DE FIN" 
                          FontSize="16" FontWeight="Bold" Foreground="#333" 
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenu scrollable -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <StackPanel x:Name="PanelContenu">
                <!-- TÃ¢ches en retard -->
                <Border x:Name="BorderRetard" Background="White" CornerRadius="5" 
                        Padding="15" Margin="0,0,0,10" 
                        BorderBrush="#E0E0E0" BorderThickness="1"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="âš ï¸" FontSize="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="TÃ‚CHES EN RETARD" 
                                      FontSize="14" FontWeight="Bold" 
                                      Foreground="#E53935" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ItemsControl x:Name="ListeTachesRetard">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFEBEE" CornerRadius="3" 
                                           Padding="10" Margin="0,0,0,5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Nom}" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#333"/>
                                            <TextBlock Text="{Binding Detail}" 
                                                      FontSize="11" 
                                                      Foreground="#666" 
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- TÃ¢ches dans les temps -->
                <Border x:Name="BorderTemps" Background="White" CornerRadius="5" 
                        Padding="15" Margin="0,0,0,10"
                        BorderBrush="#E0E0E0" BorderThickness="1"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="âœ…" FontSize="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="TÃ‚CHES DANS LES TEMPS" 
                                      FontSize="14" FontWeight="Bold" 
                                      Foreground="#4CAF50" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ItemsControl x:Name="ListeTachesTemps">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E8F5E9" CornerRadius="3" 
                                           Padding="10" Margin="0,0,0,5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Nom}" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#333"/>
                                            <TextBlock Text="{Binding Detail}" 
                                                      FontSize="11" 
                                                      Foreground="#666" 
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Message si pas de donnÃ©es -->
                <Border x:Name="BorderAucuneDonnee" Background="White" CornerRadius="5" 
                        Padding="20" BorderBrush="#E0E0E0" BorderThickness="1"
                        Visibility="Collapsed">
                    <TextBlock Text="Aucune tÃ¢che avec date de fin attendue Ã  analyser." 
                              FontSize="13" Foreground="#999" 
                              HorizontalAlignment="Center" TextAlignment="Center"/>
                </Border>

                <!-- Analyse IA -->
                <Border x:Name="BorderAnalyseIA" Background="White" CornerRadius="5" 
                        Padding="0" Margin="0,10,0,0"
                        BorderBrush="#E0E0E0" BorderThickness="1"
                        Visibility="Collapsed">
                    <StackPanel>
                        <!-- En-tÃªte IA avec dÃ©gradÃ© -->
                        <Border Background="#667eea" CornerRadius="5,5,0,0" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Avatar IA -->
                                <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" 
                                       Background="White" Margin="0,0,12,0">
                                    <Image Source="pack://application:,,,/Images/agent-project-and-change.png" 
                                          Width="46" Height="46" 
                                          RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>
                                
                                <!-- Titre -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ¤– Analyse IA" 
                                              FontSize="15" FontWeight="Bold" 
                                              Foreground="White"/>
                                    <TextBlock Text="Agent Project &amp; Change" 
                                              FontSize="11" 
                                              Foreground="#E0E0E0" 
                                              Margin="0,2,0,0"/>
                                </StackPanel>
                                
                                <!-- Score -->
                                <Border Grid.Column="2" x:Name="BorderScore" 
                                       Background="White" CornerRadius="20" 
                                       Padding="12,6" VerticalAlignment="Center"
                                       Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="TxtScore" 
                                                  FontSize="16" FontWeight="Bold" 
                                                  Foreground="#667eea" 
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="/100" 
                                                  FontSize="11" 
                                                  Foreground="#999" 
                                                  Margin="2,0,0,0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Contenu IA -->
                        <Border Padding="15">
                            <StackPanel>
                                <!-- Message en cours de gÃ©nÃ©ration -->
                                <StackPanel x:Name="PanelChargementIA" Orientation="Horizontal" 
                                           HorizontalAlignment="Center" Margin="20">
                                    <TextBlock Text="â³" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="L'IA analyse vos validations..." 
                                          FontSize="13" Foreground="#666" 
                                          FontStyle="Italic"/>
                            </StackPanel>
                            
                            <!-- Message IA -->
                            <TextBlock x:Name="TxtAnalyseIA" 
                                      TextWrapping="Wrap" 
                                      FontSize="13" 
                                      Foreground="#333" 
                                      LineHeight="20"
                                      Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bouton OK -->
        <Button Grid.Row="3" Content="OK" 
                Width="120" Height="35"
                Background="#2196F3" Foreground="White"
                FontWeight="SemiBold" FontSize="13"
                BorderThickness="0"
                Cursor="Hand"
                Click="BtnOK_Click"
                HorizontalAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="5"
                                       BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1976D2"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
