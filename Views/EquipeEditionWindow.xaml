<Window x:Class="BacklogManager.Views.EquipeEditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ã‰quipe" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="25,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00915A" Offset="0"/>
                    <GradientStop Color="#00A566" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="ðŸ¢ GESTION DE L'Ã‰QUIPE" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="CrÃ©er ou modifier une Ã©quipe" 
                           FontSize="12" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" Margin="20" Padding="25" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                </Border.Effect>
                
                <StackPanel>
                    <!-- Nom -->
                    <TextBlock Text="Nom de l'Ã©quipe *" FontSize="13" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtNom" FontSize="14" Padding="12,10" Height="40"
                             BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20"/>

                    <!-- Code -->
                    <TextBlock Text="Code *" FontSize="13" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtCode" FontSize="14" Padding="12,10" Height="40"
                             BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20"
                             CharacterCasing="Upper"/>

                    <!-- Description -->
                    <TextBlock Text="Description" FontSize="13" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtDescription" FontSize="14" Padding="12,10" Height="60"
                             BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <!-- PÃ©rimÃ¨tre fonctionnel -->
                    <TextBlock Text="PÃ©rimÃ¨tre fonctionnel" FontSize="13" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtPerimetreFonctionnel" FontSize="14" Padding="12,10" Height="60"
                             BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <!-- Manager -->
                    <TextBlock Text="ðŸ‘¤ Manager de l'Ã©quipe" FontSize="13" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,8"/>
                    <ComboBox x:Name="CboManager" FontSize="14" Padding="12,10" Height="40"
                              BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,5"
                              DisplayMemberPath="Display" SelectedValuePath="Id"/>
                    <TextBlock Text="Le manager n'est pas comptÃ© dans les membres de l'Ã©quipe" 
                               FontSize="11" Foreground="#999" Margin="0,0,0,15" FontStyle="Italic"/>

                    <!-- Contact -->
                    <TextBlock Text="Contact (email)" FontSize="13" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtContact" FontSize="14" Padding="12,10" Height="40"
                             BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Boutons -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnAnnuler" Content="Annuler" Click="BtnAnnuler_Click"
                        Background="#6C757D" Foreground="White" Padding="20,10" Width="120"
                        BorderThickness="0" Cursor="Hand" FontWeight="SemiBold" FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5A6268"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="BtnEnregistrer" Content="Enregistrer" Click="BtnEnregistrer_Click" Margin="10,0,0,0"
                        Background="#00915A" Foreground="White" Padding="20,10" Width="120"
                        BorderThickness="0" Cursor="Hand" FontWeight="SemiBold" FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#007A4D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
