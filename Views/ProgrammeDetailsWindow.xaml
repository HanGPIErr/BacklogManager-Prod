<Window x:Class="BacklogManager.Views.ProgrammeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DÃ©tails du Programme" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="25,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00915A" Offset="0"/>
                    <GradientStop Color="#00A566" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock x:Name="TxtTitre" Text="ðŸŽ¯ DÃ‰TAILS DU PROGRAMME" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="TxtCode" Text="" 
                           FontSize="12" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Informations gÃ©nÃ©rales -->
                <Border Background="White" Padding="25" CornerRadius="8" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ INFORMATIONS GÃ‰NÃ‰RALES" FontSize="16" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom :" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtNom" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Code :" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtCodeDetail" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Responsable :" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtResponsable" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Statut global :" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <Border x:Name="BadgeStatutGlobal" CornerRadius="8" Padding="8,4">
                                    <TextBlock x:Name="TxtStatutGlobal" FontWeight="SemiBold" Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Date dÃ©but :" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtDateDebut" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Date fin cible :" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TxtDateFinCible" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <Border Background="White" Padding="25" CornerRadius="8" Margin="0,0,0,15" x:Name="BorderDescription">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="ðŸ“ DESCRIPTION" FontSize="16" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,15"/>
                        <TextBlock x:Name="TxtDescription" TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Objectifs -->
                <Border Background="White" Padding="25" CornerRadius="8" Margin="0,0,0,15" x:Name="BorderObjectifs">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¯ OBJECTIFS" FontSize="16" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,15"/>
                        <TextBlock x:Name="TxtObjectifs" TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Statistiques -->
                <Border Background="White" Padding="25" CornerRadius="8" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š STATISTIQUES" FontSize="16" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Projets -->
                            <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“ Projets" FontSize="12" Foreground="#1976D2" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtNbProjets" FontSize="28" FontWeight="Bold" Foreground="#1976D2"/>
                                </StackPanel>
                            </Border>

                            <!-- TÃ¢ches totales -->
                            <Border Grid.Column="1" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“‹ TÃ¢ches totales" FontSize="12" Foreground="#F57C00" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtNbTaches" FontSize="28" FontWeight="Bold" Foreground="#F57C00"/>
                                </StackPanel>
                            </Border>

                            <!-- Progression -->
                            <Border Grid.Column="2" Background="#E8F5E9" CornerRadius="8" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="âœ“ Progression" FontSize="12" Foreground="#00915A" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtProgression" FontSize="28" FontWeight="Bold" Foreground="#00915A"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Barre de progression -->
                        <Border Background="#F0F0F0" CornerRadius="12" Height="32" Margin="0,20,0,20">
                            <Grid>
                                <Border x:Name="ProgressBar" Background="#00915A" CornerRadius="12" 
                                        HorizontalAlignment="Left" Height="32"/>
                                <TextBlock x:Name="TxtProgressionTexte" FontSize="14" FontWeight="Bold" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Indicateurs RAG -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border x:Name="BadgeGreen" Background="#4CAF50" CornerRadius="10" 
                                    Padding="12,6" Margin="0,0,10,0">
                                <TextBlock x:Name="TxtGreen" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                            <Border x:Name="BadgeAmber" Background="#FF9800" CornerRadius="10" 
                                    Padding="12,6" Margin="0,0,10,0">
                                <TextBlock x:Name="TxtAmber" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                            <Border x:Name="BadgeRed" Background="#F44336" CornerRadius="10" Padding="12,6">
                                <TextBlock x:Name="TxtRed" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Projets associÃ©s -->
                <Border Background="White" Padding="25" CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="ðŸ“ PROJETS ASSOCIÃ‰S" FontSize="16" FontWeight="Bold" 
                                   Foreground="#00915A" Margin="0,0,0,15"/>
                        <ItemsControl x:Name="ListeProjets">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F9F9" CornerRadius="6" Padding="15" Margin="0,0,0,10"
                                            BorderBrush="#E0E0E0" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Nom}" FontSize="14" FontWeight="SemiBold" 
                                                           Foreground="#333" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Description}" FontSize="12" 
                                                           Foreground="#666" TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Border Background="#E8F5E9" CornerRadius="6" Padding="8,4" Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding Phase}" FontSize="11" 
                                                               Foreground="#00915A" FontWeight="SemiBold"/>
                                                </Border>
                                                <Border CornerRadius="6" Padding="8,4">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding StatutRAG}" Value="Green">
                                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding StatutRAG}" Value="Amber">
                                                                    <Setter Property="Background" Value="#FF9800"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding StatutRAG}" Value="Red">
                                                                    <Setter Property="Background" Value="#F44336"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding StatutRAG}" FontSize="11" 
                                                               Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnFermer" Content="Fermer" Click="BtnFermer_Click"
                        Background="#6C757D" Foreground="White" Padding="20,10" Width="120"
                        BorderThickness="0" Cursor="Hand" FontWeight="SemiBold" FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5A6268"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
