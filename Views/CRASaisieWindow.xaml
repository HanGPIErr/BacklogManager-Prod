<Window x:Class="BacklogManager.Views.CRASaisieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Saisir un CRA" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" 
                   Text="Saisie de temps (CRA)" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Date -->
        <Label Grid.Row="1" Content="Date :"/>
        <DatePicker Grid.Row="1" 
                    Margin="0,35,0,0"
                    SelectedDate="{Binding DateSelectionnee, Mode=TwoWay}"
                    DisplayDateEnd="{x:Static System:DateTime.Now}"/>

        <!-- Développeur -->
        <Label Grid.Row="2" Content="Développeur :"/>
        <ComboBox Grid.Row="2"
                  Margin="0,35,0,0"
                  ItemsSource="{Binding Devs}"
                  SelectedItem="{Binding DevSelectionne, Mode=TwoWay}"
                  DisplayMemberPath="Nom"
                  IsEnabled="{Binding CanSelectDev}"/>

        <!-- Tâche -->
        <Label Grid.Row="3" Content="Tâche :"/>
        <ComboBox Grid.Row="3"
                  Margin="0,35,0,0"
                  ItemsSource="{Binding TachesActives}"
                  SelectedItem="{Binding TacheSelectionnee, Mode=TwoWay}"
                  DisplayMemberPath="Titre">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="ToolTip" Value="{Binding Description}"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>

        <!-- Jours -->
        <Label Grid.Row="4" Content="Temps passé (en jours) :"/>
        <Grid Grid.Row="4" Margin="0,35,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     Text="{Binding Jours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="0.5j"
                        Width="50" 
                        Height="35"
                        Margin="2"
                        Command="{Binding SetJoursCommand}"
                        CommandParameter="0.5"/>
                <Button Content="1j" 
                        Width="50" 
                        Height="35"
                        Margin="2"
                        Command="{Binding SetJoursCommand}"
                        CommandParameter="1"/>
                <Button Content="1.5j" 
                        Width="50" 
                        Height="35"
                        Margin="2"
                        Command="{Binding SetJoursCommand}"
                        CommandParameter="1.5"/>
                <Button Content="2j" 
                        Width="50" 
                        Height="35"
                        Margin="2"
                        Command="{Binding SetJoursCommand}"
                        CommandParameter="2"/>
            </StackPanel>
        </Grid>

        <!-- Récapitulatif jour -->
        <Border Grid.Row="5" 
                Margin="0,15,0,0"
                Padding="12"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Récapitulatif de la journée" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total déjà saisi : " FontSize="13"/>
                    <TextBlock Text="{Binding TotalJour, StringFormat='{}{0:F2}h'}" 
                               FontSize="13"
                               FontWeight="Bold"
                               Foreground="{Binding TotalJourCouleur}"/>
                </StackPanel>
                <TextBlock Text="⚠️ Maximum 24h par jour" 
                           FontSize="11"
                           Foreground="Gray"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Commentaire -->
        <Label Grid.Row="6" Content="Commentaire (optionnel) :"/>
        <TextBox Grid.Row="7"
                 Margin="0,5,0,0"
                 Text="{Binding Commentaire, Mode=TwoWay}"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Boutons -->
        <StackPanel Grid.Row="9" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Annuler" 
                    Width="100" 
                    Height="40"
                    Margin="0,0,10,0"
                    IsCancel="True"/>
            <Button Content="Enregistrer" 
                    Width="120" 
                    Height="40"
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="Bold"
                    Command="{Binding SaveCRACommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
