<UserControl x:Class="BacklogManager.Views.AgentChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F3F2F1">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="EmojiTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Bouton Retour -->
                <Button Grid.Column="0" Content="â† Retour" Padding="12,8" Margin="0,0,15,0"
                        Background="#00915A" Foreground="White" FontSize="13" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand" Click="BtnRetour_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#007A4D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Image Grid.Column="1" Source="pack://application:,,,/Images/agent-project-and-change.png" 
                       Width="45" Height="45" Margin="0,0,15,0" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="Agent Project &amp; Change" FontSize="16" FontWeight="SemiBold" Foreground="#252423"/>
                    <TextBlock Text="Votre assistante virtuelle pour gÃ©rer votre backlog" FontSize="12" Foreground="#605E5C" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Configuration Token (affichÃ© si pas de token) -->
        <Border Grid.Row="1" Background="White" Padding="40" Margin="20"
                Visibility="{Binding NeedTokenConfiguration, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel MaxWidth="500" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”‘ Configuration de l'accÃ¨s" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                <TextBlock Text="Pour utiliser l'agent IA, vous devez configurer votre token d'accÃ¨s personnel." 
                           TextWrapping="Wrap" Margin="0,15,0,0" Foreground="#7F8C8D" TextAlignment="Center"/>
                
                <TextBlock Text="Token API" FontSize="14" FontWeight="SemiBold" Margin="0,25,0,5" Foreground="#2C3E50"/>
                <TextBox x:Name="TxtToken" Padding="10" FontSize="12" Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
                
                <TextBlock Text="âš ï¸ Ce token sera stockÃ© localement sur votre machine uniquement" 
                           FontSize="11" Foreground="#E74C3C" Margin="0,5,0,0" TextAlignment="Center"/>
                
                <Button Content="ðŸ’¾ Enregistrer le token" Padding="15,8" FontSize="14" Margin="0,20,0,0"
                        Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand"
                        Click="SaveToken_Click" HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Chat Interface -->
        <ScrollViewer Grid.Row="1" x:Name="ScrollMessages" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ChatVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Padding="20">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,15" HorizontalAlignment="{Binding Alignment}" MaxWidth="600">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Padding" Value="15"/>
                                    <Setter Property="CornerRadius" Value="12"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsUser}" Value="False">
                                            <Setter Property="Background" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="{Binding Message}" TextWrapping="Wrap" FontSize="14" 
                                           Foreground="#252423" LineHeight="20"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input Area -->
        <Border Grid.Row="2" Background="White" Padding="20,10,20,10" BorderBrush="#E1DFDD" BorderThickness="0,1,0,0"
                Visibility="{Binding ChatVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Zone de saisie -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" x:Name="TxtMessage"
                             Text="{Binding MessageActuel, UpdateSourceTrigger=PropertyChanged}"
                             Padding="12" FontSize="14" VerticalAlignment="Center"
                             BorderBrush="#E1DFDD" BorderThickness="1"
                             TextWrapping="Wrap" AcceptsReturn="True" MaxHeight="100"
                             VerticalScrollBarVisibility="Auto"/>
                    
                    <Button Grid.Column="1" Content="Envoyer âž¤" Padding="20,12" Margin="10,0,0,0"
                            Background="#00915A" Foreground="White" FontSize="14" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand"
                            IsEnabled="{Binding CanSendMessage}"
                            Click="Send_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007A4D"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                
                <!-- Indication -->
                <TextBlock Grid.Row="1" Text="Appuyez sur EntrÃ©e pour envoyer, Shift+EntrÃ©e pour un saut de ligne" 
                           FontSize="11" Foreground="#8A8886" Margin="0,6,0,8"/>
                
                <!-- Boutons d'actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="âž• Nouvelle conversation" Padding="10,6" FontSize="11"
                            Background="Transparent" Foreground="#605E5C" BorderThickness="1" BorderBrush="#E1DFDD" Cursor="Hand"
                            Click="NewConversation_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EDEBE9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ—‘ï¸ Effacer l'historique" Margin="10,0,0,0" Padding="10,6" FontSize="11"
                            Background="Transparent" Foreground="#605E5C" BorderThickness="1" BorderBrush="#E1DFDD" Cursor="Hand"
                            Click="ClearHistory_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EDEBE9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ”‘ Modifier le token" Margin="10,0,0,0" Padding="10,6" FontSize="11"
                            Background="Transparent" Foreground="#605E5C" BorderThickness="1" BorderBrush="#E1DFDD" Cursor="Hand"
                            Click="ChangeToken_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EDEBE9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
