<Window x:Class="BacklogManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion - BacklogManager" Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize"
        Icon="/Images/backlogmanager.ico">
    <Grid>
        <!-- Logo BNP -->
        <Border Height="120" VerticalAlignment="Top" Background="#00915A">
            <StackPanel VerticalAlignment="Center">
                <Image Source="/Images/logobnp.png" Height="50" Width="200" 
                       Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Backlog Manager" FontSize="16" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,0" Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Contenu -->
        <Border Margin="40,140,40,40" Background="White" CornerRadius="8" Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="ðŸ” Connexion" FontSize="22" FontWeight="SemiBold" 
                           Foreground="#1A1919" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock x:Name="TxtUsername" FontSize="14" Foreground="#666" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Entrez votre identifiant Windows:" FontSize="13" 
                           Foreground="#333" Margin="0,10,0,8"/>
                
                <TextBox x:Name="TxtUsernameInput" FontSize="14" Height="35" 
                         Padding="10,8" BorderBrush="#CCC" BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Text="J04831"/>

                <TextBlock x:Name="TxtStatut" FontSize="13" Foreground="#00915A" 
                           HorizontalAlignment="Center" Margin="0,15,0,15" 
                           TextWrapping="Wrap" TextAlignment="Center"/>

                <TextBlock x:Name="TxtErreur" FontSize="12" Foreground="#D32F2F" 
                           HorizontalAlignment="Center" Margin="0,0,0,15" 
                           TextWrapping="Wrap" TextAlignment="Center" 
                           Visibility="Collapsed"/>

                <Button x:Name="BtnConnecter" Content="Se connecter" 
                        Background="#00915A" Foreground="White" 
                        FontSize="14" FontWeight="SemiBold"
                        Height="40" Padding="30,0"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnConnecter_Click"
                        HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}"
                                    Height="{TemplateBinding Height}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#007A4D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Separator Margin="0,25,0,15"/>

                <TextBlock FontSize="11" Foreground="#999" TextAlignment="Center" TextWrapping="Wrap">
                    <Run Text="Entrez votre identifiant Windows (ex: J04831, J12222)"/>
                    <LineBreak/>
                    <Run Text="Ou laissez vide pour authentification automatique"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
