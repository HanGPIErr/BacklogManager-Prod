                </StackPanel>
                <Button Grid.Column="1" Content="âœ• Fermer" 
                        Padding="15,10" Background="White" Foreground="#00915A" 
                        BorderThickness="0" FontSize="14" FontWeight="Bold"
                        Cursor="Hand" Click="BtnFermer_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
