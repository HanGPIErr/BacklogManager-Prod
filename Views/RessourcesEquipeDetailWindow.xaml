                BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#D0D0D0" BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Ressources -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ‘¥ Total Ressources" FontSize="11" Foreground="#666" 
                               HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtTotalRessources" Text="0" FontSize="32" FontWeight="Bold" 
                               Foreground="#00915A" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Ã‰quipes actives -->
                <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" Padding="15,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ¢ Ã‰quipes Actives" FontSize="11" Foreground="#666" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtTotalEquipes" Text="0" FontSize="32" FontWeight="Bold" 
                                   Foreground="#2196F3" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Projets actifs -->
                <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" Padding="15,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“ Projets Actifs" FontSize="11" Foreground="#666" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtTotalProjets" Text="0" FontSize="32" FontWeight="Bold" 
                                   Foreground="#FF9800" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Charge moyenne -->
                <Border Grid.Column="3" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" Padding="15,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="âš–ï¸ Charge Moyenne" FontSize="11" Foreground="#666" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtChargeMoyenne" Text="0.0" FontSize="32" FontWeight="Bold" 
                                   Foreground="#9C27B0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Filtres par Ã©quipe -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,15"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="ðŸ” Filtrer par Ã©quipe :" FontSize="13" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,10"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <WrapPanel x:Name="PanelFiltresEquipes" Orientation="Horizontal">
                        <!-- Boutons d'Ã©quipe seront ajoutÃ©s dynamiquement -->
