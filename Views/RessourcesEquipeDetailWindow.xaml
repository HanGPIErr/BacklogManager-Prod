            <Border.Effect>
                <DropShadowEffect Color="#D0D0D0" BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
            </Border.Effect>
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="ListeRessources">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" CornerRadius="10" Padding="15" Margin="5"
                                        BorderBrush="#E0E0E0" BorderThickness="1">
                                    <StackPanel>
                                        <!-- En-tÃªte avec nom et Ã©quipe -->
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Avatar -->
                                            <Border Grid.Column="0" Background="#E0F2F1" 
                                                    Width="40" Height="40" CornerRadius="20" 
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="ðŸ‘¤" FontSize="20" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Nom et Ã©quipe -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Nom}" FontSize="14" FontWeight="Bold" 
