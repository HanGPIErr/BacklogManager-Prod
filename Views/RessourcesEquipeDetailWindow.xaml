                                        </Border>
                                        
                                        <!-- Statistiques -->
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Projets assignÃ©s -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Projets" FontSize="9" Foreground="#999" Margin="0,0,0,3"/>
                                                <Border CornerRadius="6" Padding="6,3">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#FFE0B2" Offset="0"/>
                                                            <GradientStop Color="#FFCC80" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="#E65100" 
                                                               HorizontalAlignment="Center">
                                                        <Run Text="{Binding NbProjets}"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- TÃ¢ches actives -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="TÃ¢ches" FontSize="9" Foreground="#999" Margin="0,0,0,3"/>
                                                <Border CornerRadius="6" Padding="6,3">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#BBDEFB" Offset="0"/>
                                                            <GradientStop Color="#90CAF9" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="#0D47A1" 
                                                               HorizontalAlignment="Center">
                                                        <Run Text="{Binding NbTachesActives}"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <!-- Jauge de charge -->
                                        <StackPanel Margin="0,0,0,10">
                                            <Grid Margin="0,0,0,5">
                                                <TextBlock Text="Charge de travail" FontSize="10" Foreground="#666" 
                                                           HorizontalAlignment="Left"/>
                                                <TextBlock FontSize="11" FontWeight="Bold" HorizontalAlignment="Right">
                                                    <TextBlock.Foreground>
                                                        <SolidColorBrush Color="{Binding CouleurCharge}"/>
                                                    </TextBlock.Foreground>
                                                    <Run Text="{Binding NiveauCharge}"/>
                                                </TextBlock>
                                            </Grid>
                                            <Border Background="#E0E0E0" Height="8" CornerRadius="4">
                                                <Border Background="{Binding CouleurChargeBrush}" 
                                                        Width="{Binding LargeurBarreCharge}" 
                                                        HorizontalAlignment="Left" CornerRadius="4">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="{Binding CouleurCharge}" 
                                                                         BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                                    </Border.Effect>
                                                </Border>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- Liste des projets -->
                                        <StackPanel>
                                            <TextBlock Text="ðŸ“ Projets assignÃ©s :" FontSize="10" FontWeight="Bold" 
                                                       Foreground="#333" Margin="0,0,0,5"/>
                                            <ItemsControl ItemsSource="{Binding ListeProjets}" MaxHeight="120">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White" CornerRadius="6" Padding="8,5" 
                                                                Margin="0,0,0,4" BorderBrush="#E0E0E0" BorderThickness="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="{Binding Nom}" 
                                                                           FontSize="10" Foreground="#333" 
                                                                           TextTrimming="CharacterEllipsis"
                                                                           ToolTip="{Binding Nom}"/>
                                                                <Border Grid.Column="1" Background="#E3F2FD" 
                                                                        CornerRadius="4" Padding="4,2" Margin="5,0,0,0">
                                                                    <TextBlock FontSize="9" Foreground="#1976D2" FontWeight="Bold">
                                                                        <Run Text="{Binding NbTaches}"/>
                                                                        <Run Text=" tÃ¢ches"/>
                                                                    </TextBlock>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- Message si aucun projet -->
                                            <TextBlock Text="Aucun projet assignÃ©" FontSize="10" 
                                                       Foreground="#999" FontStyle="Italic" 
                                                       Visibility="{Binding AucunProjet, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Message si aucune ressource -->
                <StackPanel x:Name="PanelAucuneRessource" Visibility="Collapsed" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="Aucune ressource trouvÃ©e" FontSize="16" FontWeight="Bold" 
                               Foreground="#666" HorizontalAlignment="Center"/>
                    <TextBlock Text="VÃ©rifiez les filtres appliquÃ©s" FontSize="12" 
                               Foreground="#999" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Pied de page avec lÃ©gende -->
        <Border Grid.Row="4" Background="White" CornerRadius="10" Padding="15" Margin="0,15,0,0"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“Š LÃ©gende charge : " FontSize="11" FontWeight="Bold" 
                           Foreground="#666" VerticalAlignment="Center" Margin="0,0,15,0"/>
                
                <Border Background="#4CAF50" Width="12" Height="12" CornerRadius="2" Margin="0,0,5,0"/>
                <TextBlock Text="Faible (0-3)" FontSize="10" Foreground="#666" Margin="0,0,20,0" VerticalAlignment="Center"/>
                
                <Border Background="#FF9800" Width="12" Height="12" CornerRadius="2" Margin="0,0,5,0"/>
                <TextBlock Text="Moyenne (4-6)" FontSize="10" Foreground="#666" Margin="0,0,20,0" VerticalAlignment="Center"/>
                
                <Border Background="#F44336" Width="12" Height="12" CornerRadius="2" Margin="0,0,5,0"/>
                <TextBlock Text="Ã‰levÃ©e (7+)" FontSize="10" Foreground="#666" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
