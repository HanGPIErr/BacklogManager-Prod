<Window x:Class="BacklogManager.Views.GestionRolesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ­ Gestion des RÃ´les" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸŽ­ Configuration des RÃ´les et Permissions" 
                   FontSize="20" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,20"/>

        <!-- Liste des rÃ´les avec permissions -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="LstRoles">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="6" Padding="20" Margin="0,0,0,15">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
                            </Border.Effect>
                            <StackPanel>
                                <!-- Nom du rÃ´le -->
                                <TextBlock Text="{Binding Nom}" FontSize="18" FontWeight="Bold" 
                                           Foreground="#00915A" Margin="0,0,0,15"/>

                                <!-- Permissions -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Colonne 1 -->
                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <CheckBox Content="CrÃ©er des demandes" IsChecked="{Binding PeutCreerDemandes}" 
                                                  Margin="0,5" FontSize="13"/>
                                        <CheckBox Content="Chiffrer les tÃ¢ches" IsChecked="{Binding PeutChiffrer}" 
                                                  Margin="0,5" FontSize="13"/>
                                        <CheckBox Content="Prioriser les tÃ¢ches" IsChecked="{Binding PeutPrioriser}" 
                                                  Margin="0,5" FontSize="13"/>
                                        <CheckBox Content="Modifier les tÃ¢ches" IsChecked="{Binding PeutModifierTaches}" 
                                                  Margin="0,5" FontSize="13"/>
                                    </StackPanel>

                                    <!-- Colonne 2 -->
                                    <StackPanel Grid.Column="1">
                                        <CheckBox Content="Supprimer les tÃ¢ches" IsChecked="{Binding PeutSupprimerTaches}" 
                                                  Margin="0,5" FontSize="13"/>
                                        <CheckBox Content="GÃ©rer les utilisateurs" IsChecked="{Binding PeutGererUtilisateurs}" 
                                                  Margin="0,5" FontSize="13"/>
                                        <CheckBox Content="GÃ©rer les rÃ©fÃ©rentiels" IsChecked="{Binding PeutGererReferentiels}" 
                                                  Margin="0,5" FontSize="13"/>
                                        <CheckBox Content="Voir les KPI" IsChecked="{Binding PeutVoirKPI}" 
                                                  Margin="0,5" FontSize="13"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Bouton Enregistrer -->
                                <Button Content="ðŸ’¾ Enregistrer les modifications" 
                                        Click="BtnEnregistrerRole_Click"
                                        Tag="{Binding}"
                                        Margin="0,15,0,0" Padding="12,8"
                                        Background="#00915A" Foreground="White" 
                                        BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#007A4D"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bouton Fermer -->
        <Button Grid.Row="2" Content="Fermer" Click="BtnFermer_Click"
                Padding="20,10" HorizontalAlignment="Right"
                Background="#E0E0E0" Foreground="#333" 
                BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand" Margin="0,15,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D0D0D0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
