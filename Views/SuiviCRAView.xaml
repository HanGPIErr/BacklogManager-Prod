<UserControl x:Class="BacklogManager.Views.SuiviCRAView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Shared"
             Background="#F5F5F5">

    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“Š SUIVI DES CRA" FontSize="24" FontWeight="Bold" 
                               Foreground="#00915A" Margin="0,0,0,5"/>
                    <TextBlock Text="Vue administrative - Tracking dÃ©taillÃ© par dÃ©veloppeur" 
                               FontSize="13" Foreground="#666" Opacity="0.8"/>
                </StackPanel>

                <!-- SÃ©lection dÃ©veloppeur -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DÃ©veloppeur:" FontSize="13" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666"/>
                    <ComboBox ItemsSource="{Binding Devs}" DisplayMemberPath="Nom"
                              SelectedItem="{Binding DevSelectionne}"
                              Width="200" Padding="10,8" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Navigation et mode d'affichage -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode d'affichage -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Content="ðŸ“… Mois" Command="{Binding ChangerModeCommand}" CommandParameter="mois"
                            Padding="15,8" Margin="0,0,5,0" FontSize="12" FontWeight="SemiBold" Cursor="Hand"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#666"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EstModeMois}" Value="True">
                                        <Setter Property="Background" Value="#00915A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ“‹ Liste" Command="{Binding ChangerModeCommand}" CommandParameter="liste"
                            Padding="15,8" FontSize="12" FontWeight="SemiBold" Cursor="Hand"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#666"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EstModeListe}" Value="True">
                                        <Setter Property="Background" Value="#00915A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Navigation pÃ©riode -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="â—€" Command="{Binding PeriodePrecedenteCommand}"
                            Padding="12,8" Margin="0,0,15,0" Background="#F0F0F0" BorderThickness="0" 
                            FontSize="14" FontWeight="Bold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D0D0D0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="{Binding PeriodeAffichage}" FontSize="16" FontWeight="Bold" 
                               Foreground="#00915A" VerticalAlignment="Center" MinWidth="250" TextAlignment="Center"/>

                    <Button Content="â–¶" Command="{Binding PeriodeSuivanteCommand}"
                            Padding="12,8" Margin="15,0,15,0" Background="#F0F0F0" BorderThickness="0" 
                            FontSize="14" FontWeight="Bold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D0D0D0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸŽ¯ Aujourd'hui" Command="{Binding AujourdhuiCommand}"
                            Padding="12,8" Background="#E8F5E9" Foreground="#00915A" BorderThickness="0" 
                            FontSize="12" FontWeight="SemiBold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C8E6C9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Calendrier -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- En-tÃªtes jours semaine (seulement en mode calendrier) -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EstModeListe}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="LUN" HorizontalAlignment="Center" FontWeight="Bold" 
                                   Foreground="#00915A" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="MAR" HorizontalAlignment="Center" FontWeight="Bold" 
                                   Foreground="#00915A" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="MER" HorizontalAlignment="Center" FontWeight="Bold" 
                                   Foreground="#00915A" FontSize="12"/>
                        <TextBlock Grid.Column="3" Text="JEU" HorizontalAlignment="Center" FontWeight="Bold" 
                                   Foreground="#00915A" FontSize="12"/>
                        <TextBlock Grid.Column="4" Text="VEN" HorizontalAlignment="Center" FontWeight="Bold" 
                                   Foreground="#00915A" FontSize="12"/>
                        <TextBlock Grid.Column="5" Text="SAM" HorizontalAlignment="Center" FontWeight="Bold" 
                                   Foreground="#757575" FontSize="12"/>
                        <TextBlock Grid.Column="6" Text="DIM" HorizontalAlignment="Center" FontWeight="Bold" 
                                   Foreground="#757575" FontSize="12"/>
                    </Grid>

                    <!-- Grille calendrier (mode mois) -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding JoursCalendrier}">
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EstModeListe}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.JourSelectionnCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="2" BorderThickness="0" Cursor="Hand" Padding="8">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                                                Padding="{TemplateBinding Padding}">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <TextBlock Grid.Row="0" Text="{Binding Jour}" FontSize="16" FontWeight="Bold" 
                                                                           HorizontalAlignment="Center" Foreground="#333"/>

                                                                <TextBlock Grid.Row="1" Text="ðŸŽŠ" FontSize="14" HorizontalAlignment="Center" Margin="0,2,0,0"
                                                                           Visibility="{Binding EstJourFerie, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                                <Border Grid.Row="3" Background="#00915A" CornerRadius="3" Padding="6,3" Margin="0,4,0,0">
                                                                    <TextBlock Text="{Binding TotalJoursAffiche}" FontSize="11" FontWeight="Bold" 
                                                                               Foreground="White" HorizontalAlignment="Center"/>
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding TotalJoursAffiche}" Value="">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#00915A"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                            <DataTrigger Binding="{Binding EstAujourdhui}" Value="True">
                                                                <Setter Property="Background" Value="#C8E6C9"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding EstWeekend}" Value="True">
                                                                <Setter Property="Background" Value="#F5F5F5"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding EstJourFerie}" Value="True">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                            </DataTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Vue liste (mode liste) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ScrollViewer.Style>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EstModeListe}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ScrollViewer.Style>
                        <ItemsControl ItemsSource="{Binding MoisAnnee}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.MoisSelectionnCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                                        CornerRadius="8" Width="140" Height="180" Margin="8" Padding="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                                                    </Border.Effect>
                                                    <StackPanel>
                                                        <!-- Nom du mois -->
                                                        <TextBlock Text="{Binding NomMois}" FontSize="16" FontWeight="Bold" 
                                                                   HorizontalAlignment="Center" Foreground="#00915A" Margin="0,0,0,15"/>
                                                        
                                                        <!-- Total jours travaillÃ©s -->
                                                        <Border Background="#E8F5E9" CornerRadius="6" Padding="12,8" Margin="0,0,0,10">
                                                            <StackPanel>
                                                                <TextBlock Text="TOTAL" FontSize="10" Foreground="#666" 
                                                                           HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                                                <TextBlock Text="{Binding TotalAffiche}" FontSize="24" FontWeight="Bold" 
                                                                           Foreground="#00915A" HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Border>
                                                        
                                                        <!-- Nombre de jours saisis -->
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <TextBlock Text="ðŸ“… " FontSize="12"/>
                                                            <TextBlock FontSize="12" Foreground="#666">
                                                                <Run Text="{Binding NombreJoursSaisis, Mode=OneWay}"/>
                                                                <Run Text=" jour(s)"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        
                                                        <!-- Heures totales -->
                                                        <TextBlock FontSize="11" Foreground="#999" HorizontalAlignment="Center" Margin="0,6,0,0">
                                                            <Run Text="â±ï¸ "/>
                                                            <Run Text="{Binding TotalHeures, StringFormat='{}{0:F1}h', Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="BorderBrush" Value="#00915A"/>
                                                                    <Setter Property="BorderThickness" Value="2"/>
                                                                    <Setter Property="Effect">
                                                                        <Setter.Value>
                                                                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.2" Color="#00915A"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Panneau latÃ©ral -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Statistiques par dev -->
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥ STATISTIQUES" FontSize="14" FontWeight="Bold" 
                                       Foreground="#00915A" Margin="0,0,0,12"/>

                            <ItemsControl ItemsSource="{Binding StatsDev}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" 
                                                CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="{Binding Nom}" FontSize="13" FontWeight="SemiBold" 
                                                           Foreground="#333" Margin="0,0,0,6"/>

                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock FontSize="11" Foreground="#666">
                                                            <Run Text="ðŸ“Š"/>
                                                            <Run Text="{Binding TotalJoursPeriode, StringFormat='{}{0:F1}j', Mode=OneWay}"/>
                                                            <Run Text="(" Foreground="#999"/>
                                                            <Run Text="{Binding TotalHeuresPeriode, StringFormat='{}{0:F1}h', Mode=OneWay}" Foreground="#999"/>
                                                            <Run Text=")" Foreground="#999"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="11" Foreground="#666" Margin="0,2,0,0">
                                                            <Run Text="ðŸ“…"/>
                                                            <Run Text="{Binding NombreJoursSaisis, Mode=OneWay}"/>
                                                            <Run Text="jour(s) saisi(s)"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- DÃ©tail jour sÃ©lectionnÃ© -->
                    <Border Background="White" CornerRadius="8" Padding="15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ“… DÃ‰TAIL DU JOUR" FontSize="14" FontWeight="Bold" 
                                       Foreground="#00915A" Margin="0,0,0,8"/>

                            <TextBlock Text="{Binding JourSelectionne.Date, StringFormat='dddd d MMMM yyyy'}" 
                                       FontSize="12" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <ItemsControl ItemsSource="{Binding CRAsJourSelectionne}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" 
                                                CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="{Binding TacheNom}" FontWeight="SemiBold" 
                                                           FontSize="12" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                                
                                                <TextBlock Grid.Row="1" Text="{Binding Commentaire}" FontSize="10" 
                                                           Foreground="#666" Margin="0,0,0,5" TextWrapping="Wrap"
                                                           Visibility="{Binding Commentaire, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                
                                                <Border Grid.Row="2" Background="#00915A" CornerRadius="3" Padding="4,2" HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding Jours, StringFormat='{}{0:F1}j'}" 
                                                               FontSize="10" FontWeight="Bold" Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Aucun CRA saisi ce jour" FontSize="12" Foreground="#999" 
                                       FontStyle="Italic" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
