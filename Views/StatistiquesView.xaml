                                <ComboBoxItem Content="ðŸ”– 3 derniers mois"/>
                                <ComboBoxItem Content="â± PÃ©riode personnalisÃ©e"/>
                                <ComboBoxItem Content="ðŸŒ Tout afficher"/>
                            </ComboBox>
                            <StackPanel x:Name="PanelDatesCustom" Orientation="Horizontal" Margin="15,0,0,0" Visibility="Collapsed">
                                <TextBlock Text="Du :" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <DatePicker x:Name="DateDebut" Width="130" VerticalAlignment="Center"
                                            SelectedDate="{Binding DateDebutFiltre, Mode=TwoWay}"/>
                                <TextBlock Text="Au :" VerticalAlignment="Center" Margin="15,0,5,0"/>
