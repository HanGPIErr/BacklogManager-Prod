            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- En-tÃªte -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ðŸ“Š Tableau de bord" 
                                   FontSize="28" FontWeight="Bold" Foreground="#00915A"/>
                        <TextBlock Text="Vue d'ensemble des performances et statistiques" 
                                   FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                        <!-- Filtres de pÃ©riode -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <TextBlock Text="ðŸ—“ PÃ©riode :" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#666" Margin="0,0,10,0"/>
