                                        ToolTip="Appliquer la pÃ©riode">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="ðŸ”„ RafraÃ®chir" 
                                Command="{Binding RafraichirCommand}"
                                Background="#00915A" Foreground="White" 
                                Padding="15,10" FontWeight="SemiBold" FontSize="13"
                                BorderThickness="0" Cursor="Hand" VerticalAlignment="Center"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#00915A"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderThickness="0" 
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#007A4D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="ðŸ“„ Exporter PDF" 
                                Command="{Binding ExporterPDFCommand}"
                                Background="#FF6F00" Foreground="White" 
                                Padding="15,10" FontWeight="SemiBold" FontSize="13"
                                BorderThickness="0" Cursor="Hand" VerticalAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF6F00"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderThickness="0" 
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E66300"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Cartes de statistiques rapides -->
                <WrapPanel Margin="0,0,0,20">
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Total TÃ¢ches" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding TotalTaches}" FontSize="36" FontWeight="Bold" Foreground="#00915A" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="âœ… TerminÃ©es" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding TachesTerminees}" FontSize="36" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding PourcentageTerminees}" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="â³ En cours" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding TachesEnCours}" FontSize="36" FontWeight="Bold" Foreground="#2196F3" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Projets actifs" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding ProjetsActifs}" FontSize="36" FontWeight="Bold" Foreground="#FF9800" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Statistiques CRA -->
                <WrapPanel Margin="0,0,0,20">
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="â° Total Heures Saisies" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding TotalHeuresCRA}" FontSize="36" FontWeight="Bold" Foreground="#00915A" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding TotalJoursCRA}" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="ðŸ“… Jours Saisis (ce mois)" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding JoursSaisisMoisCourant}" FontSize="36" FontWeight="Bold" Foreground="#2196F3" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding TauxCompletionMois}" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥ Devs Actifs" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding DevsActifs}" FontSize="36" FontWeight="Bold" Foreground="#9C27B0" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Width="250">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¯ Taux de RÃ©alisation" FontSize="12" Foreground="#666666"/>
                            <TextBlock Text="{Binding TauxRealisation}" FontSize="36" FontWeight="Bold" Foreground="#FF6F00" Margin="0,5,0,0"/>
                            <TextBlock Text="Temps rÃ©el vs estimÃ©" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                            <TextBlock Text="(>100% = dÃ©passement)" FontSize="11" Foreground="#999999" FontStyle="Italic" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Graphique: TÃ¢ches par statut -->
                <Border Style="{StaticResource StatCardStyle}" Margin="10,0,10,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š RÃ©partition des tÃ¢ches par statut" 
                                   FontSize="16" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding TachesParStatut}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Statut}" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                        <Border Grid.Column="1" Height="30" Background="#E0E0E0" CornerRadius="4" Margin="10,0">
                                            <Border Background="{Binding Couleur}" CornerRadius="4" HorizontalAlignment="Left" 
                                                    Width="{Binding LargeurBarre}"/>
                                        </Border>
                                        <TextBlock Text="{Binding Pourcentage}" Grid.Column="2" VerticalAlignment="Center" 
                                                   Foreground="#666666" HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding Nombre}" Grid.Column="3" VerticalAlignment="Center" 
                                                   FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Deux colonnes: Charge par dÃ©veloppeur + CRA par dÃ©veloppeur -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Charge par dÃ©veloppeur (tÃ¢ches) -->
                    <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="10,0,5,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥ Charge par dÃ©veloppeur (tÃ¢ches)" 
                                       FontSize="16" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,15"/>
                            <TextBlock Text="ðŸ’¡ Double-cliquez sur une ligne pour voir les dÃ©tails" 
                                       FontSize="11" Foreground="#666666" FontStyle="Italic" Margin="0,0,0,10"/>
                            <DataGrid x:Name="GridChargeParDev"
                                      ItemsSource="{Binding ChargeParDev}" 
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      CanUserSortColumns="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="0"
                                      Background="White"
                                      RowBackground="White"
                                      AlternatingRowBackground="#F9F9F9"
                                      MouseDoubleClick="GridChargeParDev_MouseDoubleClick">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="DÃ©veloppeur" Binding="{Binding NomDev}" Width="*"/>
