<UserControl x:Class="BacklogManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shared="clr-namespace:BacklogManager.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#F0F2F5">
    <UserControl.Resources>
        <shared:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Style pour les cartes principales -->
        <Style x:Key="MainCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30,25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="2" Opacity="0.3" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour les boutons "Voir tout" -->
        <Style x:Key="ViewAllButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#00915A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="35,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header avec Bonjour + Date + BNP Branding - Responsive -->
            <Border Grid.Row="0" Style="{StaticResource MainCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo/Accent BNP -->
                    <Border Grid.Column="0" Background="#00915A" Width="5" CornerRadius="2" 
                            Margin="0,0,20,0" VerticalAlignment="Stretch"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="#1A1919" TextWrapping="Wrap">
                            <Run Text="ðŸ‘‹ Bonjour, "/>
                            <Run Text="{Binding NomUtilisateur}" Foreground="#00915A"/>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="#666666" Margin="0,5,0,0">
                            <Run Text="ðŸ“… "/>
                            <Run Text="{Binding DateAujourdhui}"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Bouton Guide + Quick stats - Responsive -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <Button x:Name="BtnVoirGuide" Content="ðŸ“– Voir le guide" 
                                Height="38" Padding="18,0" Margin="0,0,15,0"
                                Background="#0078D7" Foreground="White" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand" FontSize="13"
                                Click="BtnVoirGuide_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#0078D7"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005A9E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Border Background="#E8F5E9" CornerRadius="8" 
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="ProductivitÃ© du jour" FontSize="11" 
                                           Foreground="#00915A" FontWeight="SemiBold"/>
                                <TextBlock FontSize="20" FontWeight="Bold" Foreground="#00915A" 
                                           Margin="0,3,0,0" HorizontalAlignment="Center">
                                    <Run Text="{Binding TauxProductivite, Mode=OneWay}"/>
                                    <Run Text="%" FontSize="14"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- STATISTIQUES EN CARTES (KPI) - Responsive avec WrapPanel -->
            <ItemsControl Grid.Row="1" Margin="0,0,0,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Items>
                
                <!-- TÃ¢ches terminÃ©es -->
                <Border Style="{StaticResource MainCard}" Margin="0,0,10,10" Padding="20,18" 
                        MinWidth="200" Width="240">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="âœ… TerminÃ©es" FontSize="13" 
                                   Foreground="#666666" Margin="0,0,0,8"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontSize="32" FontWeight="Bold" 
                                       Foreground="#00915A" VerticalAlignment="Center">
                                <Run Text="{Binding NbTachesTerminees, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Grid.Column="1" FontSize="14" Foreground="#999999" 
                                       VerticalAlignment="Bottom" Margin="5,0,0,5">
                                <Run Text="/ "/>
                                <Run Text="{Binding NbTachesTotal, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- TÃ¢ches en cours -->
                <Border Style="{StaticResource MainCard}" Margin="0,0,10,10" Padding="20,18" 
                        MinWidth="200" Width="240">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="ðŸ”„ En cours" FontSize="13" 
                                   Foreground="#666666" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="1" Text="{Binding NbTachesEnCours, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#2196F3"/>
                    </Grid>
                </Border>
                
                <!-- TÃ¢ches urgentes -->
                <Border Style="{StaticResource MainCard}" Margin="0,0,10,10" Padding="20,18" 
                        MinWidth="200" Width="240">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="âš¡ Urgentes" FontSize="13" 
                                   Foreground="#666666" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="1" Text="{Binding NbTachesUrgentes, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#FF5722"/>
                    </Grid>
                </Border>
                
                <!-- Projets actifs -->
                <Border Style="{StaticResource MainCard}" Margin="0,0,10,10" Padding="20,18" 
                        MinWidth="200" Width="240">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="ðŸ“ Projets" FontSize="13" 
                                   Foreground="#666666" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="1" Text="{Binding NbProjetsActifs, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                    </Grid>
                </Border>
                
                </ItemsControl.Items>
            </ItemsControl>
            
            <!-- STATISTIQUES PROJETS -->
            <Border Grid.Row="2" Style="{StaticResource MainCard}">
                <StackPanel>
                    <TextBlock FontSize="20" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,20">
                        <Run Text="ðŸ“Š APERÃ‡U DES PROJETS"/>
                    </TextBlock>
                    
                    <ItemsControl ItemsSource="{Binding StatistiquesProjetsList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="Transparent" BorderThickness="0" 
                                        Padding="0" Margin="0,0,15,15" Cursor="Hand"
                                        Width="280" Height="180"
                                        Tag="{Binding}"
                                        Click="ProjetCard_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="#F9F9F9" 
                                                                CornerRadius="8" Padding="20,15" 
                                                                BorderBrush="#E0E0E0" BorderThickness="1">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                                                                <Setter TargetName="border" Property="BorderBrush" Value="#00915A"/>
                                                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#C8E6C9"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- En-tÃªte projet -->
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="4" Background="{Binding CouleurProjet}" 
                                                        CornerRadius="2" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding NomProjet}" FontSize="14" 
                                                           FontWeight="SemiBold" Foreground="#1A1919" 
                                                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding NomProjet}"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <!-- Badges -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                            <Border Background="#E8F5E9" CornerRadius="4" Padding="6,3" Margin="0,0,6,0">
                                                <TextBlock FontSize="10" Foreground="#00915A" FontWeight="SemiBold">
                                                    <Run Text="{Binding NbTachesTotal}"/>
                                                    <Run Text=" tÃ¢ches"/>
                                                </TextBlock>
                                            </Border>
                                            <Border Background="#E3F2FD" CornerRadius="4" Padding="6,3">
                                                <TextBlock FontSize="10" Foreground="#2196F3" FontWeight="SemiBold">
                                                    <Run Text="{Binding ProgressionPourcentage, StringFormat='{}{0:F0}%'}"/>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- DÃ©tails des tÃ¢ches -->
                                        <Grid Grid.Row="2" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,8">
                                                <TextBlock Text="Ã€ faire" FontSize="9" Foreground="#999" 
                                                           Margin="0,0,0,2"/>
                                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="#9E9E9E">
                                                    <Run Text="{Binding NbTachesAfaire}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,8">
                                                <TextBlock Text="En cours" FontSize="9" Foreground="#999" 
                                                           Margin="0,0,0,2"/>
                                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="#2196F3">
                                                    <Run Text="{Binding NbTachesEnCours}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">
                                                <TextBlock Text="TerminÃ©es" FontSize="9" Foreground="#999" 
                                                           Margin="0,0,0,2"/>
                                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="#4CAF50">
                                                    <Run Text="{Binding NbTachesTerminees}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="5,0,0,0">
                                                <TextBlock Text="En retard" FontSize="9" Foreground="#999" 
                                                           Margin="0,0,0,2"/>
                                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="#FF5722">
                                                    <Run Text="{Binding NbTachesEnRetard}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <!-- Barre de progression -->
                                        <Grid Grid.Row="3">
                                            <Border Background="#E0E0E0" Height="6" CornerRadius="3"/>
                                            <Border Background="#00915A" Height="6" CornerRadius="3" 
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding ProgressionLargeurCarte}"/>
                                        </Grid>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Message si aucun projet -->
                    <Border Background="#F5F5F5" CornerRadius="6" Padding="30,20" 
                            Visibility="{Binding AucunProjet, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“" FontSize="40" HorizontalAlignment="Center" 
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Aucun projet actif" FontSize="16" 
                                       Foreground="#999" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- MES TÃ‚CHES URGENTES -->
            <Border Grid.Row="3" Style="{StaticResource MainCard}">
                <StackPanel>
                    <Grid Margin="0,0,0,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="#FFEBEE" CornerRadius="6" 
                                Padding="8,5" Margin="0,0,10,0">
                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="#FF5722">
                                <Run Text="âš¡ "/>
                                <Run Text="{Binding NbTachesUrgentes, Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                        
                        <TextBlock Grid.Column="1" FontSize="20" FontWeight="Bold" 
                                   Foreground="#1A1919" VerticalAlignment="Center">
                            <Run Text="MES TÃ‚CHES URGENTES"/>
                        </TextBlock>
                        
                        <Button Grid.Column="2" Content="Voir tout â†’" 
                                Style="{StaticResource ViewAllButton}"
                                Click="VoirToutesUrgentes_Click"/>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding TachesUrgentes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" CornerRadius="8" Padding="18,15" 
                                        Margin="0,0,15,12" BorderBrush="#FFE0E0" BorderThickness="2" 
                                        Cursor="Hand" MouseLeftButtonDown="TacheUrgente_Click">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FFE0E0" BlurRadius="8" 
                                                          ShadowDepth="1" Opacity="0.4" Direction="270"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <Grid>
                                            <TextBlock FontSize="15" FontWeight="SemiBold" 
                                                       Foreground="#1A1919" TextWrapping="Wrap">
                                                <Run Text="{Binding Titre}"/>
                                            </TextBlock>
                                            <Border Background="#FF5722" CornerRadius="4" 
                                                    Padding="6,3" HorizontalAlignment="Right" 
                                                    VerticalAlignment="Top">
                                                <TextBlock Text="âš¡" FontSize="12"/>
                                            </Border>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <Border Background="#FFF3E0" CornerRadius="4" Padding="8,4" 
                                                    Margin="0,0,8,0">
                                                <TextBlock FontSize="12" Foreground="#FF9800" FontWeight="SemiBold">
                                                    <Run Text="ðŸ“… "/>
                                                    <Run Text="{Binding DateFinAttendue, StringFormat='dd/MM'}"/>
                                                </TextBlock>
                                            </Border>
                                            <Border Background="#E3F2FD" CornerRadius="4" Padding="8,4">
                                                <TextBlock FontSize="12" Foreground="#2196F3" FontWeight="SemiBold">
                                                    <Run Text="{Binding ProjetNom}"/>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Message si aucune tÃ¢che urgente -->
                    <Border Background="#E8F5E9" CornerRadius="8" Padding="20" 
                            Visibility="{Binding HasNoUrgentTasks, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="âœ…" FontSize="32" TextAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Aucune tÃ¢che urgente pour le moment" 
                                       FontSize="14" Foreground="#00915A" TextAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock Text="Excellent travail ! Toutes vos prioritÃ©s sont Ã  jour." 
                                       FontSize="12" Foreground="#666666" TextAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- NOTIFICATIONS RÃ‰CENTES -->
            <Border Grid.Row="4" Style="{StaticResource MainCard}">
                <StackPanel>
                    <Grid Margin="0,0,0,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="6" 
                                Padding="8,5" Margin="0,0,10,0">
                            <TextBlock FontSize="14" FontWeight="Bold" Foreground="#2196F3">
                                <Run Text="ðŸ”” "/>
                                <Run Text="{Binding NbNotifications, Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                        
                        <TextBlock Grid.Column="1" FontSize="20" FontWeight="Bold" 
                                   Foreground="#1A1919" VerticalAlignment="Center">
                            <Run Text="NOTIFICATIONS RÃ‰CENTES"/>
                        </TextBlock>
                        
                        <Button Grid.Column="2" Content="Voir tout â†’" 
                                Style="{StaticResource ViewAllButton}"
                                Click="VoirToutesNotifications_Click"/>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding NotificationsRecentes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" CornerRadius="8" Padding="15,12" 
                                        Margin="0,0,0,10" BorderBrush="#E8E8E8" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#F5F5F5" 
                                                Width="40" Height="40" CornerRadius="20" 
                                                Margin="0,0,12,0" VerticalAlignment="Top">
                                            <Image Source="{Binding ImageCaramelFlopy}" 
                                                   Width="38" Height="38" Stretch="Uniform"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#1A1919" TextWrapping="Wrap">
                                                <Run Text="{Binding Titre}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" Foreground="#666666" 
                                                       TextWrapping="Wrap" Margin="0,3,0,0">
                                                <Run Text="{Binding Message}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="2" Background="#00915A" CornerRadius="12" 
                                                Width="8" Height="8" VerticalAlignment="Top" Margin="10,5,0,0"
                                                Visibility="{Binding EstNonLue, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Message si aucune notification -->
                    <Border Background="#E8F5E9" CornerRadius="8" Padding="20" 
                            Visibility="{Binding HasNoNotifications, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <Image Source="/Images/agent-project-and-change.png" 
                                   Width="80" Height="80" 
                                   Stretch="Uniform"
                                   Margin="0,0,0,12"/>
                            <TextBlock Text="Aucune nouvelle notification" 
                                       FontSize="14" Foreground="#00915A" TextAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock Text="Vous Ãªtes Ã  jour avec toutes les actualitÃ©s." 
                                       FontSize="12" Foreground="#666666" TextAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- ACTIVITÃ‰ RÃ‰CENTE & QUICK ACTIONS -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- ACTIVITÃ‰ RÃ‰CENTE -->
                <Border Grid.Column="0" Style="{StaticResource MainCard}" Margin="0,0,10,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,18">
                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="#1A1919">
                                <Run Text="ðŸ“Š ACTIVITÃ‰ RÃ‰CENTE"/>
                            </TextBlock>
                        </Grid>
                        
                        <ItemsControl ItemsSource="{Binding ActivitesRecentes}" MaxHeight="300">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="0" Margin="0,0,0,8" Cursor="Hand"
                                            HorizontalContentAlignment="Stretch"
                                            Tag="{Binding}"
                                            Click="Activite_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border" Background="#FAFAFA" 
                                                                    CornerRadius="6" Padding="12,10">
                                                                <ContentPresenter/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#C8E6C9"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0" Width="4" CornerRadius="2" 
                                                    Margin="0,0,12,0" Background="#00915A"/>
                                            
                                            <StackPanel Grid.Column="1">
