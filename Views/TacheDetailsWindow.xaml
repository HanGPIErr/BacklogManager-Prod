<Window x:Class="BacklogManager.Views.TacheDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BacklogManager.Domain"
        Title="DÃ©tails de la TÃ¢che" Height="700" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header de la tÃ¢che -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#00915A"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titre et badges -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock x:Name="TxtTitre" FontSize="22" FontWeight="Bold" 
                                   Foreground="#1A1919" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Badge RAG -->
                        <Border x:Name="BorderRAG" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                            <TextBlock x:Name="TxtRAG" FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </Border>
                        
                        <!-- Badge prioritÃ© -->
                        <Border x:Name="BorderPriorite" CornerRadius="6" Padding="12,6" Margin="0,0,8,0">
                            <TextBlock x:Name="TxtPriorite" FontSize="12" FontWeight="Bold"/>
                        </Border>
                        
                        <!-- Badge statut -->
                        <Border x:Name="BorderStatut" CornerRadius="6" Padding="12,6">
                            <TextBlock x:Name="TxtStatut" FontSize="12" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Tags et infos -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0" FlowDirection="LeftToRight">
                    <!-- Type de demande -->
                    <Border Background="#E3F2FD" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ·ï¸ " FontSize="11"/>
                            <TextBlock x:Name="TxtTypeDemande" FontSize="11" Foreground="#1976D2" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Membres -->
                    <Border Background="#F3E5F5" CornerRadius="4" Padding="10,5" Margin="0,0,10,0" x:Name="BorderDev">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¤ " FontSize="11"/>
                            <TextBlock x:Name="TxtDev" FontSize="11" Foreground="#7B1FA2" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Projet -->
                    <Border Background="#E8F5E9" CornerRadius="4" Padding="10,5" x:Name="BorderProjet">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“ " FontSize="11"/>
                            <TextBlock x:Name="TxtProjet" FontSize="11" Foreground="#2E7D32" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal (ScrollViewer) -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Description -->
                <Border Background="White" CornerRadius="6" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Description" FontSize="14" FontWeight="Bold" 
                                   Foreground="#1A1919" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtDescription" FontSize="13" Foreground="#555" 
                                   TextWrapping="Wrap" LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- MÃ©triques -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Chiffrage -->
                    <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="â±ï¸ Chiffrage" FontSize="11" Foreground="#E65100" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="TxtChiffrage" FontSize="24" FontWeight="Bold" 
                                           Foreground="#FF9800"/>
                                <TextBlock Text="j" FontSize="14" Foreground="#FF9800" 
                                           VerticalAlignment="Bottom" Margin="2,0,0,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Temps rÃ©el -->
                    <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="âš¡ Temps PassÃ©" FontSize="11" Foreground="#6A1B9A" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="TxtTempsReel" FontSize="24" FontWeight="Bold" 
                                           Foreground="#9C27B0"/>
                                <TextBlock Text="j" FontSize="14" Foreground="#9C27B0" 
                                           VerticalAlignment="Bottom" Margin="2,0,0,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Progression -->
                    <Border Grid.Column="2" Background="White" CornerRadius="6" Padding="15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Avancement" FontSize="11" Foreground="#2E7D32" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="TxtProgression" FontSize="24" FontWeight="Bold" 
                                           Foreground="#00915A"/>
                                <TextBlock Text="%" FontSize="16" Foreground="#00915A" 
                                           VerticalAlignment="Bottom" Margin="2,0,0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Dates -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Date de dÃ©but -->
                    <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ“… Date de dÃ©but" FontSize="11" Foreground="#1565C0" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtDateDebut" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Date prÃ©vue -->
                    <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ“† Date prÃ©vue" FontSize="11" Foreground="#2E7D32" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtDatePrevue" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Ã‰chÃ©ance -->
                    <Border Grid.Column="2" Background="White" CornerRadius="6" Padding="15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="â° Ã‰chÃ©ance" FontSize="11" Foreground="#C62828" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtEcheance" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Barre de progression dÃ©taillÃ©e -->
                <Border Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Avancement de la tÃ¢che" FontSize="13" FontWeight="SemiBold" 
                                   Foreground="#1A1919" Margin="0,0,0,10"/>
                        <Grid>
                            <ProgressBar x:Name="ProgressBarTache" Height="25" Foreground="#00915A" 
                                         Background="#E0E0E0" BorderThickness="0"/>
                            <TextBlock x:Name="TxtProgressionBarre" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" FontWeight="Bold" FontSize="12" 
                                       Foreground="White"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Dates de crÃ©ation et modification -->
                <Border Background="White" CornerRadius="6" Padding="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ• CrÃ©Ã©e le" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtDateCreation" FontSize="12" Foreground="#333" Margin="0,3,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ•‘ ModifiÃ©e le" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtDateModification" FontSize="12" Foreground="#333" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="âœï¸ Modifier" x:Name="BtnModifier" Click="BtnModifier_Click"
                    Padding="20,10" Background="#1976D2" Foreground="White"
                    BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="âœ–ï¸ Fermer" Click="BtnFermer_Click"
                    Padding="20,10" Background="#757575" Foreground="White"
                    BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
