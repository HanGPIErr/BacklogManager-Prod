<UserControl x:Class="BacklogManager.Views.KanbanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Domain"
             Background="#F5F5F5">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊 KANBAN BOARD" FontSize="22" FontWeight="Bold" Foreground="#1A1919"/>
                <TextBlock Text="BNP Paribas" FontSize="16" Foreground="#00915A" 
                           VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Medium"/>
            </StackPanel>
        </Border>

        <!-- Admin Section: Tâches en attente et à prioriser -->
        <Border Grid.Row="1" Background="#FFF3E0" CornerRadius="6" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding EstAdministrateur, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#FF9800"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="🔐 ZONE ADMINISTRATEUR" FontSize="16" FontWeight="Bold" 
                           Foreground="#E65100" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tâches EN ATTENTE -->
                    <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="10" Margin="0,0,8,0">
                        <StackPanel>
                            <Border Background="#9C27B0" CornerRadius="4" Padding="6" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="⏸ EN ATTENTE (" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding ItemsEnAttente.Count}" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text=")" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            
                            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ItemsEnAttente}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F3E5F5" BorderBrush="#9C27B0" BorderThickness="1" 
                                                    CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0" Text="{Binding Item.Titre}" 
                                                               FontWeight="SemiBold" FontSize="11" 
                                                               TextWrapping="Wrap" Margin="0,0,0,5"/>
                                                    
                                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                        <TextBlock Text="👤 " FontSize="10"/>
                                                        <TextBlock Text="{Binding DevDisplayName}" FontSize="10" 
                                                                   Foreground="#666" Margin="0,0,10,0"/>
                                                        
                                                        <Button Content="🔄 Réactiver" 
                                                                Command="{Binding DataContext.ReactiverTacheCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Padding="6,3" Background="#4CAF50" Foreground="White" 
                                                                BorderThickness="0" FontSize="10" FontWeight="SemiBold" 
                                                                Cursor="Hand" VerticalAlignment="Center">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" 
                                                                                        CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                                    VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#388E3C"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- Tâches A PRIORISER -->
                    <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="10" Margin="8,0,0,0">
                        <StackPanel>
                            <Border Background="#E91E63" CornerRadius="4" Padding="6" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="⚡ A PRIORISER (" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding ItemsAPrioriser.Count}" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text=")" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            
                            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ItemsAPrioriser}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FCE4EC" BorderBrush="#E91E63" BorderThickness="1" 
                                                    CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0" Text="{Binding Item.Titre}" 
                                                               FontWeight="SemiBold" FontSize="11" 
                                                               TextWrapping="Wrap" Margin="0,0,0,5"/>
                                                    
                                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                        <TextBlock Text="👤 " FontSize="10"/>
                                                        <TextBlock Text="{Binding DevDisplayName}" FontSize="10" 
                                                                   Foreground="#666" Margin="0,0,10,0"/>
                                                        
                                                        <Button Content="✓ Activer" 
                                                                Command="{Binding DataContext.ReactiverTacheCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Padding="6,3" Background="#4CAF50" Foreground="White" 
                                                                BorderThickness="0" FontSize="10" FontWeight="SemiBold" 
                                                                Cursor="Hand" VerticalAlignment="Center">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" 
                                                                                        CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                                    VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#388E3C"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Filters Bar -->
        <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔍 Filtres:" FontWeight="Bold" FontSize="14" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <TextBlock Text="Dev:" FontSize="13" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <ComboBox ItemsSource="{Binding Devs}" DisplayMemberPath="Nom"
                          SelectedValue="{Binding SelectedDevId}" SelectedValuePath="Id" 
                          Width="150" Padding="8,5" Margin="0,0,15,0">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border Name="Border" Padding="8,5">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
                
                <TextBlock Text="Projet:" FontSize="13" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <ComboBox ItemsSource="{Binding Projets}" DisplayMemberPath="Nom"
                          SelectedValue="{Binding SelectedProjetId}" SelectedValuePath="Id" 
                          Width="150" Padding="8,5" Margin="0,0,15,0"/>
                
                <Button Content="🔄 Actualiser" Command="{Binding RefreshCommand}"
                        Padding="10,5" Margin="0,0,10,0" Background="#00915A" Foreground="White" 
                        BorderThickness="0" FontSize="12" FontWeight="SemiBold" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#007A4D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="🗑️ Effacer filtres" Command="{Binding ClearFiltersCommand}"
                        Padding="10,5" Background="#E0E0E0" Foreground="#333" 
                        BorderThickness="0" FontSize="12" FontWeight="SemiBold" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Kanban Columns -->
        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <Grid MinWidth="1200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- EN ATTENTE Column - SUPPRIMÉE (maintenant dans zone admin) -->
                <!-- A PRIORISER Column - SUPPRIMÉE (maintenant dans zone admin) -->

                <!-- A FAIRE Column -->
                <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="10" Margin="0,0,8,0"
                        AllowDrop="True" Tag="AFaire"
                    Drop="KanbanColumn_Drop" DragEnter="KanbanColumn_DragEnter" DragLeave="KanbanColumn_DragLeave">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#9E9E9E" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                        <StackPanel>
                            <TextBlock Text="📋 À FAIRE" FontWeight="Bold" FontSize="14" 
                                       Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="White" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0">
                                <TextBlock.Text>
                                    <Binding Path="ItemsAfaire.Count"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ItemsAfaire}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,0,0,6" CornerRadius="6" Background="White"
                                            Cursor="Hand" 
                                            PreviewMouseLeftButtonDown="KanbanCard_PreviewMouseLeftButtonDown"
                                            PreviewMouseMove="KanbanCard_PreviewMouseMove"
                                            MouseLeftButtonUp="KanbanCard_MouseLeftButtonUp">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AlertLevel}" Value="URGENT">
                                                        <Setter Property="BorderBrush" Value="#D32F2F"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AlertLevel}" Value="ATTENTION">
                                                        <Setter Property="BorderBrush" Value="#F57C00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AlertLevel}" Value="OK">
                                                        <Setter Property="BorderBrush" Value="#00915A"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.15" Color="Gray"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <Grid Margin="0,0,0,5">
                                                <TextBlock Text="{Binding Item.Titre}" FontWeight="SemiBold" 
                                                           FontSize="12" TextWrapping="Wrap" Margin="0,0,26,0" LineHeight="15"/>
                                                <Button Width="22" Height="22" 
                                                        HorizontalAlignment="Right" VerticalAlignment="Top" Background="#EF5350" Foreground="White" BorderThickness="0"
                                                        Cursor="Hand" ToolTip="Supprimer cette tÃ¢che" Padding="0"
                                                        Click="DeleteTask_Click" Tag="{Binding Item}"
                                                        Visibility="{Binding DataContext.PeutSupprimerTaches, 
                                                                    RelativeSource={RelativeSource AncestorType=UserControl},
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#E53935"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <Border CornerRadius="4" Padding="4,2" Margin="0,0,5,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#FFC107"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Item.Priorite}" Value="Urgente">
                                                                    <Setter Property="Background" Value="#D32F2F"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Item.Priorite}" Value="Haute">
                                                                    <Setter Property="Background" Value="#F57C00"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Item.Priorite}" Value="Moyenne">
                                                                    <Setter Property="Background" Value="#FFC107"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Item.Priorite}" Value="Basse">
                                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Item.Priorite}" Foreground="White" 
                                                               FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                                
                                                <Border Background="#00915A" CornerRadius="4" Padding="4,2">
                                                    <TextBlock Text="{Binding Item.TypeDemande}" Foreground="White" 
                                                               FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="👤 " FontSize="11"/>
                                                <TextBlock Text="{Binding DevDisplayName}" FontSize="11" FontWeight="SemiBold" Foreground="#00915A"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="⏱️ " FontSize="11"/>
                                                <TextBlock Text="{Binding DaysRemaining}" FontSize="11" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#333"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding AlertLevel}" Value="URGENT">
                                                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding AlertLevel}" Value="ATTENTION">
                                                                    <Setter Property="Foreground" Value="#F57C00"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text=" jour(s) restant(s)" FontSize="11" Margin="2,0,0,0"/>
                                            </StackPanel>

                                            <!-- Charge et Avancement -->
                                            <StackPanel Margin="0,5,0,0">
                                                <TextBlock Text="{Binding ChargeInfo}" FontSize="11" FontWeight="SemiBold" 
                                                           Foreground="#00915A" TextWrapping="Wrap"/>
                                                <ProgressBar Value="{Binding Avancement}" Height="4" Margin="0,3,0,2"
                                                             Foreground="#00915A" Background="#E0E0E0"/>
                                                <TextBlock Text="{Binding AvancementInfo}" FontSize="10" 
                                                           HorizontalAlignment="Right" Foreground="#666"/>
                                            </StackPanel>

                                            <Border Margin="0,5,0,0" Padding="5" CornerRadius="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding AlertLevel}" Value="URGENT">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding AlertLevel}" Value="ATTENTION">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding AlertLevel}" FontSize="10" FontWeight="Bold" 
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding AlertLevel}" Value="URGENT">
                                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding AlertLevel}" Value="ATTENTION">
                                                                    <Setter Property="Foreground" Value="#EF6C00"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>

                                            <!-- Bouton Mettre en attente pour admin uniquement -->
                                            <Button Content="⏸ Mettre en attente" Command="{Binding DataContext.MettreEnAttenteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Margin="0,8,0,0" Padding="8,4" Background="#9C27B0" Foreground="White" BorderThickness="0"
                                                    FontSize="11" FontWeight="SemiBold" Cursor="Hand"
                                                    Visibility="{Binding DataContext.EstAdministrateur, 
                                                                RelativeSource={RelativeSource AncestorType=UserControl},
                                                                Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#7B1FA2"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- EN COURS Column -->
            <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="10" Margin="0,0,8,0"
                    AllowDrop="True" Tag="EnCours"
                    Drop="KanbanColumn_Drop" DragEnter="KanbanColumn_DragEnter" DragLeave="KanbanColumn_DragLeave">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2196F3" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                        <StackPanel>
                            <TextBlock Text="⚙️ EN COURS" FontWeight="Bold" FontSize="14" 
                                       Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="White" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0">
                                <TextBlock.Text>
                                    <Binding Path="ItemsEnCours.Count"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ItemsEnCours}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,0,0,6" CornerRadius="6" Background="White"
                                            Cursor="Hand" 
                                            PreviewMouseLeftButtonDown="KanbanCard_PreviewMouseLeftButtonDown"
                                            PreviewMouseMove="KanbanCard_PreviewMouseMove"
                                            MouseLeftButtonUp="KanbanCard_MouseLeftButtonUp">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AlertLevel}" Value="URGENT">
                                                        <Setter Property="BorderBrush" Value="#D32F2F"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AlertLevel}" Value="ATTENTION">
                                                        <Setter Property="BorderBrush" Value="#F57C00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AlertLevel}" Value="OK">
                                                        <Setter Property="BorderBrush" Value="#00915A"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.15" Color="Gray"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <Grid Margin="0,0,0,5">
                                                <TextBlock Text="{Binding Item.Titre}" FontWeight="SemiBold" 
                                                           FontSize="12" TextWrapping="Wrap" Margin="0,0,26,0" LineHeight="15"/>
                                                <Button Width="22" Height="22" 
                                                        HorizontalAlignment="Right" VerticalAlignment="Top" Background="#EF5350" Foreground="White" BorderThickness="0"
                                                        Cursor="Hand" ToolTip="Supprimer cette tÃ¢che" Padding="0"
                                                        Click="DeleteTask_Click" Tag="{Binding Item}"
                                                        Visibility="{Binding DataContext.PeutSupprimerTaches, 
                                                                    RelativeSource={RelativeSource AncestorType=UserControl},
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
