<Window x:Class="BacklogManager.Views.ProjetDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BacklogManager.Domain"
        xmlns:services="clr-namespace:BacklogManager.Services"
        Title="DÃ©tails du Projet" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header du projet -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#00915A"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titre et statut -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock x:Name="TxtNomProjet" FontSize="24" FontWeight="Bold" 
                                   Foreground="#1A1919" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Badge RAG -->
                        <Border x:Name="BorderRAG" CornerRadius="6" Padding="12,8" Margin="0,0,10,0">
                            <TextBlock x:Name="TxtRAG" FontSize="13" FontWeight="Bold" Foreground="White"/>
                        </Border>
                        
                        <!-- Badge Statut -->
                        <Border x:Name="BorderStatut" CornerRadius="6" Padding="15,8">
                            <TextBlock x:Name="TxtStatut" FontSize="14" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Description -->
                <ScrollViewer Grid.Row="1" MaxHeight="80" VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <TextBlock x:Name="TxtDescription" FontSize="14" Foreground="#555" 
                               TextWrapping="Wrap"/>
                </ScrollViewer>
                
                <!-- Phase du projet -->
                <Border Grid.Row="2" Background="#F3E5F5" CornerRadius="6" Padding="12" Margin="0,12,0,0" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="13" FontWeight="Bold" Foreground="#7B1FA2" VerticalAlignment="Center">
                            <Run Text="ðŸ”„ "/>
                            <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Phase], Mode=OneWay}"/>
                            <Run Text=" "/>
                        </TextBlock>
                        <TextBlock x:Name="TxtPhase" FontSize="13" FontWeight="SemiBold" Foreground="#9C27B0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Infos rapides (ID / Programme / PrioritÃ©) -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#555">
                        <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_IdLabel], Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock x:Name="TxtProjetId" FontSize="12" Margin="6,0,12,0" Foreground="#1A1919"/>

                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#555">
                        <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_ProgrammeLabel], Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock x:Name="TxtProgramme" FontSize="12" Margin="6,0,12,0" Foreground="#1A1919"/>

                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#555">
                        <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_PriorityLabel], Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock x:Name="TxtPriorite" FontSize="12" Margin="6,0,0,0" Foreground="#1A1919"/>
                </StackPanel>

                <!-- MÃ©triques clÃ©s -->
                <Grid Grid.Row="3" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total tÃ¢ches -->
                    <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="6" Padding="15,12" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock FontSize="11" Foreground="#1565C0" FontWeight="SemiBold">
                                <Run Text="ðŸ“‹ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_TotalTasks], Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtTotalTaches" FontSize="26" FontWeight="Bold" 
                                       Foreground="#2196F3" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Progression -->
                    <Border Grid.Column="1" Background="#E8F5E9" CornerRadius="6" Padding="15,12" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock FontSize="11" Foreground="#2E7D32" FontWeight="SemiBold">
                                <Run Text="âœ… "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_Progress], Mode=OneWay}"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="TxtProgression" FontSize="26" FontWeight="Bold" 
                                           Foreground="#00915A"/>
                                <TextBlock Text="%" FontSize="18" Foreground="#00915A" 
                                           VerticalAlignment="Bottom" Margin="2,0,0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Charge totale -->
                    <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="6" Padding="15,12" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock FontSize="11" Foreground="#E65100" FontWeight="SemiBold">
                                <Run Text="â±ï¸ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_EstimatedWorkload], Mode=OneWay}"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="TxtChargeEstimee" FontSize="26" FontWeight="Bold" 
                                           Foreground="#FF9800"/>
                                <TextBlock Text="j" FontSize="15" Foreground="#FF9800" 
                                           VerticalAlignment="Bottom" Margin="2,0,0,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Charge rÃ©elle -->
                    <Border Grid.Column="3" Background="#F3E5F5" CornerRadius="6" Padding="15,12">
                        <StackPanel>
                            <TextBlock FontSize="11" Foreground="#6A1B9A" FontWeight="SemiBold">
                                <Run Text="âš¡ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_TimeSpent], Mode=OneWay}"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="TxtTempsReel" FontSize="26" FontWeight="Bold" 
                                           Foreground="#9C27B0"/>
                                <TextBlock Text="j" FontSize="15" Foreground="#9C27B0" 
                                           VerticalAlignment="Bottom" Margin="2,0,0,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Ã‰quipes AssignÃ©es -->
                <Border Grid.Row="4" Background="#F1F8E9" CornerRadius="6" Padding="12" Margin="0,15,0,0" x:Name="BorderEquipes">
                    <StackPanel>
                        <TextBlock FontSize="12" Foreground="#558B2F" FontWeight="SemiBold" Margin="0,0,0,8">
                            <Run Text="ðŸ¢ "/>
                            <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_AssignedTeams], Mode=OneWay}"/>
                        </TextBlock>
                        <ItemsControl x:Name="ListeEquipes">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#8BC34A" CornerRadius="4" Padding="8,4" Margin="0,0,8,4">
                                        <TextBlock Text="{Binding Nom}" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="TxtAucuneEquipe" Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_NoTeam], Mode=OneWay}" 
                                   FontSize="11" Foreground="#999" FontStyle="Italic" 
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Barre de progression globale -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_GlobalProgress], Mode=OneWay}" FontSize="14" FontWeight="SemiBold" 
                           Foreground="#1A1919" Margin="0,0,0,8"/>
                <Grid>
                    <ProgressBar x:Name="ProgressBarGlobal" Height="30" Foreground="#00915A" 
                                 Background="#E0E0E0" BorderThickness="0"/>
                    <TextBlock x:Name="TxtProgressionLabel" FontSize="13" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                
                <!-- RÃ©partition par statut -->
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Todo], Mode=OneWay}" FontSize="11" Foreground="#1565C0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock x:Name="TxtCountAfaire" FontSize="18" FontWeight="Bold" Foreground="#2196F3"/>
                            <TextBlock FontSize="11" Foreground="#555" VerticalAlignment="Bottom" Margin="3,0,0,2">
                                <Run Text=" "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Tasks], Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_InProgress], Mode=OneWay}" FontSize="11" Foreground="#E65100"/>
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock x:Name="TxtCountEnCours" FontSize="18" FontWeight="Bold" Foreground="#FF9800"/>
                            <TextBlock FontSize="11" Foreground="#555" VerticalAlignment="Bottom" Margin="3,0,0,2">
                                <Run Text=" "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Tasks], Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_InTest], Mode=OneWay}" FontSize="11" Foreground="#6A1B9A"/>
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock x:Name="TxtCountEnTest" FontSize="18" FontWeight="Bold" Foreground="#9C27B0"/>
                            <TextBlock FontSize="11" Foreground="#555" VerticalAlignment="Bottom" Margin="3,0,0,2">
                                <Run Text=" "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Tasks], Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Completed], Mode=OneWay}" FontSize="11" Foreground="#2E7D32"/>
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock x:Name="TxtCountTermine" FontSize="18" FontWeight="Bold" Foreground="#00915A"/>
                            <TextBlock FontSize="11" Foreground="#555" VerticalAlignment="Bottom" Margin="3,0,0,2">
                                <Run Text=" "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Projects_Tasks], Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Liste des tÃ¢ches -->
        <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header de la liste -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" FontSize="16" 
                               FontWeight="Bold" Foreground="#1A1919">
                        <Run Text="ðŸ“‹ "/>
                        <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_TasksOfProject], Mode=OneWay}"/>
                    </TextBlock>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBox x:Name="TxtRecherche" Width="200" Padding="8,5" 
                                 VerticalContentAlignment="Center" Margin="0,0,10,0">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="White" BorderBrush="#CCC" BorderThickness="1" 
                                                        CornerRadius="4" Padding="8,5">
                                                    <Grid>
                                                        <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_SearchPlaceholder], Mode=OneWay}" Foreground="#999" 
                                                                   IsHitTestVisible="False" VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <ComboBox x:Name="CmbFiltreStatut" Width="120" Padding="8,5" Margin="0,0,10,0"/>
                        
                        <CheckBox x:Name="ChkAfficherArchivees" VerticalAlignment="Center" 
                                  IsChecked="True" FontWeight="SemiBold" Foreground="#1A1919">
                            <TextBlock>
                                <Run Text="ðŸ“¦ "/>
                                <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_ShowArchived], Mode=OneWay}"/>
                            </TextBlock>
                        </CheckBox>
                    </StackPanel>
                </Grid>

                <!-- Liste scrollable -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ListeTaches">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" 
                                        CornerRadius="6" Padding="12" Margin="0,0,0,8" Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F0F0F0"/>
                                                    <Setter Property="BorderBrush" Value="#00915A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <!-- Titre et prioritÃ© -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="{Binding Titre}" FontSize="14" FontWeight="SemiBold" 
                                                           Foreground="#1A1919" VerticalAlignment="Center"/>
                                                <Border Background="{Binding PrioriteColor}" CornerRadius="3" 
                                                        Padding="6,2" Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding Priorite}" FontSize="10" 
                                                               Foreground="White" FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Info ligne -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ‘¤" FontSize="11" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding DevNom}" FontSize="12" Foreground="#00915A" 
                                                           FontWeight="SemiBold" Margin="0,0,15,0"/>
                                                
                                                <TextBlock Text="ðŸ“Š" FontSize="11" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Statut}" FontSize="12" Foreground="#555" 
                                                           Margin="0,0,15,0"/>
                                                
                                                <TextBlock Text="â±ï¸" FontSize="11" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="12" Foreground="#555">
                                                    <Run Text="{Binding ChiffrageJours, StringFormat={}{0:F1}}"/>
                                                    <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_DaysEstimated], Mode=OneWay}"/>
                                                </TextBlock>
                                                
                                                <TextBlock Text=" â€¢ " FontSize="12" Foreground="#CCC" Margin="5,0"/>
                                                
                                                <TextBlock FontSize="12" Foreground="#9C27B0" FontWeight="SemiBold">
                                                    <Run Text="{Binding TempsReelJours, StringFormat={}{0:F1}}"/>
                                                    <Run Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ProjectDetails_DaysSpent], Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Progression -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Width="80">
                                            <TextBlock Text="{Binding ProgressionPct, StringFormat={}{0:F0}%}" 
                                                       FontSize="16" FontWeight="Bold" Foreground="#00915A" 
                                                       HorizontalAlignment="Right" Margin="0,0,0,3"/>
                                            <ProgressBar Value="{Binding ProgressionPct}" Height="6" 
                                                         Foreground="#00915A" Background="#E0E0E0" 
                                                         BorderThickness="0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
