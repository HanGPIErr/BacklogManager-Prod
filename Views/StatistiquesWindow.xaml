<Window x:Class="BacklogManager.Views.StatistiquesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“Š Statistiques et KPI - BNP Paribas" 
        Width="1200" Height="800" 
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Window.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“Š Tableau de bord KPI" 
                       FontSize="24" FontWeight="Bold" Foreground="#00915A"/>
            <TextBlock Text="Vue d'ensemble des performances et statistiques" 
                       FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Cartes de statistiques rapides -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
            <Border Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ“ Total TÃ¢ches" FontSize="12" Foreground="#666666"/>
                    <TextBlock x:Name="TxtTotalTaches" Text="0" FontSize="36" FontWeight="Bold" Foreground="#00915A" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="âœ… TerminÃ©es" FontSize="12" Foreground="#666666"/>
                    <TextBlock x:Name="TxtTachesTerminees" Text="0" FontSize="36" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TxtPourcentageTerminees" Text="0%" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="â³ En cours" FontSize="12" Foreground="#666666"/>
                    <TextBlock x:Name="TxtTachesEnCours" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2196F3" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Projets actifs" FontSize="12" Foreground="#666666"/>
                    <TextBlock x:Name="TxtProjetsActifs" Text="0" FontSize="36" FontWeight="Bold" Foreground="#FF9800" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Contenu principal avec ScrollViewer -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Graphique: TÃ¢ches par statut -->
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š RÃ©partition des tÃ¢ches par statut" 
                                   FontSize="16" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,15"/>
                        <ItemsControl x:Name="GraphiqueTachesParStatut">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Statut}" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                        <Border Grid.Column="1" Height="30" Background="#E0E0E0" CornerRadius="4" Margin="10,0">
                                            <Border Background="{Binding Couleur}" CornerRadius="4" HorizontalAlignment="Left" 
                                                    Width="{Binding LargeurBarre}"/>
                                        </Border>
                                        <TextBlock Text="{Binding Nombre}" Grid.Column="2" VerticalAlignment="Center" 
                                                   FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Tableau: Charge par dÃ©veloppeur -->
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥ Charge par dÃ©veloppeur" 
                                   FontSize="16" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,15"/>
                        <DataGrid x:Name="GridChargeParDev" AutoGenerateColumns="False" 
                                  IsReadOnly="True" CanUserAddRows="False" 
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                  BorderThickness="0" Background="Transparent"
                                  MouseDoubleClick="GridChargeParDev_MouseDoubleClick"
                                  Cursor="Hand">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="DÃ©veloppeur" Binding="{Binding NomDev}" Width="*" FontWeight="SemiBold"/>
                                <DataGridTextColumn Header="Ã€ faire" Binding="{Binding AFaire}" Width="80" 
                                                    ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                                <DataGridTextColumn Header="En cours" Binding="{Binding EnCours}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#2196F3"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="TerminÃ©es" Binding="{Binding Terminees}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="80" FontWeight="Bold"/>
                                <DataGridTextColumn Header="Charge (%)" Binding="{Binding ChargePercent}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#FF9800"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Tableau: Taux de complÃ©tion par projet -->
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Taux de complÃ©tion par projet" 
                                   FontSize="16" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,15"/>
                        <DataGrid x:Name="GridCompletionParProjet" AutoGenerateColumns="False" 
                                  IsReadOnly="True" CanUserAddRows="False" 
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                  BorderThickness="0" Background="Transparent"
                                  MouseDoubleClick="GridCompletionParProjet_MouseDoubleClick"
                                  Cursor="Hand">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Projet" Binding="{Binding NomProjet}" Width="*" FontWeight="SemiBold"/>
                                <DataGridTextColumn Header="Total tÃ¢ches" Binding="{Binding TotalTaches}" Width="100"/>
                                <DataGridTextColumn Header="TerminÃ©es" Binding="{Binding TachesTerminees}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Taux (%)" Binding="{Binding TauxCompletion}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#00915A"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- MÃ©trique: Temps moyen par complexitÃ© -->
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="â±ï¸ Temps moyen par complexitÃ© (Story Points)" 
                                   FontSize="16" FontWeight="Bold" Foreground="#1A1919" Margin="0,0,0,15"/>
                        <ItemsControl x:Name="GraphiqueComplexite">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Complexite}" Grid.Column="0" VerticalAlignment="Center" 
                                                   FontWeight="Bold" FontSize="16" Foreground="#00915A"/>
                                        <Border Grid.Column="1" Height="35" Background="#E0E0E0" CornerRadius="4" Margin="10,0">
                                            <Border Background="#2196F3" CornerRadius="4" HorizontalAlignment="Left" 
                                                    Width="{Binding LargeurBarre}"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <Run Text="{Binding TempsJours}" FontWeight="Bold" FontSize="14"/>
                                            <Run Text=" jour(s) moy." Foreground="#666666"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ðŸ“„ Exporter en PDF" Click="BtnExporterPDF_Click"
                    Background="#00915A" Foreground="White" Padding="20,10" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007A4A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="ðŸ”„ Actualiser" Click="BtnActualiser_Click"
                    Background="#2196F3" Foreground="White" Padding="20,10" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="âŒ Fermer" Click="BtnFermer_Click"
                    Background="#E0E0E0" Foreground="#1A1919" Padding="20,10" 
                    BorderThickness="0" Cursor="Hand" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
