<Window x:Class="BacklogManager.Views.AgentChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ’¬ Discuter avec l'Agent BacklogManager"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F3F2F1">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="EmojiTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Image Grid.Column="0" Source="pack://application:,,,/Images/agent-project-and-change.png" 
                       Width="45" Height="45" Margin="0,0,15,0" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Agent Project &amp; Change" FontSize="16" FontWeight="SemiBold" Foreground="#252423"/>
                    <TextBlock Text="Votre assistante virtuelle pour gÃ©rer votre backlog" FontSize="12" Foreground="#605E5C" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Configuration Token (affichÃ© si pas de token) -->
        <Border Grid.Row="1" Background="White" Padding="40" Margin="20"
                Visibility="{Binding NeedTokenConfiguration, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel MaxWidth="500" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”‘ Configuration de l'accÃ¨s" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                <TextBlock Text="Pour utiliser l'agent IA, vous devez configurer votre token d'accÃ¨s personnel." 
                           TextWrapping="Wrap" Margin="0,15,0,0" Foreground="#7F8C8D" TextAlignment="Center"/>
                
                <TextBlock Text="Token API" FontSize="14" FontWeight="SemiBold" Margin="0,25,0,5" Foreground="#2C3E50"/>
                <TextBox x:Name="TxtToken" Padding="10" FontSize="12" Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
                
                <TextBlock Text="âš ï¸ Ce token sera stockÃ© localement sur votre machine uniquement" 
                           FontSize="11" Foreground="#E74C3C" Margin="0,5,0,0" TextAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="ðŸ’¾ Enregistrer le token" Padding="15,8" FontSize="14" 
                            Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="SaveToken_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="âŒ Annuler" Padding="15,8" FontSize="14" Margin="10,0,0,0"
                            Background="#95A5A6" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="Cancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Zone de chat (affichÃ© si token configurÃ©) -->
        <Grid Grid.Row="1" Margin="20" 
              Visibility="{Binding ChatVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Messages -->
            <Border Grid.Row="0" Background="White" CornerRadius="0">
                <ScrollViewer x:Name="ScrollMessages" VerticalScrollBarVisibility="Auto" Padding="20">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Avatar/Image pour l'agent -->
                                    <Border Grid.Column="0" Width="32" Height="32" Margin="0,0,12,0" VerticalAlignment="Top">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUser}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Image Source="pack://application:,,,/Images/agent-project-and-change.png" 
                                               Width="32" Height="32" Stretch="Uniform"/>
                                    </Border>
                                    
                                    <!-- Message content -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock FontWeight="SemiBold" FontSize="13" Margin="0,0,0,4" Foreground="#252423">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                            <Setter Property="Text" Value="Vous"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUser}" Value="False">
                                                            <Setter Property="Text" Value="Agent Project &amp; Change"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Border Grid.Row="0" CornerRadius="4" Padding="12,8" MaxWidth="650" HorizontalAlignment="Left"
                                                    x:Name="MessageBubble">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsUser}" Value="False">
                                                                <Setter Property="Background" Value="#F3F2F1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Tag" Value="{Binding}"/>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0" Text="{Binding Message}" TextWrapping="Wrap" FontSize="14" 
                                                               Foreground="#252423" LineHeight="20"/>
                                                    
                                                    <!-- RÃ©actions panel (apparaÃ®t au survol) -->
                                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0" 
                                                                x:Name="ReactionsPanel" Opacity="0">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsUser}" Value="False">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        
                                                        <Button FontSize="18" Padding="8,4" Margin="0,0,4,0"
                                                                Background="Transparent" BorderBrush="#E1DFDD" BorderThickness="1"
                                                                Cursor="Hand" Click="ReactionButton_Click"
                                                                ToolTip="J'aime">
                                                            <Button.Content>
                                                                <TextBlock Text="ðŸ‘" FontFamily="Segoe UI Emoji"/>
                                                            </Button.Content>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" 
                                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FFF4E5"/>
                                                                            <Setter Property="BorderBrush" Value="#FFB347"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        
                                                        <Button FontSize="18" Padding="8,4" Margin="0,0,4,0"
                                                                Background="Transparent" BorderBrush="#E1DFDD" BorderThickness="1"
                                                                Cursor="Hand" Click="ReactionButton_Click"
                                                                ToolTip="J'adore">
                                                            <Button.Content>
                                                                <TextBlock Text="â¤ï¸" FontFamily="Segoe UI Emoji"/>
                                                            </Button.Content>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" 
                                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FFE5E8"/>
                                                                            <Setter Property="BorderBrush" Value="#FF6B8A"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        
                                                        <Button FontSize="18" Padding="8,4" Margin="0,0,4,0"
                                                                Background="Transparent" BorderBrush="#E1DFDD" BorderThickness="1"
                                                                Cursor="Hand" Click="ReactionButton_Click"
                                                                ToolTip="Sourire">
                                                            <Button.Content>
                                                                <TextBlock Text="ðŸ˜Š" FontFamily="Segoe UI Emoji"/>
                                                            </Button.Content>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" 
                                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FFF9E5"/>
                                                                            <Setter Property="BorderBrush" Value="#FFD966"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        
                                                        <Button FontSize="18" Padding="8,4"
                                                                Background="Transparent" BorderBrush="#E1DFDD" BorderThickness="1"
                                                                Cursor="Hand" Click="ReactionButton_Click"
                                                                ToolTip="CÃ©lÃ©bration">
                                                            <Button.Content>
                                                                <TextBlock Text="ðŸŽ‰" FontFamily="Segoe UI Emoji"/>
                                                            </Button.Content>
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" 
                                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#F0E5FF"/>
                                                                            <Setter Property="BorderBrush" Value="#B794F6"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                                
                                                <Border.Triggers>
                                                    <EventTrigger RoutedEvent="MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ReactionsPanel"
                                                                               Storyboard.TargetProperty="Opacity"
                                                                               To="1" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ReactionsPanel"
                                                                               Storyboard.TargetProperty="Opacity"
                                                                               To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Border.Triggers>
                                            </Border>
                                            
                                            <!-- RÃ©action sÃ©lectionnÃ©e -->
                                            <Border Grid.Row="1" Margin="0,4,0,0" Padding="6,2" CornerRadius="12"
                                                    Background="#E1DFDD" HorizontalAlignment="Left"
                                                    Visibility="{Binding HasReaction, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="{Binding Reaction}" FontSize="14" FontFamily="Segoe UI Emoji"/>
                                            </Border>
                                        </Grid>
                                        
                                        <TextBlock Text="{Binding Horodatage}" FontSize="11" Margin="0,4,0,0" 
                                                   Foreground="#8A8886"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Zone de saisie -->
            <Border Grid.Row="1" Background="White" Padding="16" Margin="0" 
                    BorderBrush="#E1DFDD" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="White" BorderBrush="#E1DFDD" BorderThickness="1" CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TxtMessage" Grid.Column="0" Padding="12" FontSize="14" 
                                     MinHeight="40" MaxHeight="120"
                                     VerticalAlignment="Stretch" BorderThickness="0"
                                     TextWrapping="Wrap" AcceptsReturn="False"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="{Binding MessageActuel, UpdateSourceTrigger=PropertyChanged}"
                                     KeyDown="TxtMessage_KeyDown"
                                     Background="Transparent"/>
                            
                            <Button Grid.Column="1" Padding="12" Margin="4"
                                    Background="#6264A7" Foreground="White" BorderThickness="0" Cursor="Hand"
                                    Click="SendMessage_Click" IsEnabled="{Binding CanSendMessage}"
                                    Width="36" Height="36" VerticalAlignment="Bottom">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="4">
                                                        <Viewbox Width="16" Height="16">
                                                            <Canvas Width="24" Height="24">
                                                                <Path Fill="White" Data="M2.01,21L23,12L2.01,3L2,10L17,12L2,14L2.01,21Z"/>
                                                            </Canvas>
                                                        </Viewbox>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5558A0"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#C8C6C4"/>
                                                <Setter Property="Cursor" Value="Arrow"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <TextBlock Grid.Row="1" Text="Appuyez sur EntrÃ©e pour envoyer, Shift+EntrÃ©e pour un saut de ligne" 
                               FontSize="11" Foreground="#8A8886" Margin="0,6,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F3F2F1" Padding="12" BorderBrush="#E1DFDD" BorderThickness="0,1,0,0"
                Visibility="{Binding ChatVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ðŸ—‘ï¸ Effacer l'historique" Padding="8,4" FontSize="11"
                        Background="Transparent" Foreground="#605E5C" BorderThickness="1" BorderBrush="#E1DFDD" Cursor="Hand"
                        Click="ClearHistory_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EDEBE9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="ðŸ”‘ Changer le token" Margin="10,0,0,0" Padding="8,4" FontSize="11"
                        Background="Transparent" Foreground="#605E5C" BorderThickness="1" BorderBrush="#E1DFDD" Cursor="Hand"
                        Click="ChangeToken_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EDEBE9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
