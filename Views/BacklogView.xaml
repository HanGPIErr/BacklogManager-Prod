<UserControl x:Class="BacklogManager.Views.BacklogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Domain"
             Background="#F5F5F5">
    <Grid Margin="15">
        <!-- Main Content Area - Full Width -->
        <Border CornerRadius="12" Padding="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#FAFAFA" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="#D0D0D0"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Tab-like Navigation -->
                <Border Grid.Row="0" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1" Padding="20,18">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00915A" Offset="0"/>
                            <GradientStop Color="#00A566" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.2" Color="#00915A"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Title & Navigation Tabs - Responsive -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ“Š BACKLOG MANAGER" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" VerticalAlignment="Center" Margin="0,0,0,10"/>
                            <WrapPanel Orientation="Horizontal">
                            
                            <Button x:Name="BtnVueTaches" Content="ðŸ“‹ TÃ¢ches" 
                                    Foreground="#00915A" 
                                    FontSize="13" FontWeight="Bold" Padding="18,8"
                                    Margin="0,0,8,0" BorderThickness="0" Cursor="Hand"
                                    Click="BtnVueTaches_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.25" Color="White"/>
                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F9F4"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnVueProjets" Content="ðŸ“ Projets" 
                                    Background="Transparent" Foreground="White" 
                                    FontSize="13" FontWeight="SemiBold" Padding="18,8"
                                    BorderThickness="0" Cursor="Hand" Opacity="0.8"
                                    Click="BtnVueProjets_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFFFFF20"/>
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnVueArchives" Content="ðŸ“¦ Archives" 
                                    Background="Transparent" Foreground="White" 
                                    FontSize="13" FontWeight="SemiBold" Padding="18,8"
                                    BorderThickness="0" Cursor="Hand" Opacity="0.8"
                                    Click="BtnVueArchives_Click"
                                    Visibility="{Binding EstAdministrateur, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFFFFF20"/>
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </WrapPanel>
                        </StackPanel>
                        
                        <!-- Action Buttons - Responsive -->
                        <WrapPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnNouveauProjet" Content="âž• Nouveau Projet" 
                                    Visibility="Collapsed"
                                    Command="{Binding NewProjetCommand}"
                                    Height="38" Margin="0,0,10,0" Background="#00915A" Foreground="White" BorderThickness="0"
                                    FontSize="13" FontWeight="Bold" Cursor="Hand" Padding="16,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.2" Color="#00915A"/>
                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007843"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnTacheSpeciale" Content="âž• CongÃ©s/Support" 
                                    Visibility="{Binding PeutCreerTachesSpecialesVisibility}"
                                    Click="BtnTacheSpeciale_Click"
                                    Height="38" Margin="0,0,10,0" Background="#FFB800" Foreground="White" BorderThickness="0"
                                    FontSize="13" FontWeight="Bold" Cursor="Hand" Padding="16,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.2" Color="#FFB800"/>
                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E5A500"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="BtnNouvelleTache" Content="âž• Nouvelle TÃ¢che" 
                                    Visibility="{Binding PeutCreerTachesVisibility}"
                                    Command="{Binding NewCommand}"
                                    Height="38" Background="#00915A" Foreground="White" BorderThickness="0"
                                    FontSize="13" FontWeight="Bold" Cursor="Hand" Padding="16,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.2" Color="#00915A"/>
                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007843"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </WrapPanel>
                    </Grid>
                </Border>
                
                <!-- Content Area - Responsive avec sidebar adaptative -->
                <Grid Grid.Row="1" x:Name="ContentGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="FiltersColumn" Width="Auto" MinWidth="280" MaxWidth="320"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: Filters Sidebar (pour tÃ¢ches uniquement) -->
                    <Border x:Name="FiltersSidebar" Grid.Column="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Search Bar -->
                            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="14,12" Margin="0,0,0,18"
                                    BorderBrush="#00915A" BorderThickness="2">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.1" Color="#00915A"/>
                                </Border.Effect>
                                <Grid>
                                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                             FontSize="13" BorderThickness="0" Background="Transparent"
                                             VerticalContentAlignment="Center" Padding="28,0,0,0" FontWeight="Medium"/>
                                    <TextBlock Text="ðŸ”  Rechercher..." IsHitTestVisible="False" 
                                               Foreground="#999" FontSize="13" VerticalAlignment="Center" Margin="2,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Filters Section -->
                            <Expander Grid.Row="1" Header="ðŸ”§ Filtres avancÃ©s" IsExpanded="True" Margin="0,0,0,18">
                                <Expander.Style>
                                    <Style TargetType="Expander">
                                        <Setter Property="HeaderTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#1A1919"/>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Expander.Style>
                                <StackPanel Margin="0,10,0,0">
                                    <!-- Type Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ“ Type" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Grid>
                                            <ComboBox x:Name="CbType" ItemsSource="{Binding Source={x:Type local:TypeDemande}, Converter={StaticResource EnumToCollectionConverter}}"
                                                      SelectedItem="{Binding SelectedType}" 
                                                      Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                      Background="White">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Padding" Value="10,8"/>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                            <TextBlock Text="Tous les types" IsHitTestVisible="False" 
                                                       Foreground="#999" FontSize="12" Margin="12,0,0,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedType}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Priorite Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="âš¡ PrioritÃ©" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Grid>
                                            <ComboBox x:Name="CbPriorite" ItemsSource="{Binding Source={x:Type local:Priorite}, Converter={StaticResource EnumToCollectionConverter}}"
                                                      SelectedItem="{Binding SelectedPriorite}" 
                                                      Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                      Background="White">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Padding" Value="10,8"/>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                            <TextBlock Text="Toutes les prioritÃ©s" IsHitTestVisible="False" 
                                                       Foreground="#999" FontSize="12" Margin="12,0,0,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedPriorite}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Statut Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ“Š Statut" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Grid>
                                            <ComboBox x:Name="CbStatut" ItemsSource="{Binding Source={x:Type local:Statut}, Converter={StaticResource EnumToCollectionConverter}}"
                                                      SelectedItem="{Binding SelectedStatut}" 
                                                      Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                      Background="White">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Padding" Value="10,8"/>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                            <TextBlock Text="Tous les statuts" IsHitTestVisible="False" 
                                                       Foreground="#999" FontSize="12" Margin="12,0,0,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedStatut}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Dev Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ‘¤ DÃ©veloppeur" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Grid>
                                            <ComboBox x:Name="CbDev" ItemsSource="{Binding Devs}" DisplayMemberPath="Nom"
                                                      SelectedValue="{Binding SelectedDevId}" SelectedValuePath="Id"
                                                      Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                      Background="White">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Padding" Value="10,8"/>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                            <TextBlock Text="Tous les dÃ©veloppeurs" IsHitTestVisible="False" 
                                                       Foreground="#999" FontSize="12" Margin="12,0,0,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedDevId}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Projet Filter -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ“ Projet" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Grid>
                                            <ComboBox x:Name="CbProjet" ItemsSource="{Binding Projets}" DisplayMemberPath="Nom"
                                                      SelectedValue="{Binding SelectedProjetId}" SelectedValuePath="Id"
                                                      Height="36" FontSize="12" BorderBrush="#DDD" BorderThickness="1" Padding="10,0"
                                                      Background="White">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Padding" Value="10,8"/>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                            <TextBlock Text="Tous les projets" IsHitTestVisible="False" 
                                                       Foreground="#999" FontSize="12" Margin="12,0,0,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedProjetId}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Reset Button -->
                                    <Button Content="ðŸ”„ RÃ©initialiser les filtres" 
                                            Command="{Binding ClearFiltersCommand}"
                                            Height="36" Margin="0,4,0,0" Background="#E0E0E0" Foreground="#666" BorderThickness="0"
                                            FontSize="12" FontWeight="SemiBold" Cursor="Hand" Padding="12,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#CCCCCC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Expander>

                            <!-- Count Stats -->
                            <Border Grid.Row="2" Background="#00915A" CornerRadius="8" Padding="14,12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.2" Color="#00915A"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock FontSize="12" Foreground="White" FontWeight="SemiBold">
                                        <Run Text="ðŸ“Š"/>
                                        <Run FontWeight="Bold" FontSize="16" Text="{Binding BacklogItems.Count, Mode=OneWay}"/>
                                        <Run Text="tÃ¢che(s)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Right Panel: Content Views -->
                    <Grid Grid.Column="1">
                        <!-- TÃ¢ches View -->
                        <ScrollViewer x:Name="TachesScrollViewer" VerticalScrollBarVisibility="Auto" Padding="25,20">
                            <StackPanel>
                                <!-- Section: TÃ¢ches Normales -->
                                <Border Background="#F9F9F9" CornerRadius="8" Padding="14,10" Margin="0,0,0,18">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“‹" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="TÃ¢ches de dÃ©veloppement" FontSize="18" FontWeight="Bold" 
                                                   Foreground="#1A1919" VerticalAlignment="Center"/>
                                        <TextBlock Text="BNP Paribas" FontSize="14" Foreground="#00915A" 
                                                   FontWeight="Medium" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <ItemsControl ItemsSource="{Binding TachesNormales}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="2" 
                                                CornerRadius="10" Padding="22,18" Margin="0,0,0,14" Cursor="Hand">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.1" Color="Gray"/>
                                            </Border.Effect>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="#00915A"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.25" Color="#00915A"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                              Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                            
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Title -->
                                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                           Text="{Binding Item.Titre}" 
                                                           FontWeight="Bold" FontSize="16" TextWrapping="Wrap"
                                                           Foreground="#1A1919" Margin="0,0,0,12" LineHeight="22"/>

                                                <!-- Badges Row -->
                                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,12">
                                                    <!-- Type Badge -->
                                                    <Border Background="#E3F2FD" CornerRadius="6" Padding="10,5" Margin="0,0,8,0">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.15" Color="#1976D2"/>
                                                        </Border.Effect>
                                                        <TextBlock FontSize="11" FontWeight="Bold" Foreground="#1976D2">
                                                            <Run Text="ðŸ“"/>
                                                            <Run Text="{Binding Item.TypeDemande}"/>
                                                        </TextBlock>
                                                    </Border>

                                                    <!-- Priorite Badge -->
                                                    <Border CornerRadius="6" Padding="10,5" Margin="0,0,8,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.15" Color="#F57C00"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Item.Priorite}" Value="Urgente">
                                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                                        <Setter Property="Effect">
                                                                            <Setter.Value>
                                                                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.2" Color="#C62828"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Priorite}" Value="Haute">
                                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Item.Priorite}" Value="Normale">
                                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                                        <Setter Property="Effect">
                                                                            <Setter.Value>
                                                                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.15" Color="#2E7D32"/>
                                                                            </Setter.Value>
