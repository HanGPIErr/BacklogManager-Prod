<UserControl x:Class="BacklogManager.Views.BacklogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BacklogManager.Domain"
             Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Search and List -->
        <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="15" Margin="0,0,15,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15" Color="#00915A"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" Text="ðŸ“‹ BACKLOG" FontSize="18" FontWeight="Bold" 
                           Foreground="#1A1919" Margin="0,0,0,15"/>

                <!-- Search Bar -->
                <StackPanel Grid.Row="0" Margin="0,35,0,15">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14"
                             BorderBrush="#00915A" BorderThickness="2">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Text="ðŸ” Rechercher..." Margin="12,-32,0,0" IsHitTestVisible="False" 
                               Foreground="#6D6D6D" FontSize="14">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Filters -->
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Filtres" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                    
                    <ComboBox ItemsSource="{Binding Source={x:Type local:TypeDemande}, Converter={StaticResource EnumToCollectionConverter}}"
                              SelectedItem="{Binding SelectedType}" Margin="0,5" Padding="5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding Source={x:Type local:Priorite}, Converter={StaticResource EnumToCollectionConverter}}"
                              SelectedItem="{Binding SelectedPriorite}" Margin="0,5" Padding="5"/>
                    
                    <ComboBox ItemsSource="{Binding Source={x:Type local:Statut}, Converter={StaticResource EnumToCollectionConverter}}"
                              SelectedItem="{Binding SelectedStatut}" Margin="0,5" Padding="5"/>
                    
                    <ComboBox ItemsSource="{Binding Devs}" DisplayMemberPath="Nom"
                              SelectedValue="{Binding SelectedDevId}" SelectedValuePath="Id" 
                              Margin="0,5" Padding="5"/>

                    <ComboBox ItemsSource="{Binding Projets}" DisplayMemberPath="Nom"
                              SelectedValue="{Binding SelectedProjetId}" SelectedValuePath="Id" 
                              Margin="0,5" Padding="5"/>

                    <Button Content="Effacer les filtres" Command="{Binding ClearFiltersCommand}"
                            Padding="8,5" Margin="0,10,0,0" Background="#E0E0E0" BorderThickness="0"
                            FontSize="12" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="âž• Nouveau Projet" Command="{Binding NewProjetCommand}"
                            Visibility="{Binding PeutCreerProjetsVisibility}"
                            Padding="8,5" Margin="0,5,0,0" Background="#00915A" Foreground="White" BorderThickness="0"
                            FontSize="12" FontWeight="Bold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007A4A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="+ Nouvelle tÃ¢che" Command="{Binding NewCommand}"
                            Visibility="{Binding PeutCreerTachesVisibility}"
                            Padding="10,8" Margin="0,10,0,0" Background="#00915A" Foreground="White"
                            BorderThickness="0" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007A4D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- List -->
                <ListBox Grid.Row="2" ItemsSource="{Binding BacklogItems}" 
                         SelectedItem="{Binding SelectedItem}"
                         Background="White" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                    CornerRadius="4" Padding="8" Margin="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="{Binding Item.Titre}" FontWeight="Bold" FontSize="13" TextWrapping="Wrap"/>
                                    <TextBlock Grid.Row="1" Text="{Binding Item.Priorite}" Foreground="#FF5722" FontSize="11" Margin="0,2,0,0"/>
                                    
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="ðŸ‘¤ Dev: " FontSize="11" Foreground="#6D6D6D"/>
                                        <TextBlock Text="{Binding DevNom}" FontSize="11" Foreground="#00915A" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right Panel: Details -->
        <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="6" Padding="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="Gray"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditMode}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="DÃ©tails de la tÃ¢che" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="Titre" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding SelectedItem.Titre, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" FontSize="14" BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <TextBlock Text="Description" FontWeight="Bold" Margin="0,10,0,2"/>
                    <TextBox Text="{Binding SelectedItem.Description, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" FontSize="14" Height="100" TextWrapping="Wrap" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <TextBlock Text="Type de demande" FontWeight="Bold" Margin="0,10,0,2"/>
                    <ComboBox ItemsSource="{Binding Source={x:Type local:TypeDemande}, Converter={StaticResource EnumToCollectionConverter}}"
                              SelectedItem="{Binding SelectedItem.TypeDemande}" Padding="8"/>

                    <TextBlock Text="PrioritÃ©" FontWeight="Bold" Margin="0,10,0,2"
                               Visibility="{Binding PeutPrioriserVisibility}"/>
                    <ComboBox ItemsSource="{Binding Source={x:Type local:Priorite}, Converter={StaticResource EnumToCollectionConverter}}"
                              SelectedItem="{Binding SelectedItem.Priorite}" Padding="8"
                              Visibility="{Binding PeutPrioriserVisibility}"/>

                    <TextBlock Text="Statut" FontWeight="Bold" Margin="0,10,0,2"/>
                    <ComboBox ItemsSource="{Binding Source={x:Type local:Statut}, Converter={StaticResource EnumToCollectionConverter}}"
                              SelectedItem="{Binding SelectedItem.Statut}" Padding="8"/>

                    <TextBlock Text="Dev AssignÃ©" FontWeight="Bold" Margin="0,10,0,2"
                               Visibility="{Binding PeutAssignerDevVisibility}"/>
                    <ComboBox ItemsSource="{Binding Devs}" DisplayMemberPath="Nom"
                              SelectedValue="{Binding SelectedItem.DevAssigneId}" SelectedValuePath="Id"
                              Padding="8"
                              Visibility="{Binding PeutAssignerDevVisibility}"/>                    <TextBlock Text="Projet" FontWeight="Bold" Margin="0,10,0,2"/>
                    <ComboBox ItemsSource="{Binding Projets}" DisplayMemberPath="Nom"
                              SelectedValue="{Binding SelectedItem.ProjetId}" SelectedValuePath="Id" 
                              Padding="8"/>

                    <TextBlock Text="ComplexitÃ© (Story Points)" FontWeight="Bold" Margin="0,10,0,2"
                               Visibility="{Binding PeutChiffrerVisibility}"/>
                    <ComboBox ItemsSource="{Binding ComplexiteValues}"
                              SelectedValue="{Binding SelectedItem.Complexite, UpdateSourceTrigger=PropertyChanged}"
                              Padding="8" FontSize="14" BorderBrush="#CCCCCC" BorderThickness="1"
                              Visibility="{Binding PeutChiffrerVisibility}"/>

                    <TextBlock Text="Date de fin attendue" FontWeight="Bold" Margin="0,10,0,2"/>
                    <DatePicker SelectedDate="{Binding SelectedItem.DateFinAttendue, UpdateSourceTrigger=PropertyChanged}"
                                Padding="8" FontSize="14" BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <Button Content="ðŸ’¾ Enregistrer" Command="{Binding SaveCommand}"
                            Visibility="{Binding PeutModifierTachesVisibility}"
                            Padding="12,8" Margin="0,20,0,0" Background="#2196F3" Foreground="White"
                            BorderThickness="0" FontSize="14" FontWeight="Bold" Cursor="Hand"
                            HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3" Color="Gray"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
