<Application x:Class="BacklogManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:BacklogManager.Domain"
             xmlns:shared="clr-namespace:BacklogManager.Shared">
    <Application.Resources>
        <local:EnumToCollectionConverter x:Key="EnumToCollectionConverter"/>
        <shared:ProgressWidthConverter x:Key="ProgressWidthConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <shared:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        
        <!-- BNP Paribas Branding Colors -->
        <SolidColorBrush x:Key="BNPGreenBrush" Color="#00915A"/>
        <SolidColorBrush x:Key="BNPDarkBrush" Color="#1A1919"/>
        <SolidColorBrush x:Key="BNPLightGrayBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="BNPGrayBrush" Color="#6D6D6D"/>
        <SolidColorBrush x:Key="BNPWhiteBrush" Color="#FFFFFF"/>
        
        <!-- Button Style with BNP Branding -->
        <Style x:Key="BNPButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BNPGreenBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource BNPWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007A4D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#006341"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
