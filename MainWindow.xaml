<Window x:Class="BacklogManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BacklogManager.Views"
        xmlns:vm="clr-namespace:BacklogManager.ViewModels"
        Title="BNP Paribas - Backlog Manager" Height="750" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ProjetsViewModel}">
            <views:ProjetsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BacklogViewModel}">
            <views:BacklogView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:KanbanViewModel}">
            <views:KanbanView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PokerViewModel}">
            <views:PokerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TimelineViewModel}">
            <views:TimelineView/>
        </DataTemplate>
        
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,18"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,4,0"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007A4D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#006341"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Menu with BNP Branding -->
        <Border Grid.Column="0" Background="#1A1919" Padding="0">
            <StackPanel>
                <!-- BNP Header -->
                <Border Background="#00915A" Padding="20,25">
                    <StackPanel>
                        <TextBlock Text="BNP PARIBAS" FontSize="18" FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Backlog Manager" FontSize="13" 
