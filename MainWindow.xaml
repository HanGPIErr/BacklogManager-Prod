<Window x:Class="BacklogManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BacklogManager.Views"
        xmlns:vm="clr-namespace:BacklogManager.ViewModels"
        Title="BNP Paribas - Backlog Manager" Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Icon="/Images/backlogmanager.ico">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ProjetsViewModel}">
            <views:ProjetsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BacklogViewModel}">
            <views:BacklogView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:KanbanViewModel}">
            <views:KanbanView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PokerViewModel}">
            <views:PokerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TimelineViewModel}">
            <views:TimelineView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ArchivesViewModel}">
            <views:ArchivesView/>
        </DataTemplate>
        
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,18"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,4,0"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007A4D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#006341"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Menu with BNP Branding -->
        <Border Grid.Column="0" Background="#1A1919" Padding="0">
            <StackPanel>
                <!-- BNP Header -->
                <Border Background="#00915A" Padding="20,25">
                    <StackPanel>
                        <Image Source="/Images/logobnp.png" Height="40" Width="180" 
                               Stretch="Uniform" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                        <TextBlock Text="Backlog Manager" FontSize="13" 
                                   Foreground="White" Margin="0,0,0,0" Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Utilisateur connectÃ© (compact) -->
                <Border Background="#2A2A2A" Padding="12,10" Margin="15,15,15,0" CornerRadius="4">
                    <StackPanel>
                        <TextBlock x:Name="TxtUtilisateurConnecte" Text="ðŸ‘¤ Han GP" 
                                   Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtRoleUtilisateur" Text="ðŸ“Š DÃ©veloppeur" 
                                   Foreground="#999999" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- SECTION : VUES -->
                <TextBlock Text="VUES" FontSize="10" FontWeight="Bold" 
                           Foreground="#666666" Margin="20,25,0,8" Opacity="0.7"/>

                <Button Content="ðŸ  Dashboard" x:Name="BtnDashboard"
                        Style="{StaticResource MenuButtonStyle}" Margin="0,0,0,0"
                        Click="BtnDashboard_Click"/>

                <Button x:Name="BtnBacklog" Content="ðŸ“‹ Backlog"
                        Style="{StaticResource MenuButtonStyle}" Margin="0,4,0,0"
                        Click="BtnBacklog_Click"/>
                
                <Button x:Name="BtnKanban" Content="ðŸŽ¯ Kanban"
                        Style="{StaticResource MenuButtonStyle}" Margin="0,4,0,0"
                        Click="BtnKanban_Click"/>

                <!-- SECTION : TEMPS & CRA -->
                <TextBlock Text="TEMPS &amp; CRA" FontSize="10" FontWeight="Bold" 
                           Foreground="#666666" Margin="20,20,0,8" Opacity="0.7"/>

                <Button x:Name="BtnSaisirCRA" Content="â±ï¸ Saisir CRA" 
                        Style="{StaticResource MenuButtonStyle}" Margin="0,0,0,0"
                        Click="BtnSaisirCRA_Click"/>

                <!-- SECTION : ADMIN -->
                <TextBlock Text="ADMINISTRATION" FontSize="10" FontWeight="Bold" 
                           Foreground="#666666" Margin="20,20,0,8" Opacity="0.7"
                           x:Name="AdminSectionTitle"/>

                <Button x:Name="BtnTimeline" Content="ðŸ“Š Suivi CRA"
                        Style="{StaticResource MenuButtonStyle}" Margin="0,0,0,0"
                        Click="BtnTimeline_Click"/>

                <!-- SECTION : ACTIONS -->
                <TextBlock Text="ACTIONS" FontSize="10" FontWeight="Bold" 
                           Foreground="#666666" Margin="20,20,0,8" Opacity="0.7"/>

                <Button x:Name="BtnDemandes" Content="ðŸ“ Demandes" 
                        Style="{StaticResource MenuButtonStyle}" Margin="0,0,0,0"
                        Click="BtnDemandes_Click"/>

                <!-- Notifications avec badge -->
                <Grid Margin="0,4,0,0">
                    <Button x:Name="BtnNotifications" Content="ðŸ”” Notifications" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="BtnNotifications_Click"/>
                    <Border x:Name="BadgeNotifications" Background="#D32F2F" CornerRadius="10" 
                            Padding="6,2" Margin="0,5,15,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Visibility="Collapsed">
                        <TextBlock x:Name="TxtBadgeCount" Text="0" FontSize="10" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- SECTION : ADMINISTRATION -->
                <TextBlock x:Name="TxtHeaderAdmin" Text="ADMINISTRATION" FontSize="10" FontWeight="Bold" 
                           Foreground="#666666" Margin="20,20,0,8" Opacity="0.7"/>

                <Button x:Name="BtnAdmin" Content="âš™ï¸ Administration" 
                        Style="{StaticResource MenuButtonStyle}" Margin="0,0,0,0"
                        Click="BtnAdmin_Click"/>
                
                <Button x:Name="BtnStatistiques" Content="ðŸ“Š Statistiques" 
                        Style="{StaticResource MenuButtonStyle}" Margin="0,4,0,0"
                        Click="BtnStatistiques_Click"/>
                
                <Button x:Name="BtnParametres" Content="âš™ï¸ ParamÃ¨tres" 
                        Style="{StaticResource MenuButtonStyle}" Margin="0,4,0,0"
                        Click="BtnParametres_Click"/>

                <!-- Projets Info (en bas) -->
                <Border Margin="15,40,15,0" Background="#2A2A2A" Padding="12" CornerRadius="4">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="ðŸ“ PROJETS" FontSize="11" FontWeight="Bold" 
                                       Foreground="#00915A" Margin="0,0,0,8" VerticalAlignment="Center"/>
                            <Button Content="âš™ï¸" ToolTip="GÃ©rer les projets"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                                    Background="#00915A" Foreground="White" 
                                    BorderThickness="0" Padding="6" Cursor="Hand"
                                    FontSize="12" Width="26" Height="26"
                                    Click="BtnGererProjets_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007A4D"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        <TextBlock x:Name="TxtNbProjets" Text="0 projet(s) actif(s)" 
                                   Foreground="#999" FontSize="11"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="White">
            <ContentControl x:Name="MainContentControl" Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>
