                <!-- Team Info -->
                <Border Margin="15,40,15,0" Background="#2A2A2A" Padding="12" CornerRadius="4">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="ðŸ§‘â€ðŸ’¼ Ã‰QUIPE" FontSize="11" FontWeight="Bold" 
